{
  String length="";
  int c;
  while ((c=reader.read()) != -1 && c != ApplicationConstants.WEBSOCKET_MESSAGE_DELIMITER) {
    length+=(char)c;
  }
  try {
    messageLength=Integer.parseInt(length);
  }
 catch (  NumberFormatException e) {
    throw new IOException("Invalid message length " + length,e);
  }
}
