{
  Scheduler.get().scheduleDeferred(new ScheduledCommand(){
    @Override public void execute(){
      if (showRowHeaders) {
        setCellWidth(0,tHead.getHeaderCell(0).getWidth());
        calcAndSetSpanWidthOnCell(1);
      }
 else {
        calcAndSetSpanWidthOnCell(0);
      }
    }
  }
);
}
