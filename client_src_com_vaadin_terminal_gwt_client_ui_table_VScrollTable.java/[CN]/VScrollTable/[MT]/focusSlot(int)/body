{
  removeSlotFocus();
  if (index > 0) {
    DOM.setElementProperty(DOM.getFirstChild(DOM.getChild(tr,index - 1)),"className",CLASSNAME + "-resizer " + CLASSNAME+ "-focus-slot-right");
  }
 else {
    DOM.setElementProperty(DOM.getFirstChild(DOM.getChild(tr,index)),"className",CLASSNAME + "-resizer " + CLASSNAME+ "-focus-slot-left");
  }
  focusedSlot=index;
}
