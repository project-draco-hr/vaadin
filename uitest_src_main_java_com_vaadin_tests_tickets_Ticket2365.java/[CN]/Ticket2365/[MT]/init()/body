{
  final LegacyWindow mainWin=new LegacyWindow(getClass().getSimpleName());
  setMainWindow(mainWin);
  VerticalLayout lo=new VerticalLayout();
  lo.setSizeFull();
  mainWin.setContent(lo);
  final Panel p=createMultilevelPanel(5,(Panel)null);
  Button b=new Button("Toggle parent level size");
  lo.addComponent(b);
  b.addListener(new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      if (p.getWidth() > 0) {
        p.setSizeUndefined();
      }
 else {
        p.setSizeFull();
      }
    }
  }
);
  lo.addComponent(p);
  lo.setExpandRatio(p,1);
}
