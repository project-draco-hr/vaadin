{
  if (isOnUnloadRequest(request)) {
    return;
  }
  try {
    Application.SystemMessages ci=getSystemMessages();
    if (getRequestType(request) != RequestType.UIDL) {
      if (response instanceof ActionResponse) {
        ((ActionResponse)response).sendRedirect(ci.getSessionExpiredURL());
      }
 else {
      }
    }
 else {
      request.getPortletSession().invalidate();
      criticalNotification(request,(ResourceResponse)response,ci.getSessionExpiredCaption(),ci.getSessionExpiredMessage(),null,ci.getSessionExpiredURL());
    }
  }
 catch (  SystemMessageException ee) {
    throw new PortletException(ee);
  }
}
