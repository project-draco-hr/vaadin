{
  waitUntil(new ExpectedCondition<Boolean>(){
    @Override public Boolean apply(    WebDriver arg0){
      if (isRequired(dateField)) {
        List<WebElement> elements=dateField.findElements(locator);
        return !elements.isEmpty();
      }
      return false;
    }
    @Override public String toString(){
      return "dateField to become required and presence of element located by: " + locator;
    }
  }
);
}
