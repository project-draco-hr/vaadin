{
  setSpacing(true);
  VerticalLayout vl=new VerticalLayout();
  Label l=new Label("Push the button to toggle style.");
  Button b=new Button("Toggle style");
  b.addListener(this);
  vl.setSpacing(true);
  vl.addComponent(l);
  vl.addComponent(b);
  p=new Panel("This is a light Panel");
  p.setStyleName("light");
  p.setLayout(vl);
  addComponent(p);
}
