{
  boolean changed=false;
  ComponentConnector connector=ConnectorMap.get(connection).getConnector(this);
  if (width != newWidth) {
    width=newWidth;
    changed=true;
    connector.getLayoutManager().reportOuterWidth(connector,newWidth);
    VConsole.log("New window width: " + width);
  }
  if (height != newHeight) {
    height=newHeight;
    connector.getLayoutManager().reportOuterHeight(connector,newHeight);
    changed=true;
    VConsole.log("New window height: " + height);
  }
  if (changed) {
    VConsole.log("Running layout functions due to window resize");
    sendClientResized();
    connector.getLayoutManager().layoutNow();
  }
}
