{
  boolean changed=false;
  if (width != newWidth) {
    width=newWidth;
    changed=true;
    VConsole.log("New window width: " + width);
  }
  if (height != newHeight) {
    height=newHeight;
    changed=true;
    VConsole.log("New window height: " + height);
  }
  if (changed) {
    VConsole.log("Running layout functions due to window resize");
    sendClientResized();
    connection.doLayout(false);
  }
}
