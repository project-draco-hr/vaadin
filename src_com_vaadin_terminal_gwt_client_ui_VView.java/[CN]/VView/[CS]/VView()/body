{
  super();
  setStyleName(CLASSNAME);
  getElement().setTabIndex(-1);
  TouchScrollDelegate.enableTouchScrolling(this,getElement());
  RootPanel.get().addDomHandler(new KeyDownHandler(){
    public void onKeyDown(    KeyDownEvent event){
      Event nativeEvent=event.getNativeEvent().cast();
      com.google.gwt.user.client.Element target=nativeEvent.getEventTarget().cast();
      if (actionHandler != null && (!isEmbedded() || (Util.getPaintableForElement(connection,getParent(),target) != null))) {
        actionHandler.handleKeyboardEvent(nativeEvent);
      }
    }
  }
,KeyDownEvent.getType());
}
