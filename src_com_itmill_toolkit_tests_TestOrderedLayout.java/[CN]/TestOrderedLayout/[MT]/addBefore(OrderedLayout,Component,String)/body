{
  int index=0;
  Iterator iter=ol.getComponentIterator();
  while (iter.hasNext()) {
    if (iter.next() == c) {
      break;
    }
    index++;
  }
  OrderedLayout inner=createAddRemove(ol,width,String.valueOf(suffix++));
  ol.addComponent(inner,index);
  if (width.contains("%")) {
    ol.setExpandRatio(inner,1.0f);
  }
  ol.setComponentAlignment(inner,OrderedLayout.ALIGNMENT_RIGHT,OrderedLayout.ALIGNMENT_BOTTOM);
}
