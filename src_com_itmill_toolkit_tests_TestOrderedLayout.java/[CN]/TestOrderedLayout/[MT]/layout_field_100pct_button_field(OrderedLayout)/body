{
  ol.setHeight("500px");
  ol.setWidth("916px");
  ol.setMargin(false);
  ol.setSpacing(true);
  ol.setCaption("Fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px) / layout_field_100pct_button_field");
  TextField tf;
  tf=new TextField("300px x 300px Field");
  tf.setValue("300x300 field");
  tf.setRows(2);
  tf.setHeight("300px");
  tf.setWidth("300px");
  ol.setComponentAlignment(tf,OrderedLayout.ALIGNMENT_LEFT,OrderedLayout.ALIGNMENT_TOP);
  ol.addComponent(tf);
  Button b;
  b=new Button("This is a 100%x50% valign middle button");
  b.setSizeFull();
  b.setHeight("50%");
  ol.addComponent(b);
  ol.setExpandRatio(b,1.0f);
  ol.setComponentAlignment(b,AlignmentHandler.ALIGNMENT_RIGHT,AlignmentHandler.ALIGNMENT_VERTICAL_CENTER);
  tf=new TextField("300px x 300px Field");
  tf.setValue("300x300 field");
  tf.setRows(2);
  tf.setHeight("300px");
  tf.setWidth("300px");
  ol.setComponentAlignment(tf,OrderedLayout.ALIGNMENT_RIGHT,OrderedLayout.ALIGNMENT_BOTTOM);
  ol.addComponent(tf);
  return ol;
}
