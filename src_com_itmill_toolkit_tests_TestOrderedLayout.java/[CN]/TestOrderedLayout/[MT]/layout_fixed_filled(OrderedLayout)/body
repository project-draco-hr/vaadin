  ol.addComponent(tf);
  ol.setExpandRatio(tf,1f);
  ol.setComponentAlignment(tf,AlignmentHandler.ALIGNMENT_LEFT,AlignmentHandler.ALIGNMENT_VERTICAL_CENTER);
  tf.setRows(2);
  tf=new TextField("200px x 200px Field");
