{
  if (numberOfColumns < 1) {
    throw new IllegalArgumentException("Number of columns can't be less than 1 (was " + numberOfColumns + ")");
  }
  if (offset < 0 || offset + numberOfColumns > getColumnCount()) {
    throw new IndexOutOfBoundsException("The given " + "column range (" + offset + ".."+ (offset + numberOfColumns)+ ") was outside of the current "+ "number of columns ("+ getColumnCount()+ ")");
  }
}
