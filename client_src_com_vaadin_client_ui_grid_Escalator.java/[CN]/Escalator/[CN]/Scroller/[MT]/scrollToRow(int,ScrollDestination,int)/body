{
  final int targetStartPx=body.getDefaultRowHeight() * rowIndex;
  final int targetEndPx=targetStartPx + body.getDefaultRowHeight();
  final double viewportStartPx=getScrollTop();
  final double viewportEndPx=viewportStartPx + body.calculateHeight();
  final double scrollTop=getScrollPos(destination,targetStartPx,targetEndPx,viewportStartPx,viewportEndPx,padding);
  setScrollTop(scrollTop);
}
