{
  StringBuffer sb=new StringBuffer();
  sb.append(classToTest.getName().replace("com.itmill.toolkit.ui.",""));
  sb.append("[");
  for (Iterator i=configurations.iterator(); i.hasNext(); ) {
    sb.append(((Configuration)i.next()).getDescription());
    if (i.hasNext()) {
      sb.append(",");
    }
  }
  sb.append("]");
  return sb.toString();
}
