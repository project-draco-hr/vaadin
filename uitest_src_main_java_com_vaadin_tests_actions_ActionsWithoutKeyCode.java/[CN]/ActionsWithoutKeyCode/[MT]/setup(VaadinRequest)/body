{
  LegacyTextField tf=new LegacyTextField();
  tf.setWidth("100%");
  tf.setInputPrompt("Enter text with ??,?? or ?? or press windows key while textfield is focused");
  addComponent(tf);
  addActionHandler(new Action.Handler(){
    private Action[] actions;
{
      actions=new Action[]{new Action("test1")};
    }
    @Override public Action[] getActions(    Object target,    Object sender){
      return actions;
    }
    @Override public void handleAction(    Action action,    Object sender,    Object target){
      log("action " + action.getCaption() + " triggered by "+ sender.getClass().getSimpleName()+ " on "+ target.getClass().getSimpleName());
    }
  }
);
}
