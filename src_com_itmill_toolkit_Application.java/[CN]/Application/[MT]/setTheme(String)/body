{
  LinkedList toBeUpdated=new LinkedList();
  String myTheme=this.getTheme();
  for (Iterator i=getWindows().iterator(); i.hasNext(); ) {
    Window w=(Window)i.next();
    String windowTheme=w.getTheme();
    if ((windowTheme == null) || (!theme.equals(windowTheme) && windowTheme.equals(myTheme))) {
      toBeUpdated.add(w);
    }
  }
  this.theme=theme;
  for (Iterator i=toBeUpdated.iterator(); i.hasNext(); )   ((Window)i.next()).requestRepaint();
}
