{
  final String iconUri=uidl.hasAttribute(AbstractComponentConnector.ATTRIBUTE_ICON) ? uidl.getStringAttribute(AbstractComponentConnector.ATTRIBUTE_ICON) : null;
  if (iconUri == null) {
    if (icon != null) {
      DOM.removeChild(captionNode,icon.getElement());
      icon=null;
    }
  }
 else {
    if (icon == null) {
      icon=new Icon(client);
      DOM.insertChild(captionNode,icon.getElement(),0);
    }
    icon.setUri(iconUri);
  }
}
