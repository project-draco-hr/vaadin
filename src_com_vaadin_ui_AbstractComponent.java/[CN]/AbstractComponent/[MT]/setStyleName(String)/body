{
  if (style == null || "".equals(style)) {
    styles=null;
    requestRepaint();
    return;
  }
  if (styles == null) {
    styles=new ArrayList<String>();
  }
  styles.clear();
  String[] styleParts=style.split(" +");
  for (  String part : styleParts) {
    if (part.length() > 0) {
      styles.add(part);
    }
  }
  requestRepaint();
}
