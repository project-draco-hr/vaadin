{
  Root w=new Root(getClass().getName());
  setMainWindow(w);
  GridLayout layout=new GridLayout(2,2);
  layout.setSpacing(true);
  TextField f1=new TextField("Non-immediate/Long text field",new MethodProperty<Long>(this,"long1"));
  f1.setImmediate(false);
  f1.setNullSettingAllowed(true);
  TextField f2=new TextField("Immediate/Long text field",new MethodProperty<Long>(this,"long2"));
  f2.setImmediate(true);
  f2.setNullSettingAllowed(true);
  layout.addComponent(f1);
  layout.addComponent(f2);
  w.setContent(layout);
}
