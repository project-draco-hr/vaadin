{
  if (useLazyLoading != isLazyLoading()) {
    if (useLazyLoading) {
      optionsStream=new OptionsStream(this);
      Application app=getApplication();
      if (app != null)       app.getMainWindow().addURIHandler(optionsStream);
    }
 else {
      if (getApplication() != null)       getWindow().removeURIHandler(optionsStream);
      optionsStream=null;
    }
    requestRepaint();
  }
}
