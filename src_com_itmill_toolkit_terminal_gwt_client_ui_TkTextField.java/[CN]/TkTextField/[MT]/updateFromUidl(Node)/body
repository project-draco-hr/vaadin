{
  NodeList children=n.getChildNodes();
  String text="";
  String description=null;
  for (int i=0; i < children.getLength(); i++) {
    Node child=children.item(i);
    if (child.getNodeName().equals("description"))     description=child.getNodeValue();
 else     if (child.getNodeType() == Node.TEXT_NODE)     text=child.toString();
  }
  NamedNodeMap attributes=n.getAttributes();
  Node caption=attributes.getNamedItem("caption");
  if (caption != null)   text=caption.getNodeValue();
  tb.setText(text);
  if (description != null)   tb.setTitle(description);
}
