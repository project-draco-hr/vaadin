{
  this.client=client;
  id=uidl.getId();
  if (uidl.hasAttribute("caption"))   caption.setText(uidl.getStringAttribute("caption"));
 else   caption.setVisible(false);
  if (uidl.hasAttribute("rows")) {
    TextArea ta=new TextArea();
    field=ta;
    if (uidl.hasAttribute("cols"))     ta.setWidth(uidl.getStringAttribute("cols") + "em");
    ta.setHeight(uidl.getStringAttribute("height") + "em");
  }
 else {
    TextBox tb=new TextBox();
    field=tb;
    if (uidl.hasAttribute("cols"))     tb.setWidth(uidl.getStringAttribute("cols") + "em");
  }
  p.add(field);
}
