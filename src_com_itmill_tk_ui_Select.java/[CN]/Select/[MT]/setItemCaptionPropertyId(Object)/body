{
  if (propertyId != null) {
    itemCaptionPropertyId=propertyId;
    setItemCaptionMode(ITEM_CAPTION_MODE_PROPERTY);
    requestRepaint();
  }
 else {
    itemCaptionPropertyId=null;
    if (getItemCaptionMode() == ITEM_CAPTION_MODE_PROPERTY)     setItemCaptionMode(ITEM_CAPTION_MODE_EXPLICIT_DEFAULTS_ID);
    requestRepaint();
  }
}
