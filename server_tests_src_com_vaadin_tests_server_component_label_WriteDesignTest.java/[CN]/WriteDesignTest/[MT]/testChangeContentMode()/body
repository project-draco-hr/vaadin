{
  Label l=new Label("html label");
  l.setContentMode(ContentMode.HTML);
  Element e=new Element(Tag.valueOf("v-label"),"",new Attributes());
  l.writeDesign(e,ctx);
  assertFalse("Label should not be marked as plain text",e.hasAttr("plain-text"));
  l.setContentMode(ContentMode.TEXT);
  l.writeDesign(e,ctx);
  assertTrue("Label should be marked as plain text",e.hasAttr("plain-text"));
}
