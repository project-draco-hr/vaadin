{
  this.min=min;
  try {
    if ((new Double(getValue().toString())).doubleValue() < min)     super.setValue(new Double(min));
  }
 catch (  ClassCastException e) {
    super.setValue(new Double(min));
  }
  if (handleSize == -1)   handleSize=(int)((max - min) / max * 10 + (max - min) / 10);
  requestRepaint();
}
