{
  this.max=max;
  try {
    if ((new Float(getValue().toString())).floatValue() > max)     super.setValue(new Float(min));
  }
 catch (  ClassCastException e) {
    super.setValue(new Float(max));
  }
  if (handleSize == -1)   handleSize=(int)((max - min) / max * 10 + (max - min) / 10);
  requestRepaint();
}
