{
  super.paintContent(target);
  target.addAttribute("min",min);
  target.addAttribute("max",max);
  target.addAttribute("resolution",resolution);
  if (resolution > 0)   target.addVariable(this,"value",((Double)getValue()).doubleValue());
 else   target.addVariable(this,"value",((Double)getValue()).intValue());
  if (orientation == ORIENTATION_VERTICAL)   target.addAttribute("vertical",true);
  if (arrows)   target.addAttribute("arrows",true);
  if (size > -1)   target.addAttribute("size",size);
  target.addAttribute("hsize",handleSize);
}
