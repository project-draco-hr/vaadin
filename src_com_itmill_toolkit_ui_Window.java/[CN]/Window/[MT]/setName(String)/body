{
  if (getApplication() != null)   throw new IllegalStateException("Window name can not be changed while " + "the window is in application");
  if (name != null)   for (int i=0; i < name.length(); i++) {
    char c=name.charAt(i);
    if (!(('a' <= c && c <= 'z') || ('A' <= c && c <= 'Z') || ('0' <= c && c <= '9')))     throw new IllegalArgumentException("Window name can contain " + "only a-z, A-Z and 0-9 characters: '" + name + "' given.");
  }
  this.name=name;
}
