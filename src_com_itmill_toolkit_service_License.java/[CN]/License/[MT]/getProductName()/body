{
  Element prod=(Element)licenseXML.getElementsByTagName("product").item(0);
  if (prod == null)   throw new InvalidLicenseFile("product not found in license-file");
  String name=getTextContent(((Element)prod.getElementsByTagName("name").item(0)));
  if (name == null || name.length() == 0)   throw new InvalidLicenseFile("product name not found in license-file");
  return name;
}
