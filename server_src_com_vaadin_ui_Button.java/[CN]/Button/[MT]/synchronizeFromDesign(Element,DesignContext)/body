{
  super.synchronizeFromDesign(design,designContext);
  Button def=designContext.getDefaultInstance(this.getClass());
  Attributes attr=design.attributes();
  String content=design.html();
  setCaption(content);
  setTabIndex(DesignAttributeHandler.readAttribute("tabindex",attr,def.getTabIndex(),Integer.class));
  setHtmlContentAllowed(!DesignAttributeHandler.readAttribute(DESIGN_ATTR_PLAIN_TEXT,attr,false,Boolean.class));
  setIconAlternateText(DesignAttributeHandler.readAttribute("icon-alt",attr,def.getIconAlternateText(),String.class));
  removeClickShortcut();
  ShortcutAction action=DesignAttributeHandler.readAttribute("click-shortcut",attr,null,ShortcutAction.class);
  if (action != null) {
    setClickShortcut(action.getKeyCode(),action.getModifiers());
  }
}
