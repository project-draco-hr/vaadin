{
  setSpacing(true);
  Button open=new Button("Open native window",new Button.ClickListener(){
    public void buttonClick(    ClickEvent event){
      Window window=new NativeWindow();
      getApplication().addWindow(window);
      getWindow().open(new ExternalResource(window.getURL()),"_blank",500,200,Window.BORDER_NONE);
    }
  }
);
  addComponent(open);
  Link openSampler=new Link("Open Sampler in a new window",new ExternalResource("#"),"_blank",700,500,Link.TARGET_BORDER_NONE);
  addComponent(openSampler);
}
