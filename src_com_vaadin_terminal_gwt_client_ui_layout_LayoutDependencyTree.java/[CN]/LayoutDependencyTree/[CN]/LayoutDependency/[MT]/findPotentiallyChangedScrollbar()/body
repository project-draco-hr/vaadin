{
  ComponentConnector currentConnector=connector;
  while (true) {
    ComponentContainerConnector parent=currentConnector.getParent();
    if (parent == null) {
      return null;
    }
    if (parent instanceof MayScrollChildren) {
      return getDependency(currentConnector,getOppositeDirection());
    }
    currentConnector=parent;
  }
}
