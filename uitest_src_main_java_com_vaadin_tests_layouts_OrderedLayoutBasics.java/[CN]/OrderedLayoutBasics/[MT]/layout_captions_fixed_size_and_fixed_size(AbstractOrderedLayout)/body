{
  ol.setWidth("700px");
  ol.setHeight("250px");
  ol.setMargin(false);
  ol.setSpacing(false);
  ol.setCaption("Caption test with fixed width");
  LegacyTextField tf;
  tf=new LegacyTextField("Short caption");
  tf.setValue("250px wide field");
  tf.setWidth("250px");
  tf.setComponentError(new UserError("123"));
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  tf=new LegacyTextField("A long caption which is probably much longer than the field");
  tf.setWidth("250px");
  tf.setValue("250px wide field");
  tf.setRequired(true);
  tf.setComponentError(new UserError("123"));
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  tf=new LegacyTextField("A very long caption which is probably much longer than the field and includes indicators");
  tf.setValue("200px wide field");
  tf.setWidth("200px");
  tf.setIcon(new ThemeResource("icons/16/document-add.png"));
  tf.setRequired(true);
  tf.setComponentError(new UserError("abc123"));
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  return ol;
}
