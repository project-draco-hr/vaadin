{
  HorizontalLayout ol=new HorizontalLayout();
  ol.setHeight("200px");
  ol.setWidth("");
  ol.setCaption("Fixed height (200px) and dynamic width");
  LegacyTextField tf=new LegacyTextField("100px high TextField, valign: bottom");
  tf.setHeight("100px");
  tf.setWidth("");
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_LEFT);
  ListSelect s=new ListSelect("100% high select");
  s.setMultiSelect(true);
  s.setHeight("100%");
  s.setWidth("");
  ol.addComponent(s);
  s=new ListSelect("200 px high select");
  s.setMultiSelect(true);
  s.setHeight("200px");
  s.setWidth("");
  ol.addComponent(s);
  return ol;
}
