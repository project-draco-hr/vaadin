{
  ol.setHeight("300px");
  ol.setWidth("700px");
  ol.setMargin(true);
  ol.setSpacing(true);
  ol.setCaption("OverFilled with fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px)");
  TextArea tf;
  for (int i=0; i < 5; i++) {
    tf=new TextArea("200x200px Field");
    tf.setCaption("This one has a caption");
    tf.setValue("200x200 TextField");
    tf.setWidth("200px");
    tf.setHeight("200px");
    tf.setRequired(true);
    tf.setRows(2);
    ol.addComponent(tf);
  }
  return ol;
}
