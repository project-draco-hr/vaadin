{
  boolean first=true;
  for (Iterator it=layout.getComponentIterator(); it.hasNext(); ) {
    Button b=(Button)it.next();
    String isOn=(b.getData() == mode ? "-on" : "");
    if (first) {
      first=false;
      b.setStyleName("first" + isOn);
    }
 else     if (!it.hasNext()) {
      b.setStyleName("last" + isOn);
    }
 else {
      b.setStyleName("mid" + isOn);
    }
  }
}
