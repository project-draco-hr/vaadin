{
  for (int i=0; i < sizeBar.getComponentCount(); i++) {
    setState(sizeBar,i,0);
  }
  for (int i=0; i < 3; i++) {
    SampleChild child=(SampleChild)currentLayout.getComponent(i);
    for (int j=0; j < child.getComponentCount(); j++) {
      if (j == 4) {
        setState(child,j,1);
      }
 else {
        setState(child,j,0);
      }
    }
  }
}
