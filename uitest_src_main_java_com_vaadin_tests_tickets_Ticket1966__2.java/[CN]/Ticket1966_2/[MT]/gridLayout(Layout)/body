{
  VerticalLayout pl=new VerticalLayout();
  pl.setMargin(true);
  Panel p=new Panel("GridLayout",pl);
  p.setWidth("500px");
  p.setHeight("500px");
  pl.setSizeFull();
  layout.addComponent(p);
  GridLayout gl=new GridLayout(1,4);
  gl.setMargin(true);
  gl.setCaption("Horizontal");
  gl.setWidth("100%");
  addButtons(gl);
  p.setContent(gl);
  gl=new GridLayout(4,1);
  gl.setMargin(true);
  gl.setHeight("100%");
  addButtons(gl);
  p.setContent(gl);
}
