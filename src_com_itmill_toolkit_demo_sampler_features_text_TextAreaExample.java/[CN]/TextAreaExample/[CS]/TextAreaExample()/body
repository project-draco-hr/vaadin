{
  setSpacing(true);
  plainText=new Label("Initial text.\n" + "\nPlease note that within a textarea," + "\nthe enter key will not dispatch the"+ "\nchanges to the server. To fire a"+ "\nvaluechange event, you must deactivate"+ "\nthe textarea.");
  plainText.setContentMode(Label.CONTENT_PREFORMATTED);
  editor.addListener(this);
  editor.setImmediate(true);
  editor.setColumns(20);
  editor.setRows(20);
  addComponent(editor);
  addComponent(plainText);
}
