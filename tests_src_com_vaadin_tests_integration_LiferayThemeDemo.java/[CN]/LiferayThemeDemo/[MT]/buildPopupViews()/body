{
  final GridLayout l=new GridLayout(1,1);
  l.setCaption("PopupViews");
  l.setMargin(true);
  l.setSpacing(true);
  l.setWidth("400px");
  Label content=new Label("Lorem ipsum dolor sit amet, consectetur adipiscing elit.");
  content.setWidth("200px");
  PopupView pw=new PopupView("Click me!",content);
  l.addComponent(pw);
  return l;
}
