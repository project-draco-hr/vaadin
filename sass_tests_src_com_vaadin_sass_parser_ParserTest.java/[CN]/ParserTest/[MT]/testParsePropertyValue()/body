{
  Parser parser=new Parser();
  LexicalUnit value=parser.parsePropertyValue(new InputSource(new StringReader("$margin/2;")));
  Assert.assertEquals("margin",value.getStringValue());
  Assert.assertEquals(SCSSLexicalUnit.SCSS_VARIABLE,value.getLexicalUnitType());
  value=value.getNextLexicalUnit();
  Assert.assertEquals(LexicalUnit.SAC_OPERATOR_SLASH,value.getLexicalUnitType());
  value=value.getNextLexicalUnit();
  Assert.assertEquals(LexicalUnit.SAC_INTEGER,value.getLexicalUnitType());
  Assert.assertEquals(2,value.getIntegerValue());
}
