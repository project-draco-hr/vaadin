{
  vaadinModality=modality;
  if (vaadinModality) {
    modalityCurtain=DOM.createDiv();
    DOM.setElementProperty(modalityCurtain,"className",CLASSNAME + "-modalitycurtain");
    if (isAttached()) {
      showModalityCurtain();
    }
    deferOrdering();
  }
 else {
    if (modalityCurtain != null) {
      if (isAttached()) {
        hideModalityCurtain();
      }
      modalityCurtain=null;
    }
  }
}
