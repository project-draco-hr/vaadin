{
  this.width=width;
  if (!isAttached()) {
    return;
  }
  if (width != null && !"".equals(width)) {
    int rootPixelWidth=-1;
    if (width.indexOf("px") < 0) {
      DOM.setStyleAttribute(getElement(),"width",width);
      rootPixelWidth=getElement().getOffsetWidth();
      width=rootPixelWidth + "px";
    }
 else {
      rootPixelWidth=Integer.parseInt(width.substring(0,width.indexOf("px")));
    }
    if (BrowserInfo.get().isIE6()) {
      getElement().getStyle().setProperty("overflow","hidden");
    }
    getElement().getStyle().setProperty("width",width);
    int contentAreaInnerWidth=rootPixelWidth - getContentAreaToRootDifference();
    if (contentAreaInnerWidth < MIN_CONTENT_AREA_WIDTH) {
      contentAreaInnerWidth=MIN_CONTENT_AREA_WIDTH;
      int rootWidth=contentAreaInnerWidth + getContentAreaToRootDifference();
      DOM.setStyleAttribute(getElement(),"width",rootWidth + "px");
    }
    if (BrowserInfo.get().isIE6()) {
      DOM.setStyleAttribute(contentPanel.getElement(),"width",contentAreaInnerWidth + "px");
    }
    renderSpace.setWidth(contentAreaInnerWidth);
    updateShadowSizeAndPosition();
  }
}
