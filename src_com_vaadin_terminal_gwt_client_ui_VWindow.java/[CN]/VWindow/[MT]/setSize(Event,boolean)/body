{
  if (!cursorInsideBrowserContentArea(event)) {
    return;
  }
  int w=Util.getTouchOrMouseClientX(event) - startX + origW;
  if (w < MIN_CONTENT_AREA_WIDTH) {
    w=MIN_CONTENT_AREA_WIDTH;
  }
  int h=Util.getTouchOrMouseClientY(event) - startY + origH;
  if (h < MIN_CONTENT_AREA_HEIGHT) {
    h=MIN_CONTENT_AREA_HEIGHT;
  }
  setWidth(w + "px");
  setHeight(h + "px");
  if (updateVariables) {
    client.updateVariable(id,"width",getWidget().getOffsetWidth(),false);
    client.updateVariable(id,"height",getWidget().getOffsetHeight(),immediate);
  }
  if (updateVariables || !resizeLazy) {
    updateContentsSize();
  }
 else {
    delayedContentsSizeUpdater.trigger();
  }
}
