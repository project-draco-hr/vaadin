{
  StringBuffer sb=new StringBuffer();
  if (up.isUploading()) {
    sb.append("Uploading...");
    sb.append(up.getBytesRead());
    sb.append("/");
    sb.append(up.getUploadSize());
    sb.append(" ");
    sb.append(Math.round(100 * up.getBytesRead() / (double)up.getUploadSize()));
    sb.append("%");
  }
 else {
    sb.append("Idle");
  }
  l.setValue(sb.toString());
  refreshMemUsage();
}
