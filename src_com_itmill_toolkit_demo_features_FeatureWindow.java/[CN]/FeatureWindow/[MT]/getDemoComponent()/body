{
  OrderedLayout l=new OrderedLayout();
  demoWindow=new Window("Feature Test Window");
  Panel show=new Panel("Test Window Control");
  ((OrderedLayout)show.getLayout()).setOrientation(OrderedLayout.ORIENTATION_HORIZONTAL);
  show.addComponent(addButton);
  show.addComponent(removeButton);
  updateWinStatus();
  l.addComponent(show);
  propertyPanel=new PropertyPanel(demoWindow);
  propertyPanel.dependsOn(addButton);
  propertyPanel.dependsOn(removeButton);
  windowProperties=propertyPanel.createBeanPropertySet(new String[]{"width","height","name","border","theme","scrollable","scrollOffsetX","scrollOffsetY"});
  windowProperties.replaceWithSelect("border",new Object[]{new Integer(Window.BORDER_DEFAULT),new Integer(Window.BORDER_NONE),new Integer(Window.BORDER_MINIMAL)},new Object[]{"Default","None","Minimal"});
  propertyPanel.addProperties("Window Properties",windowProperties);
  return l;
}
