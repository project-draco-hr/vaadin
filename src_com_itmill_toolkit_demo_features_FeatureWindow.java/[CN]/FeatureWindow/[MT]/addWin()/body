{
  getApplication().addWindow(demoWindow);
  demoWindow.removeAllComponents();
  demoWindow.addComponent(new Label("<br /><br />This is a new window created by <em>Add to " + "application</em> button's event.<br /><br />You may simply" + " close this window or select <em>Remove from"+ " application</em> from the Feature Browser window.",Label.CONTENT_XHTML));
  demoWindow.setVisible(true);
  updateWinStatus();
}
