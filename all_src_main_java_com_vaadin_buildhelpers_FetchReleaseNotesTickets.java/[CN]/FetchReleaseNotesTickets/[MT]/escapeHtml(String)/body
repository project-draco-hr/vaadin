{
  StringBuffer buf=new StringBuffer(string.length() * 2);
  for (int i=0; i < string.length(); ++i) {
    char ch=string.charAt(i);
    String charString=ch + "";
    if ((charString).matches("[a-zA-Z0-9., ]")) {
      buf.append(ch);
    }
 else {
      int charInt=ch;
      buf.append("&");
      buf.append("#");
      buf.append(charInt);
      buf.append(";");
    }
  }
  return buf.toString();
}
