{
  if (iconUrl != null) {
    if (icon == null) {
      icon=new Icon(client);
      Roles.getImgRole().set(icon.getElement());
      DOM.insertBefore(DOM.getFirstChild(nodeCaptionDiv),icon.getElement(),nodeCaptionSpan);
    }
    icon.setUri(iconUrl);
    icon.getElement().setAttribute("alt",altText);
  }
 else {
    if (icon != null) {
      DOM.removeChild(DOM.getFirstChild(nodeCaptionDiv),icon.getElement());
      icon=null;
    }
  }
}
