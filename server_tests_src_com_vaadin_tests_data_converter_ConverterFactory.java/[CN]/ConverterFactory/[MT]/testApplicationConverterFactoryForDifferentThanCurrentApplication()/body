{
  final VaadinSession fieldAppWithCustomIntegerConverter=new VaadinSession();
  fieldAppWithCustomIntegerConverter.setConverterFactory(new ConverterFactory42());
  VaadinSession.setCurrent(new VaadinSession());
  TextField tf=new TextField("","123"){
    @Override public VaadinSession getApplication(){
      return fieldAppWithCustomIntegerConverter;
    }
  }
;
  tf.setConverter(Integer.class);
  assertEquals(42,tf.getConvertedValue());
}
