{
  if (width == null) {
    int w=Util.getRequiredWidth(tb) + Util.getRequiredWidth(popupOpener);
    if (suggestionPopupMinWidth > w) {
      setTextboxWidth(suggestionPopupMinWidth);
      w=suggestionPopupMinWidth;
    }
    super.setWidth(w + "px");
  }
 else {
    setTextboxWidth(getMainWidth());
  }
}
