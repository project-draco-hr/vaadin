{
  if (width == null || width.equals("")) {
    this.width=null;
  }
 else {
    this.width=width;
  }
  super.setWidth(width);
  if (this.width != null) {
    int textboxWidth=getOffsetWidth() - getElementPadding() - popupOpener.getOffsetWidth();
    if (textboxWidth < 0) {
      textboxWidth=0;
    }
    tb.setWidth(textboxWidth + "px");
  }
}
