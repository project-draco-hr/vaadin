{
  if (cls.isAnnotationPresent(Ignore.class)) {
    return true;
  }
  if (cls.getEnclosingClass() != null && isTestClass(cls.getEnclosingClass())) {
    return true;
  }
  for (  Method method : cls.getMethods()) {
    if (method.isAnnotationPresent(Test.class)) {
      return true;
    }
  }
  return false;
}
