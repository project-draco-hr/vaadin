{
  cursorX=x;
  cursorY=y;
  if (x >= 0) {
    DOM.setStyleAttribute(lowercross.getElement(),"width",String.valueOf(x) + "px");
  }
  if (y >= 0) {
    DOM.setStyleAttribute(lowercross.getElement(),"top",String.valueOf(y) + "px");
  }
  if (y >= 0) {
    DOM.setStyleAttribute(lowercross.getElement(),"height",String.valueOf((background.getOffsetHeight() - y)) + "px");
  }
  if (x >= 0) {
    DOM.setStyleAttribute(highercross.getElement(),"width",String.valueOf((background.getOffsetWidth() - x)) + "px");
  }
  if (x >= 0) {
    DOM.setStyleAttribute(highercross.getElement(),"left",String.valueOf(x) + "px");
  }
  if (y >= 0) {
    DOM.setStyleAttribute(highercross.getElement(),"height",String.valueOf((y)) + "px");
  }
}
