{
  String text="";
  String description=null;
  NamedNodeMap attributes=n.getAttributes();
  Node caption=attributes.getNamedItem("caption");
  if (caption != null)   text=caption.getNodeValue();
  NodeList children=n.getChildNodes();
  for (int i=0; i < children.getLength(); i++) {
    Node child=children.item(i);
    String nName=child.getNodeName();
    if (nName.equals("description"))     description=child.getFirstChild().toString();
    if (nName.equals("boolean")) {
      state=(BooleanVariable)VariableFactory.getVariable(child,this);
      state.setImmediate(true);
    }
  }
  b.setText(text);
  if (description != null)   b.setTitle(description);
}
