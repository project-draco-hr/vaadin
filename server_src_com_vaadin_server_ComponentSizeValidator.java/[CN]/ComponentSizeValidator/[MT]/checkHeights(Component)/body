{
  try {
    if (!hasRelativeHeight(component)) {
      return true;
    }
    if (component instanceof Window) {
      return true;
    }
    if (component.getParent() == null) {
      return true;
    }
    return parentCanDefineHeight(component);
  }
 catch (  Exception e) {
    getLogger().log(Level.FINER,"An exception occurred while validating sizes.",e);
    return true;
  }
}
