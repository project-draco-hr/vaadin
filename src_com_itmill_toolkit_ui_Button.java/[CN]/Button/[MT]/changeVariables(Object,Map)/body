{
  if (isReadOnly()) {
    System.err.println("Button: ignoring variable change for" + " read-only component, caption=" + getCaption());
  }
 else   if (variables.containsKey("state")) {
    final Boolean newValue=(Boolean)variables.get("state");
    final Boolean oldValue=(Boolean)getValue();
    if (isSwitchMode()) {
      if (newValue != null && !newValue.equals(oldValue) && !isReadOnly()) {
        setValue(newValue);
        fireClick();
      }
    }
 else {
      if (newValue.booleanValue()) {
        fireClick();
      }
      if (oldValue.booleanValue()) {
        setValue(new Boolean(false));
      }
    }
  }
}
