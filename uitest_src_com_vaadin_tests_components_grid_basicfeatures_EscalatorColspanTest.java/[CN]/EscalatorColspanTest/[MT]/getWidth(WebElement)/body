{
  String widthString=element.getCssValue("width");
  if ("0".equals(widthString)) {
    return 0;
  }
 else   if (widthString.endsWith("px")) {
    return Integer.parseInt(widthString.substring(0,widthString.length() - 2));
  }
 else {
    throw new IllegalStateException("Element width expressed " + "in an unsupported format: " + widthString);
  }
}
