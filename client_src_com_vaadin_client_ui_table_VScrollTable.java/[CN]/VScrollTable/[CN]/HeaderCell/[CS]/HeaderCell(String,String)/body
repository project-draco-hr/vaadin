{
  cid=colId;
  setText(headerText);
  DOM.appendChild(td,colResizeWidget);
  DOM.setStyleAttribute(captionContainer,"overflow","visible");
  DOM.appendChild(td,captionContainer);
  DOM.sinkEvents(td,Event.MOUSEEVENTS | Event.ONDBLCLICK | Event.ONCONTEXTMENU| Event.TOUCHEVENTS);
  setElement(td);
  setAlign(ALIGN_LEFT);
}
