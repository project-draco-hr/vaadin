{
  cid=colId;
  setText(headerText);
  td.appendChild(colResizeWidget);
  captionContainer.getStyle().setOverflow(Overflow.VISIBLE);
  td.appendChild(sortIndicator);
  td.appendChild(captionContainer);
  DOM.sinkEvents(td,Event.MOUSEEVENTS | Event.ONDBLCLICK | Event.ONCONTEXTMENU| Event.TOUCHEVENTS);
  setElement(td);
  setAlign(ALIGN_LEFT);
}
