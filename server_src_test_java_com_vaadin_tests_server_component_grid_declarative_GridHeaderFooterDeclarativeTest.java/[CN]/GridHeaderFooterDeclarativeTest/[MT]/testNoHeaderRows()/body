{
  String design="<vaadin-legacy-grid><table>" + "<colgroup>" + "   <col sortable property-id='Column1'>"+ "</colgroup>"+ "<thead />"+ "</table></vaadin-legacy-grid>";
  LegacyGrid grid=new LegacyGrid();
  grid.addColumn("Column1",String.class);
  grid.removeHeaderRow(grid.getDefaultHeaderRow());
  testWrite(design,grid);
  testRead(design,grid,true);
}
