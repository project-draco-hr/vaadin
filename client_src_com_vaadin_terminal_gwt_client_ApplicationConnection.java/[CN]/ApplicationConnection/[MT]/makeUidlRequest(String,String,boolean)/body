{
  startRequest();
  final String payload=uidlSecurityKey + VAR_BURST_SEPARATOR + requestData;
  VConsole.log("Making UIDL Request with params: " + payload);
  String uri=translateVaadinUri(ApplicationConstants.APP_PROTOCOL_PREFIX + ApplicationConstants.UIDL_REQUEST_PATH);
  if (extraParams != null && extraParams.length() > 0) {
    uri=addGetParameters(uri,extraParams);
  }
  uri=addGetParameters(uri,ApplicationConstants.ROOT_ID_PARAMETER + "=" + configuration.getRootId());
  doUidlRequest(uri,payload,forceSync);
}
