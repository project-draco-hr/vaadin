{
  if (footerClickHandler != handler) {
    if (handler == null && footerClickHandler != null) {
      removeListener(VScrollTable.FOOTER_CLICK_EVENT_ID,FooterClickEvent.class,footerClickHandler);
      footerClickHandler=handler;
    }
 else     if (footerClickHandler != null) {
      removeListener(VScrollTable.FOOTER_CLICK_EVENT_ID,FooterClickEvent.class,footerClickHandler);
      footerClickHandler=handler;
      addListener(VScrollTable.FOOTER_CLICK_EVENT_ID,FooterClickEvent.class,footerClickHandler,FooterClickEvent.FOOTER_CLICK_METHOD);
    }
 else     if (handler != null) {
      footerClickHandler=handler;
      addListener(VScrollTable.FOOTER_CLICK_EVENT_ID,FooterClickEvent.class,footerClickHandler,FooterClickEvent.FOOTER_CLICK_METHOD);
    }
  }
}
