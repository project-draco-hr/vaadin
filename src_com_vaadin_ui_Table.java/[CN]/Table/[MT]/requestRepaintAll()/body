{
  requestRepaint();
  if (visibleComponents != null) {
    for (Iterator<Component> childIterator=visibleComponents.iterator(); childIterator.hasNext(); ) {
      Component c=childIterator.next();
      if (c instanceof Form) {
        c.requestRepaint();
        ((Form)c).getLayout().requestRepaintAll();
      }
 else       if (c instanceof Table) {
        ((Table)c).requestRepaintAll();
      }
 else       if (c instanceof ComponentContainer) {
        ((ComponentContainer)c).requestRepaintAll();
      }
 else {
        c.requestRepaint();
      }
    }
  }
}
