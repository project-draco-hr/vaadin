{
  if (property == null) {
    return "";
  }
  Converter<Object,String> converter=null;
  if (hasConverter(colId)) {
    converter=getConverter(colId);
  }
 else {
    Application app=Application.getCurrentApplication();
    if (app != null) {
      converter=(Converter<Object,String>)app.getConverterFactory().createConverter(property.getType(),String.class);
    }
  }
  Object value=property.getValue();
  if (converter != null) {
    return converter.convertFromSourceToTarget(value,getLocale());
  }
  return (null != value) ? value.toString() : "";
}
