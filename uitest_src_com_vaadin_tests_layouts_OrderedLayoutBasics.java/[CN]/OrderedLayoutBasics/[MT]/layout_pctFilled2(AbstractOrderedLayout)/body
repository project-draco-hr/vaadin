{
  ol.setHeight("600px");
  ol.setWidth("600px");
  ol.setMargin(true);
  ol.setSpacing(false);
  ol.setCaption("100 % filled with fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px)");
  TextArea ta;
  ta=new TextArea();
  ta.setValue("80% x 20% TextField");
  ta.setWidth("80%");
  ta.setHeight("20%");
  ta.setRows(2);
  ol.addComponent(ta);
  ta=new TextArea("20%x60% Field");
  ta.setCaption(null);
  ta.setValue("20% x 60% TextField");
  ta.setWidth("20%");
  ta.setHeight("60%");
  ol.setComponentAlignment(ta,Alignment.BOTTOM_RIGHT);
  ta.setRows(2);
  ol.addComponent(ta);
  return ol;
}
