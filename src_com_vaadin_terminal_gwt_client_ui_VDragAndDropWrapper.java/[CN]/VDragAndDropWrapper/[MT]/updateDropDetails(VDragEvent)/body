{
  verticalDropLocation=DDUtil.getVerticalDropLocation(getElement(),drag.getCurrentGwtEvent().getClientY(),0.2);
  drag.getDropDetails().put("verticalLocation",verticalDropLocation.toString());
  horizontalDropLocation=DDUtil.getHorizontalDropLocation(getElement(),drag.getCurrentGwtEvent().getClientX(),0.2);
  drag.getDropDetails().put("horizontalLocation",horizontalDropLocation.toString());
}
