{
  if (dropHandler == null) {
    return true;
  }
  dragLeavPostponed=true;
  DeferredCommand.addCommand(new Command(){
    public void execute(){
      if (dragLeavPostponed && vaadinDragEvent != null && VDragAndDropManager.get().getCurrentDropHandler() == getDropHandler()) {
        VDragAndDropManager.get().interruptDrag();
      }
      dragLeavPostponed=false;
    }
  }
);
  event.preventDefault();
  event.stopPropagation();
  return false;
}
