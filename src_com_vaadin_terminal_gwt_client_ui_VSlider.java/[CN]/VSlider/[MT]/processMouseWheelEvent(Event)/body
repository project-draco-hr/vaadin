{
  final int dir=DOM.eventGetMouseWheelVelocityY(event);
  if (dir < 0) {
    increaseValue(false);
  }
 else {
    decreaseValue(false);
  }
  if (scrollTimer != null) {
    scrollTimer.cancel();
  }
  scrollTimer=new Timer(){
    @Override public void run(){
      updateValueToServer();
    }
  }
;
  scrollTimer.schedule(100);
  DOM.eventPreventDefault(event);
  DOM.eventCancelBubble(event,true);
}
