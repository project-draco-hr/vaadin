{
  if (vertical) {
    feedbackPopup.setPopupPosition(DOM.getAbsoluteLeft(handle) + handle.getOffsetWidth(),DOM.getAbsoluteTop(handle) + handle.getOffsetHeight() / 2 - feedbackPopup.getOffsetHeight() / 2);
  }
 else {
    feedbackPopup.setPopupPosition(DOM.getAbsoluteLeft(handle) + handle.getOffsetWidth() / 2 - feedbackPopup.getOffsetWidth() / 2,DOM.getAbsoluteTop(handle) - feedbackPopup.getOffsetHeight());
  }
}
