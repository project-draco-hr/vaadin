{
  Button helloButton=new Button("Say Hello");
  helloButton.addListener(new ClickListener(){
    public void buttonClick(    ClickEvent event){
      String msg="Running in ";
      msg+=Application.getCurrentApplication().isProductionMode() ? "production" : "debug";
      msg+=" mode in a Root with the caption " + Root.getCurrentRoot().getCaption();
      Notification.show(msg);
    }
  }
);
  addComponent(helloButton);
}
