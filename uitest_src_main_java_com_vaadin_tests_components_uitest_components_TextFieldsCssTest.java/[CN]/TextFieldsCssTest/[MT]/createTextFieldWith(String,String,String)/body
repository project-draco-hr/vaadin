{
  TextField tf=new TextField();
  tf.setId("textfield" + debugIdCounter++);
  if (caption != null) {
    tf.setCaption(caption);
  }
  if (primaryStyleName != null) {
    tf.addStyleName(primaryStyleName);
  }
  if (inputPrompt != null) {
    tf.setInputPrompt(inputPrompt);
  }
  addComponent(tf);
}
