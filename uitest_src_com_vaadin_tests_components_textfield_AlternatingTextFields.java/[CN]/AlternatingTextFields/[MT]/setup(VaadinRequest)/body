{
  VerticalLayout layout=new VerticalLayout();
  layout.setMargin(true);
  layout.setSpacing(true);
  final TextField firstTextField=createTextField("First",FIRST_TEXTFIELD_INPUT_PROMPT);
  final TextField secondTextField=createTextField("Second",SECOND_TEXTFIELD_INPUT_PROMPT);
  addTextChangeListener(firstTextField,secondTextField);
  addTextChangeListener(secondTextField,firstTextField);
  layout.addComponent(firstTextField);
  layout.addComponent(secondTextField);
  addComponent(layout);
}
