{
  try {
    Class<?> applicationClass=getClassLoader().loadClass(applicationClassName);
    final Application application=(Application)applicationClass.newInstance();
    return application;
  }
 catch (  final IllegalAccessException e) {
    throw new ServletException(e);
  }
catch (  final InstantiationException e) {
    throw new ServletException(e);
  }
catch (  final ClassNotFoundException e) {
    throw new ServletException(new InstantiationException("Failed to load application class: " + applicationClassName));
  }
}
