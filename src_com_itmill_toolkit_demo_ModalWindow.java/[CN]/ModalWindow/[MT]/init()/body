{
  Window main=new Window("ModalWindow demo");
  setMainWindow(main);
  main.addComponent(new Label("ModalWindow demo"));
  TextField f=new TextField();
  f.setTabIndex(1);
  main.addComponent(f);
  Button b=new Button("Button on main window");
  b.addListener(this);
  b.setTabIndex(2);
  main.addComponent(b);
  test=new Window("Modal window");
  test.setStyle("modal");
  this.addWindow(test);
  test.addComponent(new Label("You have to close this window before accessing others."));
  f=new TextField();
  f.setTabIndex(4);
  test.addComponent(f);
  f.focus();
  b=new Button("Button on modal window");
  b.setTabIndex(3);
  b.addListener(this);
  test.addComponent(b);
}
