{
  openTestURL();
  getGridElement().getCell(0,0).click();
  sendKey(Keys.ARROW_UP);
  sendKey(Keys.ENTER);
  assertColumnsAreSortedAs(_(1,SortDirection.ASCENDING));
  sendKey(Keys.RIGHT);
  holdKey(Keys.SHIFT);
  sendKey(Keys.ENTER);
  releaseKey(Keys.SHIFT);
  assertColumnsAreSortedAs(_(1,SortDirection.ASCENDING),_(2,SortDirection.ASCENDING));
  sendKey(Keys.RIGHT);
  holdKey(Keys.SHIFT);
  sendKey(Keys.ENTER);
  releaseKey(Keys.SHIFT);
  assertColumnsAreSortedAs(_(1,SortDirection.ASCENDING),_(2,SortDirection.ASCENDING),_(3,SortDirection.ASCENDING));
  sendKey(Keys.LEFT);
  holdKey(Keys.SHIFT);
  sendKey(Keys.ENTER);
  releaseKey(Keys.SHIFT);
  assertColumnsAreSortedAs(_(1,SortDirection.ASCENDING),_(2,SortDirection.DESCENDING),_(3,SortDirection.ASCENDING));
  sendKey(Keys.RIGHT);
  sendKey(Keys.ENTER);
  assertColumnsAreSortedAs(_(2,1,SortDirection.ASCENDING));
  sendKey(Keys.RIGHT);
  sendKey(Keys.ENTER);
  assertColumnsAreSortedAs(_(3,1,SortDirection.ASCENDING));
}
