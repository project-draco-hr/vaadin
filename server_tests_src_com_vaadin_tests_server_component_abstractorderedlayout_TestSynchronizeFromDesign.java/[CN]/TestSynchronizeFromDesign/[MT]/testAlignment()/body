{
  VerticalLayout root=createLayout(0f,":top",":left");
  assertEquals(Alignment.TOP_LEFT,root.getComponentAlignment(root.getComponent(0)));
  root=createLayout(0f,":middle",":center");
  assertEquals(Alignment.MIDDLE_CENTER,root.getComponentAlignment(root.getComponent(0)));
  root=createLayout(0f,":bottom",":right");
  assertEquals(Alignment.BOTTOM_RIGHT,root.getComponentAlignment(root.getComponent(0)));
}
