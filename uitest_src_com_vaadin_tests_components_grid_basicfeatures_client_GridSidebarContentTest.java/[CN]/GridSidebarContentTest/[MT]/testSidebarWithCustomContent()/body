{
  openTestURL();
  CustomGridElement gridElement=getGridElement();
  Assert.assertEquals("Sidebar should not be initially present",0,countBySelector(".v-grid-sidebar"));
  selectMenuPath("Component","Sidebar","Toggle sidebar entry");
  gridElement.findElement(By.className("v-grid-sidebar-button")).click();
  WebElement sidebarButton=gridElement.findElement(By.cssSelector(".v-grid-sidebar-content button"));
  Assert.assertEquals("Sidebar button",sidebarButton.getText());
  sidebarButton.click();
  Assert.assertEquals("Click count: 1",sidebarButton.getText());
  selectMenuPath("Component","Sidebar","Toggle sidebar entry");
  Assert.assertEquals("Sidebar should disappear after content remove",0,countBySelector(".v-grid-sidebar"));
}
