{
  openTestURL();
  selectMenuPath("Component","Sidebar","Toggle sidebar visibility");
  Assert.assertEquals("Toggling without content should't show anything",0,countBySelector(".v-grid-sidebar-content button"));
  selectMenuPath("Component","Sidebar","Toggle sidebar entry");
  selectMenuPath("Component","Sidebar","Toggle sidebar visibility");
  Assert.assertEquals("Toggling with content should show sidebar",1,countBySelector(".v-grid-sidebar-content button"));
  selectMenuPath("Component","Sidebar","Toggle sidebar visibility");
  Assert.assertEquals("Toggling again should hide sidebar",0,countBySelector(".v-grid-sidebar-content button"));
}
