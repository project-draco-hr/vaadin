{
  VerticalLayout ol;
  Panel p;
  ComboBox cb;
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox without width");
  cb=new ComboBox();
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox without width with caption");
  cb=new ComboBox();
  cb.setCaption("A combobox");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 100px wide");
  cb=new ComboBox();
  cb.setWidth("100px");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 100px wide with caption");
  cb=new ComboBox();
  cb.setCaption("A combobox");
  cb.setWidth("100px");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 500px wide");
  cb=new ComboBox();
  cb.setWidth("500px");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 500px wide with caption");
  cb=new ComboBox();
  cb.setCaption("A combobox");
  cb.setWidth("500px");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 100% wide");
  p.setWidth("200px");
  ol.setWidth("100%");
  cb=new ComboBox();
  cb.setWidth("100%");
  ol.addComponent(cb);
  layout.addComponent(p);
  ol=new VerticalLayout();
  p=new Panel(ol);
  p.setCaption("Combobox 100% wide with caption");
  p.setWidth("200px");
  ol.setWidth("100%");
  cb=new ComboBox();
  cb.setCaption("A combobox");
  cb.setWidth("100%");
  ol.addComponent(cb);
  layout.addComponent(p);
}
