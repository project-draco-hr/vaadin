{
  final String arrayItemSeparator=String.valueOf(VAR_ARRAYITEM_SEPARATOR);
  StringTokenizer tokenizer=new StringTokenizer(strValue,arrayItemSeparator,true);
  List<String> tokens=new ArrayList<String>();
  String prevToken=arrayItemSeparator;
  while (tokenizer.hasMoreTokens()) {
    String token=tokenizer.nextToken();
    if (!arrayItemSeparator.equals(token)) {
      tokens.add(decodeVariableValue(token));
    }
 else     if (arrayItemSeparator.equals(prevToken)) {
      tokens.add("");
    }
    prevToken=token;
  }
  return tokens.toArray(new String[tokens.size()]);
}
