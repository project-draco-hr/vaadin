{
  if (state.caption != null) {
    return true;
  }
  if (state.resources.containsKey(ComponentConstants.ICON_RESOURCE)) {
    return true;
  }
  if (state.errorMessage != null) {
    return true;
  }
  if (state instanceof AbstractFieldState) {
    if (((AbstractFieldState)state).required) {
      return true;
    }
  }
  return false;
}
