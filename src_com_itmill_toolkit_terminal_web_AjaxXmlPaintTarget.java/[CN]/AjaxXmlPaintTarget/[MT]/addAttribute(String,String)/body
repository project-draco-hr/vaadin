{
  if ((value == null) || (name == null))   throw new NullPointerException("Parameters must be non-null strings");
  if (this.closed)   throw new PaintException("Attempted to write to a closed PaintTarget.");
  if (!mTagArgumentListOpen)   throw new PaintException("XML argument list not open.");
  append(" " + name + "=\""+ escapeXML(value)+ "\"");
  if (customLayoutArgumentsOpen && "style".equals(name))   getPreCachedResources().add("layout/" + value + ".html");
}
