{
  int availSpace=DOM.getElementPropertyInt(getElement(),"clientHeight");
  if (marginHeight < 0) {
    DOM.setStyleAttribute(margin,"height",height);
    int tmp=DOM.getElementPropertyInt(margin,"offsetHeight");
    marginHeight=tmp - DOM.getElementPropertyInt(getElement(),"clientHeight");
    DOM.setStyleAttribute(margin,"height","");
  }
  availSpace-=marginHeight;
  DOM.setStyleAttribute(DOM.getFirstChild(margin),"height",availSpace + "px");
}
