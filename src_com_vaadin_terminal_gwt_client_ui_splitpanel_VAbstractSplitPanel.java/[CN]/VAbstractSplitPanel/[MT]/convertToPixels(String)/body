{
  float posAsFloat;
  if (pos.indexOf("%") > 0) {
    posAsFloat=Math.round(Float.parseFloat(pos.substring(0,pos.length() - 1)) / 100 * (orientation == ORIENTATION_HORIZONTAL ? getOffsetWidth() : getOffsetHeight()));
  }
 else {
    posAsFloat=Float.parseFloat(pos.substring(0,pos.length() - 2));
  }
  return posAsFloat;
}
