{
  Item item=getItemDataSource();
  Class<? extends T> beanClass=this.beanClass;
  if (item instanceof BeanItem) {
    beanClass=(Class<? extends T>)((BeanItem<T>)item).getBean().getClass();
  }
  BeanValidationValidator validator=BeanValidationValidator.addValidator(field,propertyId,beanClass);
  if (locale != null) {
    validator.setLocale(locale);
  }
  super.addField(propertyId,field);
}
