{
  if (retry) {
    getLogger().warning("Status code 0, retrying");
    (new Timer(){
      @Override public void run(){
        getServerCommunicationHandler().doUidlRequest(event.getUri(),event.getPayload(),false);
      }
    }
).schedule(100);
  }
 else {
    handleUnrecoverableCommunicationError("Invalid status code 0 (server down?)",event);
  }
}
