{
  if (widget == null) {
    if (Profiler.isEnabled()) {
      Profiler.enter("AbstractComponentConnector.createWidget for " + getClass().getSimpleName());
    }
    widget=createWidget();
    if (Profiler.isEnabled()) {
      Profiler.leave("AbstractComponentConnector.createWidget for " + getClass().getSimpleName());
    }
  }
  return widget;
}
