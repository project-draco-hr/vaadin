def readConfig(self, cfgfilename, startfrom=0):
    fin = open(cfgfilename, 'r')
    content = fin.readlines()
    fin.close()
    currentChange = None
    skipChange = 0
    for line in content:
        m_changestart = re.match('(-?)r([0-9]+)', line)
        m_endofchange = re.match('------+', line)
        m_emptyline = re.match('^$', line)
        if m_changestart:
            undo = 0
            if (m_changestart.group(1) == '-'):
                undo = 1
            id = int(m_changestart.group(2))
            if ((startfrom != 0) and (id < startfrom)):
                skipChange = 1
            author = re.sub('\\@.+', '', line.split('|')[1].strip())
            currentChange = Change(id, undo=undo, author=author)
        elif m_endofchange:
            if currentChange:
                if skipChange:
                    skipChange = 0
                else:
                    self.changes.append(currentChange)
                currentChange = None
        elif m_emptyline:
            pass
        elif currentChange:
            currentChange.addCommentLine(line)
