{
  LegacyWindow w=new LegacyWindow(getClass().getSimpleName());
  setMainWindow(w);
  GridLayout l=new GridLayout();
  w.setContent(l);
  l.setHeight("504px");
  for (int i=1; i <= 5; i++) {
    Button b=new Button("Button " + i + " should be 100px or 101px high");
    b.setHeight("100%");
    l.addComponent(b);
  }
}
