{
  cancelDelay();
  fader=new Timer(){
    int opacity=startOpacity;
    public void run(){
      opacity-=5;
      setOpacity(getElement(),opacity);
      if (opacity <= 0) {
        cancel();
        hide();
      }
    }
  }
;
  final int msec=fadeMsec / (startOpacity / 5);
  fader.scheduleRepeating(msec);
}
