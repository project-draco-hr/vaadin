{
  AbstractOrderedLayout ol;
  if (horizontal) {
    ol=new HorizontalLayout();
  }
 else {
    ol=new VerticalLayout();
  }
  ol.setMargin(true);
  ol.setSpacing(true);
  if (style != null) {
    ol.setStyleName(style);
  }
  ol.addComponent(new Label(descr));
  for (int i=0; i < 3; i++) {
    Button b=new Button("Row " + (i + 1));
    if (!horizontal) {
      b.setWidth(500);
    }
    ol.addComponent(b);
  }
  getMainWindow().addComponent(ol);
}
