{
  final LegacyDateField date=new LegacyDateField("Default DateField");
  date.setImmediate(true);
  addComponent(date);
  date.addListener(new Property.ValueChangeListener(){
    @Override public void valueChange(    ValueChangeEvent event){
      if (date.isValid()) {
        getMainWindow().showNotification(date.getValue().toString());
      }
    }
  }
);
  final LegacyDateField validated=new LegacyDateField("Validated Default DateField");
  validated.setImmediate(true);
  validated.addValidator(new LegacyNullValidator("Validator: Date is NULL",false));
  addComponent(validated);
}
