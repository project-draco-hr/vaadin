{
  LegacyTextField tf=new LegacyTextField("A read only field");
  tf.setReadOnly(true);
  tf.setRequired(true);
  addComponent(tf);
  Form f=new Form();
  LegacyTextField tf2=new LegacyTextField("A field in a read only form");
  tf2.setRequired(true);
  f.addField("Field-1",tf2);
  f.setReadOnly(true);
  addComponent(f);
}
