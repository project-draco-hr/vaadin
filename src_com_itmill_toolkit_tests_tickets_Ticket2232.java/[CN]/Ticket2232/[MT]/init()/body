{
  setMainWindow(new Window());
  setTheme("tests-tickets");
  getMainWindow().addComponent(new Label("Defining spacing must be possible also with pure CSS"));
  Layout.SpacingHandler gl;
  gl=new OrderedLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  gl.setStyleName("t2232");
  fillAndAdd(gl);
  gl=new GridLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  gl.setStyleName("t2232");
  fillAndAdd(gl);
  gl=new OrderedLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  gl.setSpacing(true);
  fillAndAdd(gl);
  gl=new GridLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  gl.setSpacing(true);
  fillAndAdd(gl);
  gl=new OrderedLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  fillAndAdd(gl);
  gl=new GridLayout();
  gl.setWidth("100%");
  gl.setHeight("200px");
  fillAndAdd(gl);
}
