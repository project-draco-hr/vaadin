{
  final StringBuffer sb=new StringBuffer();
  if (iconUri != null) {
    sb.append("<img src=\"");
    sb.append(Util.escapeAttribute(iconUri));
    sb.append("\" alt=\"\" class=\"v-icon\" />");
  }
  String content;
  if ("".equals(caption)) {
    content="&nbsp;";
  }
 else {
    content=Util.escapeHTML(caption);
  }
  sb.append("<span>" + content + "</span>");
  return sb.toString();
}
