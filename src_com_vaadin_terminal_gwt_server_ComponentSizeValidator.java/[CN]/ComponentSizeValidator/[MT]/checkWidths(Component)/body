{
  try {
    if (!hasRelativeWidth(component)) {
      return true;
    }
    if (component instanceof Window) {
      return true;
    }
    if (component.getParent() == null) {
      return true;
    }
    return parentCanDefineWidth(component);
  }
 catch (  Exception e) {
    logger.log(Level.FINER,"An exception occurred while validating sizes.",e);
    return true;
  }
}
