{
  for (int i=1; i <= Math.max(3,3 + Math.random() * 2); i++) {
    String item=parent + ", child " + i;
    t.addItem(item);
    t.setChildrenAllowed(parent,true);
    t.setParent(item,parent);
    if (recurse) {
      if (i % 2 == 0) {
        addChildren(t,item,false);
        t.expandItem(parent);
      }
 else {
        t.setChildrenAllowed(item,false);
      }
    }
 else {
      t.setChildrenAllowed(item,false);
    }
  }
}
