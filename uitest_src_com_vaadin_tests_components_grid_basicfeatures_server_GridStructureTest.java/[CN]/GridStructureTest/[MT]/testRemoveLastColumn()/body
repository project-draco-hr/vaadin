{
  setDebug(true);
  openTestURL();
  String columnName="Column " + (GridBasicFeatures.COLUMNS - 1);
  assertTrue(columnName + " was not present in DOM",isElementPresent(By.xpath("//th[text()='" + columnName + "']")));
  selectMenuPath("Component","Columns",columnName,"Remove");
  assertFalse(isElementPresent(NotificationElement.class));
  assertFalse(columnName + " was still present in DOM",isElementPresent(By.xpath("//th[text()='" + columnName + "']")));
}
