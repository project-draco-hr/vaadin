{
  setModal(true);
  setWidth("50%");
  center();
  setCaption("Sharing options");
  addComponent(new Label("With these setting you can modify contact sharing " + "options. (non-functional, example of modal dialog)"));
  addComponent(new CheckBox("Gmail"));
  addComponent(new CheckBox(".Mac"));
  Button close=new Button("OK");
  close.addListener(new Button.ClickListener(){
    public void buttonClick(    ClickEvent event){
      SharingOptions.this.close();
    }
  }
);
  addComponent(close);
}
