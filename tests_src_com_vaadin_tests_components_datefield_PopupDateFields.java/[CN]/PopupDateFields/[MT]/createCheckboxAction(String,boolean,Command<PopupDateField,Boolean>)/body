{
  CheckBox errorIndicators=new CheckBox(caption,new Button.ClickListener(){
    public void buttonClick(    ClickEvent event){
      boolean enabled=(Boolean)event.getButton().getValue();
      doCommand(command,enabled);
    }
  }
);
  errorIndicators.setValue(initialState);
  errorIndicators.setImmediate(true);
  return errorIndicators;
}
