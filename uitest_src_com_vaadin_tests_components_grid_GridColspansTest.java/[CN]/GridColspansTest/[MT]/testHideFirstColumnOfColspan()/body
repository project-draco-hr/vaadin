{
  openTestURL();
  GridElement grid=$(GridElement.class).first();
  Assert.assertEquals("Failed initial condition.",grid.getHeaderCell(0,1).getText(),"All the stuff");
  Assert.assertEquals("Failed initial condition.",grid.getHeaderCell(2,1).getText(),"firstName");
  $(ButtonElement.class).first().click();
  Assert.assertEquals("Header text changed on column hide.",grid.getHeaderCell(0,1).getText(),"All the stuff");
  Assert.assertEquals("Failed initial condition.","lastName",grid.getHeaderCell(2,1).getText());
}
