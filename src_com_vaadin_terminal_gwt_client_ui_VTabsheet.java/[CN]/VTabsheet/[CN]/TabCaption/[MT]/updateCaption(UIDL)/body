{
  if (uidl.hasAttribute(ATTRIBUTE_DESCRIPTION) || uidl.hasAttribute(ATTRIBUTE_ERROR)) {
    TooltipInfo tooltipInfo=new TooltipInfo();
    tooltipInfo.setTitle(uidl.getStringAttribute(ATTRIBUTE_DESCRIPTION));
    if (uidl.hasAttribute(ATTRIBUTE_ERROR)) {
      tooltipInfo.setErrorUidl(uidl.getErrors());
    }
    client.registerWidgetTooltip(getTabsheet(),getElement(),tooltipInfo);
  }
 else {
    client.registerWidgetTooltip(getTabsheet(),getElement(),null);
  }
  boolean ret=super.updateCaption(uidl);
  setClosable(uidl.hasAttribute("closable"));
  return ret;
}
