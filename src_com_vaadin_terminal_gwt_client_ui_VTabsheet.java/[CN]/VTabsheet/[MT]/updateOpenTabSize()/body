{
  int height=-1;
  int width=-1;
  int minWidth=0;
  if (!isDynamicHeight()) {
    height=contentNode.getOffsetHeight();
  }
  if (!isDynamicWidth()) {
    width=contentNode.getOffsetWidth();
  }
 else {
    minWidth=tb.getOffsetWidth() - getContentAreaBorderWidth();
  }
  tp.fixVisibleTabSize(width,height,minWidth);
}
