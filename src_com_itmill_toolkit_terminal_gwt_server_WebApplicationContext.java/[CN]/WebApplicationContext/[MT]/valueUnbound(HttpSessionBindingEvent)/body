{
  try {
    while (!applications.isEmpty()) {
      final Application app=applications.iterator().next();
      app.close();
      applicationToAjaxAppMgrMap.remove(app);
      removeApplication(app);
    }
  }
 catch (  Exception e) {
    System.err.println("Could not remove application, leaking memory.");
    e.printStackTrace();
  }
}
