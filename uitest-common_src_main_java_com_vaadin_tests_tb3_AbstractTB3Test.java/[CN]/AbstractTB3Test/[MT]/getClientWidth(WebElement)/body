{
  String script;
  if (BrowserUtil.isIE8(getDesiredCapabilities())) {
    script="return arguments[0].clientWidth;";
  }
 else {
    script="var cs = window.getComputedStyle(arguments[0]);" + "var h = parseFloat(cs.width)+parseFloat(cs.paddingLeft)+parseFloat(cs.paddingRight);" + "return Math.ceil(h);";
  }
  return ((Number)executeScript(script,e)).intValue();
}
