{
switch (mode) {
case AND:
    for (    Validator v : validators) {
      if (!v.isValid(value)) {
        return false;
      }
    }
  return true;
case OR:
for (Validator v : validators) {
  if (v.isValid(value)) {
    return true;
  }
}
return false;
}
throw new IllegalStateException("The validator is in unsupported operation mode");
}
