{
  String s="<v-vertical-layout ";
  if (left && right && top&& bottom) {
    s+="margin='true'";
  }
 else {
    if (left) {
      s+="margin-left='true' ";
    }
    if (right) {
      s+="margin-right='true' ";
    }
    if (top) {
      s+="margin-top='true' ";
    }
    if (bottom) {
      s+="margin-bottom='true' ";
    }
  }
  return s + " />";
}
