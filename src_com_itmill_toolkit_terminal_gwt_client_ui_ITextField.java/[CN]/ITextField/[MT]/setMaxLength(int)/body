{
  if (newMaxLength > 0) {
    maxLength=newMaxLength;
    if (getElement().getTagName().toLowerCase().equals("textarea")) {
    }
 else {
      getElement().setAttribute("maxlength","" + maxLength);
    }
  }
 else   if (maxLength != -1) {
    if (getElement().getTagName().toLowerCase().equals("textarea")) {
    }
 else {
      getElement().setAttribute("maxlength","");
    }
    maxLength=-1;
  }
}
