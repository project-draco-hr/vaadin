{
  if (BrowserInfo.get().isIE8()) {
    fixIE8FocusCaptureIssue();
  }
  if (vaadinModality) {
    hideModalityCurtain();
  }
  super.hide();
  int curIndex=windowOrder.indexOf(this);
  windowOrder.remove(curIndex);
  while (curIndex < windowOrder.size()) {
    windowOrder.get(curIndex).setWindowOrder(curIndex++);
  }
}
