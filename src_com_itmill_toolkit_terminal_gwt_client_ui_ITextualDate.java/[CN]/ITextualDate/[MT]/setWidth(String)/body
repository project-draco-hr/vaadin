{
  if (!"".equals(newWidth) && (width == null || !newWidth.equals(width))) {
    if (Util.isIE6()) {
      text.setColumns(1);
    }
    needLayout=true;
    width=newWidth;
    super.setWidth(width);
    iLayout();
    if (newWidth.indexOf("%") < 0) {
      needLayout=false;
    }
  }
 else {
    if ("".equals(newWidth) && width != null && !"".equals(width)) {
      super.setWidth("");
      needLayout=true;
      iLayout();
      needLayout=false;
      width=null;
    }
  }
}
