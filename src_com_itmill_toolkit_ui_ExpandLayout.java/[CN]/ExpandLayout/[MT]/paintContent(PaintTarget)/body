{
  target.addAttribute("margins",margins.getBitMask());
  if (getHeight() >= 0)   target.addAttribute("height","" + getHeight() + Sizeable.UNIT_SYMBOLS[getHeightUnits()]);
  if (getWidth() >= 0)   target.addAttribute("width","" + getWidth() + Sizeable.UNIT_SYMBOLS[getWidthUnits()]);
  if (getOrientation() == ORIENTATION_HORIZONTAL)   target.addAttribute("orientation","horizontal");
  StringBuffer alignments=new StringBuffer();
  for (Iterator i=getComponentIterator(); i.hasNext(); ) {
    Component c=(Component)i.next();
    if (c != null) {
      target.startTag("cc");
      if (c == expanded)       target.addAttribute("expanded",true);
      c.paint(target);
      target.endTag("cc");
    }
    alignments.append(getComponentAlignment(c));
    if (i.hasNext())     alignments.append(",");
  }
  target.addAttribute("alignments",alignments.toString());
}
