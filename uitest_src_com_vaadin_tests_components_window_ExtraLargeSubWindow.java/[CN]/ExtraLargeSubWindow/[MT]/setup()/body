{
  VerticalLayout layout=new VerticalLayout();
  layout.setMargin(true);
  layout.setSizeFull();
  Window w=new Window("full sized window",layout);
  w.setWidth("2000px");
  w.setHeight("2000px");
  NativeButton b=new NativeButton("A large button");
  b.setSizeFull();
  layout.addComponent(b);
  getMainWindow().addWindow(w);
}
