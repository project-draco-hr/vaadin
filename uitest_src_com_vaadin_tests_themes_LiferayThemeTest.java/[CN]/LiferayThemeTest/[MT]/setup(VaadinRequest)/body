{
  VerticalLayout pl=new VerticalLayout();
  pl.setMargin(true);
  Panel p=new Panel("Panel",pl);
  addComponent(p);
  pl.addComponent(new Label("Panel content"));
  pl=new VerticalLayout();
  pl.setMargin(true);
  p=new Panel("Light Panel",pl);
  p.addStyleName(LiferayTheme.PANEL_LIGHT);
  addComponent(p);
  pl.addComponent(new Label("Panel content"));
}
