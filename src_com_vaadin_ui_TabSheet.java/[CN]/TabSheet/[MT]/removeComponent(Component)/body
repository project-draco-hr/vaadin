{
  if (c != null && components.contains(c)) {
    super.removeComponent(c);
    keyMapper.remove(c);
    components.remove(c);
    tabs.remove(c);
    if (c.equals(selected)) {
      if (components.isEmpty()) {
        setSelected(null);
      }
 else {
        updateSelection();
        fireSelectedTabChange();
      }
    }
    requestRepaint();
  }
}
