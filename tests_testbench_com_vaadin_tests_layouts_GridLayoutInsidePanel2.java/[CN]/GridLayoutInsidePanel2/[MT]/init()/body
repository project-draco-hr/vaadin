{
  LegacyWindow w=new LegacyWindow("Main");
  setMainWindow(w);
  layout=(Layout)w.getContent();
  GridLayout gl=new GridLayout(1,1);
  gl.setSizeUndefined();
  Label l=new Label("This should be visible");
  l.setWidth("100px");
  gl.addComponent(l);
  layout.setSizeUndefined();
  layout.addComponent(gl);
}
