{
  int newX=origX + x - origMouseX;
  if (newX < 0) {
    newX=0;
  }
  if (newX + getSplitterSize() > getOffsetWidth()) {
    newX=getOffsetWidth() - getSplitterSize();
  }
  DOM.setStyleAttribute(splitter,"left",newX + "px");
  updateSplitPosition(newX);
  if (origX != newX) {
    resized=true;
  }
}
