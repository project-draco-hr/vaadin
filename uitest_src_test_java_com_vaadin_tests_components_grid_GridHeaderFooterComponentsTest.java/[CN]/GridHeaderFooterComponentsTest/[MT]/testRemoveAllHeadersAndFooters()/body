{
  openTestURL();
  for (int i=2; i >= 0; --i) {
    $(LegacyGridElement.class).first().getHeaderCell(i,0).$(ButtonElement.class).first().click();
    assertFalse("Header " + i + " should not be present.",$(LegacyGridElement.class).first().isElementPresent(By.vaadin("#header[" + i + "]")));
    $(LegacyGridElement.class).first().getFooterCell(i,0).$(ButtonElement.class).first().click();
    assertFalse("Footer " + i + " should not be present.",$(LegacyGridElement.class).first().isElementPresent(By.vaadin("#footer[" + i + "]")));
  }
  assertNoErrorNotifications();
}
