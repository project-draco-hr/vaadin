{
  if (capabilities.getPlatform() == Platform.WIN8 || capabilities.getPlatform() == Platform.WINDOWS || capabilities.getPlatform() == Platform.VISTA || capabilities.getPlatform() == Platform.XP) {
    return "Windows";
  }
 else   if (capabilities.getPlatform() == Platform.MAC) {
    return "Mac";
  }
  return capabilities.getPlatform().toString();
}
