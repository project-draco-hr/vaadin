{
  Window w=new Window(getClass().getSimpleName());
  setMainWindow(w);
  mainLayout=new GridLayout(1,2);
  w.setLayout(mainLayout);
  orderedLayout=createOL();
  gridLayout=createGL();
  switchButton=new Button("Switch to GridLayout",new ClickListener(){
