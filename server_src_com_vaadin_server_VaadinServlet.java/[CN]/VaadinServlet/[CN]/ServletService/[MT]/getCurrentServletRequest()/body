{
  VaadinRequest currentRequest=VaadinService.getCurrentRequest();
  try {
    VaadinServletRequest request=VaadinServletRequest.cast(currentRequest);
    if (request != null) {
      return request.getHttpServletRequest();
    }
 else {
      return null;
    }
  }
 catch (  ClassCastException e) {
    return null;
  }
}
