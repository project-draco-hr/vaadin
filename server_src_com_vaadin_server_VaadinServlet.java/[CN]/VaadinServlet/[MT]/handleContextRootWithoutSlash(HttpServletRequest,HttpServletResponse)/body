{
  if ((request.getPathInfo() == null || "/".equals(request.getPathInfo())) && "".equals(request.getServletPath()) && !request.getRequestURI().endsWith("/")) {
    String location=request.getRequestURI() + "/";
    String queryString=request.getQueryString();
    if (queryString != null) {
      location+='?' + queryString;
    }
    response.sendRedirect(location);
    return true;
  }
 else {
    return false;
  }
}
