{
  Application newApplication=createApplication(request);
  try {
    ServletPortletHelper.checkUiProviders(newApplication);
  }
 catch (  ApplicationClassException e) {
    throw new ServletException(e);
  }
  final ServletApplicationContext context=getApplicationContext(request.getSession());
  context.setApplication(newApplication,createCommunicationManager(newApplication));
  return newApplication;
}
