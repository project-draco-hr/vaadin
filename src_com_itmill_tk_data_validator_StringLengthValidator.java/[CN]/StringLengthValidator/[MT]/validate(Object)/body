{
  if (value == null && !allowNull)   throw new Validator.InvalidValueException(errorMessage);
  String s=value.toString();
  if (s == null && !allowNull)   throw new Validator.InvalidValueException(errorMessage);
  int len=s.length();
  if ((minLength >= 0 && len < minLength) || (maxLength >= 0 && len > maxLength))   throw new Validator.InvalidValueException(errorMessage);
}
