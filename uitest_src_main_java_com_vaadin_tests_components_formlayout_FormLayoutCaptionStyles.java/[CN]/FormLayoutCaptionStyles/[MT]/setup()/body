{
  setTheme("reindeer-tests");
  FormLayout fl=new FormLayout();
  LegacyTextField f1=createTextField("Text field 1","");
  final LegacyTextField f2=createTextField("Text field 2","bold");
  fl.addComponent(f1);
  fl.addComponent(new Button("Toggle Text field 2 bold style",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      if ("bold".equals(f2.getStyleName())) {
        f2.setStyleName("");
      }
 else {
        f2.setStyleName("bold");
      }
    }
  }
));
  fl.addComponent(f2);
  addComponent(fl);
}
