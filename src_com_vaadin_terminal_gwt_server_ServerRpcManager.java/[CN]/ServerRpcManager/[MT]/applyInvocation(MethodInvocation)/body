{
  String methodName=invocation.getMethodName();
  Object[] arguments=invocation.getParameters();
  Method method=findInvocationMethod(implementation.getClass(),methodName,arguments.length);
  if (method == null) {
    throw new RuntimeException(implementation + " does not contain " + methodName+ " with "+ arguments.length+ " parameters");
  }
  Class<?>[] parameterTypes=method.getParameterTypes();
  Object[] args=new Object[parameterTypes.length];
  for (int i=0; i < args.length; i++) {
    args[i]=arguments[i];
  }
  try {
    method.invoke(implementation,args);
  }
 catch (  Exception e) {
    throw new RuntimeException(methodName,e);
  }
}
