{
  VerticalSplitPanel sp=new VerticalSplitPanel();
  sp.setSizeFull();
  RichTextArea rta=new RichTextArea();
  rta.setSizeFull();
  Label label=new Label("One side of the panel");
  sp.setFirstComponent(label);
  sp.setSecondComponent(rta);
  addComponent(sp);
  sp.setSizeFull();
  getLayout().setSizeFull();
}
