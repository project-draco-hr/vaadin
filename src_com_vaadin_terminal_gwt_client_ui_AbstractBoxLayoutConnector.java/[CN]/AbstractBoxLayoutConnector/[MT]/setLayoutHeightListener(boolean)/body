{
  if (add) {
    getLayoutManager().addElementResizeListener(getWidget().getElement(),layoutResizeListener);
  }
 else {
    getLayoutManager().removeElementResizeListener(getWidget().getElement(),layoutResizeListener);
    if (!needsExpand()) {
      childElementHeight.clear();
      childCaptionElementHeight.clear();
    }
  }
}
