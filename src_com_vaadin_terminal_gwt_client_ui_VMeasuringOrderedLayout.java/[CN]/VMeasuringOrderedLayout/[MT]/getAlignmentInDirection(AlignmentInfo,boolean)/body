{
  if (alignment == null) {
    return -1;
  }
  if (isVertical) {
    if (alignment.isTop()) {
      return -1;
    }
 else     if (alignment.isBottom()) {
      return 1;
    }
 else {
      return 0;
    }
  }
 else {
    if (alignment.isLeft()) {
      return -1;
    }
 else     if (alignment.isRight()) {
      return 1;
    }
 else {
      return 0;
    }
  }
}
