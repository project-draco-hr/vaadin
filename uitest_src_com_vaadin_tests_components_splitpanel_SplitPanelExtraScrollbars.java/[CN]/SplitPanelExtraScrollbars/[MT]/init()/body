{
  sp=new HorizontalSplitPanel();
  sp.setSizeFull();
  sp.setSplitPosition(0,Sizeable.UNITS_PIXELS);
  hl=new HorizontalLayout();
  hl.setMargin(true);
  hl.setWidth("100%");
  hl.setHeight(null);
  b=createButton("200px");
  sp.setSecondComponent(hl);
  hl.addComponent(b);
  LegacyWindow w=new LegacyWindow("Test",sp);
  setMainWindow(w);
}
