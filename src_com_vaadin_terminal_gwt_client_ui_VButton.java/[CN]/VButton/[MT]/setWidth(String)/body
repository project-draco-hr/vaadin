{
  if (BrowserInfo.get().isIE7()) {
    if (width != null && width.length() > 2) {
      int w=Integer.parseInt(width.substring(0,width.length() - 2));
      w-=getHorizontalBorderAndPaddingWidth(getElement());
      if (w < 0) {
        w=0;
      }
      width=w + "px";
    }
  }
  super.setWidth(width);
}
