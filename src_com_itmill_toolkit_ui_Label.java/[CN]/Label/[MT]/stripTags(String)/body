{
  StringBuffer res=new StringBuffer();
  int processed=0;
  int xmlLen=xml.length();
  while (processed < xmlLen) {
    int next=xml.indexOf('<',processed);
    if (next < 0) {
      next=xmlLen;
    }
    res.append(xml.substring(processed,next));
    if (processed < xmlLen) {
      next=xml.indexOf('>',processed);
      if (next < 0) {
        next=xmlLen;
      }
      processed=next + 1;
    }
  }
  return res.toString();
}
