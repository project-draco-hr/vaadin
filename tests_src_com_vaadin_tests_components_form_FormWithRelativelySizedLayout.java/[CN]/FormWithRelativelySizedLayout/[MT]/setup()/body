{
  Form f=new Form();
  f.setCaption("Form, full size");
  f.setWidth("100%");
  f.setHeight("100%");
  Label l=new Label("This green label should consume all available space, pushing ok button to bottom of the view");
  l.setSizeFull();
  CssLayout lo=new CssLayout(){
    @Override protected String getCss(    Component c){
      return "background: green;color:red;";
    }
  }
;
  lo.setSizeFull();
  f.setLayout(lo);
  lo.addComponent(l);
  f.getFooter().addComponent(new Button("OK button"));
  getLayout().setSizeFull();
  getLayout().addComponent(f);
}
