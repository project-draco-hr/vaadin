{
switch (getMode()) {
case TEXT:
    target.addText(AbstractApplicationServlet.safeEscapeForHtml(getMessage()));
  break;
case PREFORMATTED:
target.addText("<pre>" + AbstractApplicationServlet.safeEscapeForHtml(getMessage()) + "</pre>");
break;
case XHTML:
target.addText(getMessage());
break;
}
if (getCauses().size() > 0) {
for (ErrorMessage cause : getCauses()) {
cause.paint(target);
}
}
}
