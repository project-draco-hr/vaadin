{
  OrderedLayout l=new OrderedLayout();
  demoWindow=new FrameWindow("Feature Test Window");
  demoWindow.getFrameset().newFrame(createFrame(demoWindow.getFrameset()));
  l.addComponent(addButton);
  l.addComponent(removeButton);
  updateWinStatus();
  propertyPanel=new PropertyPanel(demoWindow);
  propertyPanel.dependsOn(addButton);
  propertyPanel.dependsOn(removeButton);
  Form ap=propertyPanel.createBeanPropertySet(new String[]{"width","height","name","border","theme"});
  ap.replaceWithSelect("border",new Object[]{new Integer(Window.BORDER_DEFAULT),new Integer(Window.BORDER_NONE),new Integer(Window.BORDER_MINIMAL)},new Object[]{"Default","None","Minimal"});
  propertyPanel.addProperties("FrameWindow Properties",ap);
  return l;
}
