{
  if (row > getRows()) {
    throw new IllegalArgumentException("Cannot insert row at " + row + " in a gridlayout with height "+ getRows());
  }
  for (Iterator<Area> i=areas.iterator(); i.hasNext(); ) {
    Area existingArea=i.next();
    if (existingArea.row2 >= row) {
      existingArea.row2++;
      if (existingArea.row1 >= row) {
        existingArea.row1++;
      }
    }
  }
  if (cursorY >= row) {
    cursorY++;
  }
  setRows(getRows() + 1);
  structuralChange=true;
  requestRepaint();
}
