{
  Area area;
  boolean done=false;
  while (!done) {
    try {
      area=new Area(component,cursorX,cursorY,cursorX,cursorY);
      checkExistingOverlaps(area);
      done=true;
    }
 catch (    final OverlapsException e) {
      space();
    }
  }
  if (cursorX >= getColumns()) {
    setColumns(cursorX + 1);
  }
  if (cursorY >= getRows()) {
    setRows(cursorY + 1);
  }
  addComponent(component,cursorX,cursorY);
}
