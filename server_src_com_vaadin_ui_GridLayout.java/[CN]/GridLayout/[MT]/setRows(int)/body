{
  if (rows < 1) {
    throw new IllegalArgumentException("The number of columns and rows in the grid must be at least 1");
  }
  if (getRows() == rows) {
    return;
  }
  if (getRows() > rows) {
    for (final Iterator<Area> i=areas.iterator(); i.hasNext(); ) {
      final Area area=i.next();
      if (area.row2 >= rows) {
        throw new OutOfBoundsException(area);
      }
    }
  }
  getState().setRows(rows);
}
