{
  boolean standalone=request.getDeploymentConfiguration().isStandalone(request);
  Document document;
  Element applicationTag;
  if (standalone) {
    document=Document.createShell("");
    applicationTag=document.body();
  }
 else {
    document=null;
    applicationTag=new Element(Tag.valueOf("div"),"");
  }
  BootstrapContext context=new BootstrapContext(response,new BootstrapResponse(this,request,document,applicationTag,headers,application,rootId));
  return context;
}
