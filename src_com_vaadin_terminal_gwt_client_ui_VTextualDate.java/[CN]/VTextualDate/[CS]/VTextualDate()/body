{
  super();
  text=new TextBox();
  text.setStyleName(VTextField.CLASSNAME);
  text.addStyleName(CLASSNAME + "-textfield");
  text.addChangeHandler(this);
  text.addFocusHandler(new FocusHandler(){
    public void onFocus(    FocusEvent event){
      text.addStyleName(VTextField.CLASSNAME + "-" + VTextField.CLASSNAME_FOCUS);
      if (client != null && client.hasEventListeners(VTextualDate.this,FOCUS_EVENT_IDENTIFIER)) {
        client.updateVariable(id,FOCUS_EVENT_IDENTIFIER,"",true);
      }
    }
  }
);
  text.addBlurHandler(new BlurHandler(){
    public void onBlur(    BlurEvent event){
      text.removeStyleName(VTextField.CLASSNAME + "-" + VTextField.CLASSNAME_FOCUS);
      if (client != null && client.hasEventListeners(VTextualDate.this,BLUR_EVENT_IDENTIFIER)) {
        client.updateVariable(id,BLUR_EVENT_IDENTIFIER,"",true);
      }
    }
  }
);
  add(text);
}
