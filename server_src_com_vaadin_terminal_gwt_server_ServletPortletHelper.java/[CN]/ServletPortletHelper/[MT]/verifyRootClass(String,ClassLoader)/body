{
  if (className == null) {
    throw new ApplicationClassException(Application.UI_PARAMETER + " init parameter not defined");
  }
  try {
    Class<?> rootClass=classLoader.loadClass(className);
    if (!UI.class.isAssignableFrom(rootClass)) {
      throw new ApplicationClassException(className + " does not implement UI");
    }
    rootClass.getConstructor();
  }
 catch (  ClassNotFoundException e) {
    throw new ApplicationClassException(className + " could not be loaded",e);
  }
catch (  SecurityException e) {
    throw new ApplicationClassException("Could not access " + className + " class",e);
  }
catch (  NoSuchMethodException e) {
    throw new ApplicationClassException(className + " doesn't have a public no-args constructor");
  }
}
