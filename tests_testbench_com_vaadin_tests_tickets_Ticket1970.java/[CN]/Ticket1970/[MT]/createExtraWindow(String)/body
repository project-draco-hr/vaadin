{
  final Root w=new Root("Extra window: " + name);
  addWindow(w,name);
  w.addComponent(new Label("This window has been created on fly for name: " + name));
  w.addComponent(new Button("Show open windows",new Button.ClickListener(){
    public void buttonClick(    ClickEvent event){
      String openWindows="";
      for (Iterator<Root> i=getWindows().iterator(); i.hasNext(); ) {
        Root t=i.next();
        openWindows+=(openWindows.length() > 0 ? "," : "") + getWindowName(t);
      }
      w.showNotification(openWindows);
    }
  }
));
  return w;
}
