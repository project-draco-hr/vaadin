{
  final MarginInfo margins=new MarginInfo(uidl.getIntAttribute("margins"));
  setStyleName(me,CLASSNAME + "-" + StyleConstants.MARGIN_TOP,margins.hasTop());
  setStyleName(me,CLASSNAME + "-" + StyleConstants.MARGIN_RIGHT,margins.hasRight());
  setStyleName(me,CLASSNAME + "-" + StyleConstants.MARGIN_BOTTOM,margins.hasBottom());
  setStyleName(me,CLASSNAME + "-" + StyleConstants.MARGIN_LEFT,margins.hasLeft());
}
