{
  final MarginInfo margins=new MarginInfo(uidl.getIntAttribute("margins"));
  setStyleName(me,CLASSNAME + "-" + StyleConstants.LAYOUT_MARGIN_TOP,margins.hasTop());
  setStyleName(me,StyleConstants.LAYOUT_MARGIN_RIGHT,margins.hasRight());
  setStyleName(me,CLASSNAME + "-" + StyleConstants.LAYOUT_MARGIN_BOTTOM,margins.hasBottom());
  setStyleName(me,StyleConstants.LAYOUT_MARGIN_LEFT,margins.hasLeft());
}
