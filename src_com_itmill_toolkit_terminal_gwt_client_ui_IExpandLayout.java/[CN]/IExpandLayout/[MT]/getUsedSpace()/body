{
  int total=0;
  int widgetCount=getWidgetCount();
  Iterator it=iterator();
  while (it.hasNext()) {
    Widget w=(Widget)it.next();
    if (w != expandedWidget) {
switch (orientationMode) {
case ORIENTATION_VERTICAL:
        total+=DOM.getElementPropertyInt(DOM.getParent(w.getElement()),"offsetHeight");
      break;
default :
    total+=DOM.getElementPropertyInt(DOM.getParent(w.getElement()),"offsetWidth");
  break;
}
}
}
total+=getSpacingSize() * (widgetCount - 1);
return total;
}
