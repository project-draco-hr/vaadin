{
  final int spaceForMarginsAndSpacings=getOffsetHeight() - DOM.getElementPropertyInt(getElement(),"clientHeight");
  int fixedInnerSize=pixels - spaceForMarginsAndSpacings;
  if (fixedInnerSize < 0) {
    fixedInnerSize=0;
  }
  setHeight(fixedInnerSize + "px");
  DOM.setStyleAttribute(getContainerElement(),"overflow","auto");
}
