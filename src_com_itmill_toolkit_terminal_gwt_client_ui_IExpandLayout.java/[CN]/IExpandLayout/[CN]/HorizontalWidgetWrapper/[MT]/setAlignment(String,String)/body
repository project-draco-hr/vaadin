{
  DOM.setStyleAttribute(getElement(),"verticalAlign",verticalAlignment);
  if (!valign.equals(verticalAlignment)) {
    if (verticalAlignment.equals("top")) {
    }
 else {
      if (td == null) {
        Element table=DOM.createTable();
        Element tBody=DOM.createTBody();
        Element tr=DOM.createTR();
        td=DOM.createTD();
        DOM.appendChild(table,tBody);
        DOM.appendChild(tBody,tr);
        DOM.appendChild(tr,td);
        DOM.setElementProperty(table,"className",CLASSNAME + "-valign");
        DOM.setElementProperty(tr,"className",CLASSNAME + "-valign");
        DOM.setElementProperty(td,"className",CLASSNAME + "-valign");
        Element content=DOM.getFirstChild(getElement());
        if (content != null) {
          DOM.removeChild(getElement(),content);
          DOM.appendChild(td,content);
        }
        DOM.appendChild(getElement(),table);
      }
      DOM.setStyleAttribute(td,"verticalAlign",verticalAlignment);
    }
    valign=verticalAlignment;
  }
}
