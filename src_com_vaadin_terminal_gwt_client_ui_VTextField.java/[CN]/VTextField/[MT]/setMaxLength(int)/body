{
  if (newMaxLength > 0) {
    maxLength=newMaxLength;
    if (getElement().getTagName().toLowerCase().equals("textarea")) {
    }
 else {
      getElement().setPropertyInt("maxLength",maxLength);
    }
  }
 else   if (maxLength != -1) {
    if (getElement().getTagName().toLowerCase().equals("textarea")) {
    }
 else {
      getElement().removeAttribute("maxLength");
    }
    maxLength=-1;
  }
}
