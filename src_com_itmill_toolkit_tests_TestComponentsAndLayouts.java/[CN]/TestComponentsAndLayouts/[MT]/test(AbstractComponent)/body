{
  ClassResource res=new ClassResource("m.gif",this);
  ErrorMessage errorMsg=new UserError("User error " + c);
  if ((c.getCaption() == null) || (c.getCaption().length() <= 0))   c.setCaption("Caption " + c);
  c.setDescription("Description " + c);
  c.setComponentError(errorMsg);
  c.setIcon(res);
  c.setImmediate(true);
  try {
    c.addListener(this);
  }
 catch (  Exception e) {
    System.err.println("Could not add listener for component " + c + ", count was "+ count);
  }
}
