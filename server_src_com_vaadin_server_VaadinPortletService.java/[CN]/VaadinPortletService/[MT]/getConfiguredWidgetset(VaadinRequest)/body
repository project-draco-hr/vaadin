{
  String widgetset=getDeploymentConfiguration().getApplicationOrSystemProperty(VaadinPortlet.PARAMETER_WIDGETSET,null);
  if (widgetset == null) {
    widgetset=VaadinPortletRequest.cast(request).getPortalProperty(VaadinPortlet.PORTAL_PARAMETER_VAADIN_WIDGETSET);
  }
  if (widgetset == null) {
    widgetset=VaadinPortlet.DEFAULT_WIDGETSET;
  }
  return widgetset;
}
