{
  String style=VCaption.CLASSNAME;
  if (uidl.hasAttribute(VAbstractPaintableWidget.ATTRIBUTE_DISABLED)) {
    style+=" " + ApplicationConnection.DISABLED_CLASSNAME;
  }
  setStyleName(style);
  boolean hasDescription=uidl.hasAttribute(VAbstractPaintableWidget.ATTRIBUTE_DESCRIPTION);
  if (hasDescription) {
    if (captionText != null) {
      addStyleDependentName("hasdescription");
    }
 else {
      removeStyleDependentName("hasdescription");
    }
  }
}
