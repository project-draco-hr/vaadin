{
  ol.setHeight("600px");
  ol.setWidth("600px");
  ol.setMargin(true);
  ol.setSpacing(false);
  ol.setCaption("100 % filled with fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px)");
  TextField tf;
  tf=new TextField();
  tf.setValue("80% x 20% TextField");
  tf.setWidth("80%");
  tf.setHeight("20%");
  tf.setRows(2);
  ol.addComponent(tf);
  tf=new TextField("20%x60% Field");
  tf.setCaption(null);
  tf.setValue("20% x 60% TextField");
  tf.setWidth("20%");
  tf.setHeight("60%");
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  tf.setRows(2);
  ol.addComponent(tf);
  return ol;
}
