{
  if (value == null) {
    if (allowNull) {
      return;
    }
 else {
      throw new Validator.InvalidValueException(errorMessage);
    }
  }
  final String s=value.toString();
  if (s == null) {
    if (allowNull) {
      return;
    }
 else {
      throw new Validator.InvalidValueException(errorMessage);
    }
  }
  final int len=s.length();
  if ((minLength >= 0 && len < minLength) || (maxLength >= 0 && len > maxLength)) {
    throw new Validator.InvalidValueException(errorMessage);
  }
}
