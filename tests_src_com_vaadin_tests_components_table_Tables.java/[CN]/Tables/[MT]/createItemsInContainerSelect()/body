{
  LinkedHashMap<String,Integer> options=new LinkedHashMap<String,Integer>();
  options.put("0",0);
  options.put("20",20);
  options.put("100",100);
  options.put("1000",1000);
  options.put("10000",10000);
  options.put("100000",100000);
  return super.createSelectAction("Items in container",options,"20",new Command<Table,Integer>(){
    public void execute(    Table t,    Integer value){
      t.setContainerDataSource(createContainer(t.getContainerDataSource().getContainerPropertyIds().size(),value));
    }
  }
);
}
