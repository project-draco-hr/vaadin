{
  Millionaire person=new Millionaire("First","Last","foo@vaadin.com","02-111 2222","Ruukinkatu 2-4",20540,"Turku");
  BeanItem<Millionaire> item=new BeanItem<Millionaire>(person);
  item.addItemProperty("streetAddress",new NestedMethodProperty<String>(person,"address.streetAddress"));
  item.addItemProperty("postalCode",new NestedMethodProperty<Integer>(person,"address.postalCode"));
  item.addItemProperty("city",new NestedMethodProperty<String>(person,"address.city"));
  item.removeItemProperty("address");
  item.removeItemProperty("secondaryResidences");
  return item;
}
