{
  field.addValidator(new LegacyStringLengthValidator("Length not between 1 and 3",1,3,false));
  field.addValidator(new LegacyStringLengthValidator("Length not between 2 and 4",2,4,false));
  try {
    field.setValue("a");
    fail();
  }
 catch (  InvalidValueException e) {
  }
  field.setValue("ab");
  try {
    field.setValue("abcd");
    fail();
  }
 catch (  InvalidValueException e) {
  }
}
