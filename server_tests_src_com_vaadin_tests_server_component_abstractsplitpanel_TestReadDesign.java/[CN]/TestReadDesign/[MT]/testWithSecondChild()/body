{
  Element design=createDesign(true,false,false,true);
  HorizontalSplitPanel sp=new HorizontalSplitPanel();
  sp.readDesign(design,ctx);
  assertEquals("Unexpected child count for the split panel.",1,sp.getComponentCount());
  Object obj=sp.getSecondComponent();
  assertEquals("Wrong component in split panel.",VerticalLayout.class,obj.getClass());
}
