{
  String res=xmlSnippet;
  DebugWindow.replaceAll(res,"&lt;!--","<SPAN STYLE=\"color: #00dd00\">&lt;!--");
  res=DebugWindow.replaceAll(res,"--&gt;","--&gt;</SPAN>");
  String l="&nbsp;";
  while (res.startsWith(" ")) {
    l+="&nbsp;";
    res=res.substring(1,res.length());
  }
  res=l + res;
  return res;
}
