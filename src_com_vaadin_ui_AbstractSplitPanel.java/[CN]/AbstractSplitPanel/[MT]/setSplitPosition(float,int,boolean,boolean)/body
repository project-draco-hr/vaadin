{
  if (unit != UNITS_PERCENTAGE && unit != UNITS_PIXELS) {
    throw new IllegalArgumentException("Only percentage and pixel units are allowed");
  }
  if (unit != UNITS_PERCENTAGE) {
    pos=Math.round(pos);
  }
  this.pos=pos;
  posUnit=unit;
  posReversed=reverse;
  if (repaintNeeded) {
    requestRepaint();
  }
}
