{
  if (converter != null) {
    MODELTYPE model=converter.convertToModel(presentationValue,modelType,locale);
    if (model != null && !modelType.isInstance(model)) {
      throw new LegacyConverter.ConversionException("Converter returned an object of type " + model.getClass().getName() + " when expecting "+ modelType.getName());
    }
    return model;
  }
  if (presentationValue == null) {
    return null;
  }
  if (modelType == null) {
    return (MODELTYPE)presentationValue;
  }
 else   if (modelType.isAssignableFrom(presentationValue.getClass())) {
    return modelType.cast(presentationValue);
  }
 else {
    throw new LegacyConverter.ConversionException("Unable to convert value of type " + presentationValue.getClass().getName() + " to model type "+ modelType+ ". No converter is set and the types are not compatible.");
  }
}
