{
  if (html.isAttached()) {
    fp.remove(html);
    if (BrowserInfo.get().isWebkit()) {
      fp.remove(formatter);
      createRTAComponents();
      fp.add(formatter);
    }
    rta.setHTML(currentValue);
    fp.add(rta);
  }
 else {
    html.setHTML(currentValue);
    fp.remove(rta);
    fp.add(html);
  }
}
