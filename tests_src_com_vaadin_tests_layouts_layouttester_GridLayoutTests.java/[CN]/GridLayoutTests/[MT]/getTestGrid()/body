{
  GridLayout grid=new GridLayout(4,4);
  grid.addComponent(rc1=new Button("R/C 1"));
  grid.addComponent(col1=new Button("Col " + (grid.getCursorX() + 1)));
  grid.addComponent(col2=new Button("Col " + (grid.getCursorX() + 1)));
