{
  buildViews(new String[]{"main","view2","view3"});
  mainLayout=new VerticalLayout();
  mainLayout.setSizeFull();
  final Root mainWin=new Root("Test app for URI fragment management/reading",mainLayout);
  setMainWindow(mainWin);
  mainWin.addListener(new Root.FragmentChangedListener(){
    public void fragmentChanged(    FragmentChangedEvent event){
      getMainWindow().showNotification("Fragment now: " + event.getFragment());
      setView(event.getFragment());
    }
  }
);
  setView("main");
}
