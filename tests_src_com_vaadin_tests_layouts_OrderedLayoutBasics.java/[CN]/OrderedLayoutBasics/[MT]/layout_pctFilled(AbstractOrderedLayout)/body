{
  ol.setHeight("600px");
  ol.setWidth("600px");
  ol.setMargin(true);
  ol.setSpacing(true);
  ol.setCaption("100 % filled with fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px)");
  TextArea ta;
  ta=new TextArea();
  ta.setCaption("This one has a caption");
  ta.setValue("60% expand TextField");
  ta.setWidth("100%");
  ta.setHeight("100%");
  ta.setRows(2);
  ol.addComponent(ta);
  ol.setExpandRatio(ta,60);
  ta=new TextArea();
  ta.setValue("100px 100px TextField");
  ta.setWidth("100px");
  ta.setHeight("100px");
  ta.setRows(2);
  ol.addComponent(ta);
  ol.setComponentAlignment(ta,Alignment.MIDDLE_CENTER);
  ta=new TextArea("40%x40% Field");
  ta.setValue("40% expand (40% height) TextField");
  ta.setWidth("100%");
  ta.setHeight("40%");
  ol.addComponent(ta);
  ol.setExpandRatio(ta,40);
  ol.setComponentAlignment(ta,Alignment.BOTTOM_RIGHT);
  ta.setRows(2);
  return ol;
}
