{
  ol.setHeight("700px");
  ol.setWidth("900px");
  ol.setMargin(true);
  ol.setSpacing(true);
  ol.setCaption("Fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px) / layout_basic_test");
  TextArea tf;
  tf=new TextArea("300px x 300px Field");
  tf.setValue("300x300 field");
  tf.setRows(2);
  tf.setHeight("300px");
  tf.setWidth("300px");
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.TOP_LEFT);
  tf=new TextArea("300px x 300px Field");
  tf.setValue("300x300 field");
  tf.setRows(2);
  tf.setHeight("300px");
  tf.setWidth("300px");
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  return ol;
}
