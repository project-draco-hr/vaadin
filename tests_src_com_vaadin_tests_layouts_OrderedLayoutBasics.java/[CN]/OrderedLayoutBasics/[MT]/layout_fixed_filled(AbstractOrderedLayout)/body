{
  ol.setHeight("700px");
  ol.setWidth("700px");
  ol.setMargin(true);
  ol.setSpacing(true);
  ol.setCaption("Filled with fixed width (" + ol.getWidth() + "px) and fixed height ("+ ol.getHeight()+ "px)");
  TextArea tf;
  tf=new TextArea("60%x100% Field");
  tf.setCaption("This one has a caption");
  tf.setValue("60% x 100% TextField");
  tf.setWidth("100%");
  tf.setHeight("100%");
  tf.setRequired(true);
  tf.setRows(2);
  ol.addComponent(tf);
  ol.setExpandRatio(tf,1f);
  tf=new TextArea("60%x60% Field");
  tf.setCaption(null);
  tf.setValue("60% x 60% TextField");
  tf.setWidth("100%");
  tf.setHeight("60%");
  tf.setRequired(true);
  ol.addComponent(tf);
  ol.setExpandRatio(tf,1f);
  ol.setComponentAlignment(tf,Alignment.MIDDLE_LEFT);
  tf.setRows(2);
  tf=new TextArea("200px x 200px Field");
  tf.setValue("200x200 field");
  tf.setRows(2);
  tf.setHeight("200px");
  tf.setWidth("200px");
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.TOP_LEFT);
  tf=new TextArea("200px x 200px Field");
  tf.setValue("200x200 field");
  tf.setRows(2);
  tf.setHeight("200px");
  tf.setWidth("200px");
  ol.addComponent(tf);
  ol.setComponentAlignment(tf,Alignment.BOTTOM_RIGHT);
  return ol;
}
