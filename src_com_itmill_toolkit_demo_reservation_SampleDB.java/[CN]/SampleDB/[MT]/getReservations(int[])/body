{
  String q="SELECT * FROM " + Reservation.TABLE;
  if (resourceIds != null && resourceIds.length > 0) {
    StringBuilder s=new StringBuilder();
    for (int i=0; i < resourceIds.length; i++) {
      if (i > 0) {
        s.append(",");
      }
      s.append(resourceIds[i]);
    }
    q+=" HAVING " + Reservation.PROPERTY_ID_RESOURCE_ID + " IN ("+ s+ ")";
  }
  q+=" ORDER BY " + Reservation.PROPERTY_ID_RESERVED_FROM;
  try {
    QueryContainer qc=new QueryContainer(q,connection,ResultSet.TYPE_SCROLL_INSENSITIVE,ResultSet.CONCUR_READ_ONLY);
    if (qc.size() < 1) {
      return null;
    }
 else {
      return qc;
    }
  }
 catch (  SQLException e) {
    throw new RuntimeException(e);
  }
}
