{
  GridCellElement headerCell=getGridElement().getHeaderCell(0,0);
  Dimension size=headerCell.getSize();
  new Actions(getDriver()).moveToElement(headerCell,size.getWidth() - 1,size.getHeight() / 2).clickAndHold().moveByOffset(-10,0).release().perform();
  assertTrue("Log did not contain a resize event.",logContainsText("ColumnResizeEvent : isUserOriginated? true"));
}
