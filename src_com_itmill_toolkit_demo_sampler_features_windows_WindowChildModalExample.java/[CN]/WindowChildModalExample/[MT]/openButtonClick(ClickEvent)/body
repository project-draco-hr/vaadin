{
  Window w=new Window("Modal child window");
  Label desc=new Label("This is a modal child window with its own state." + " You cannot access the main window while the modal child" + " window is shown.");
  w.addComponent(desc);
  w.addListener(this);
  w.setResizable(false);
  w.setModal(true);
  getApplication().getMainWindow().addWindow(w);
}
