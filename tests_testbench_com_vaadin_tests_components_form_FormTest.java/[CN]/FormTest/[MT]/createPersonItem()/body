{
  Person person=new Person("First","Last","foo@vaadin.com","02-111 2222","Ruukinkatu 2-4",20540,"Turku");
  BeanItem<Person> personItem=new BeanItem<Person>(person);
  personItem.addItemProperty("streetAddress",new NestedMethodProperty<String>(person,"address.streetAddress"));
  personItem.addItemProperty("postalCode",new NestedMethodProperty<Integer>(person,"address.postalCode"));
  personItem.addItemProperty("city",new NestedMethodProperty<String>(person,"address.city"));
  personItem.removeItemProperty("address");
  return personItem;
}
