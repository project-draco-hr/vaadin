{
  if (isHorizontalScrollable()) {
    updateCellWidths();
    wrapper.setWidth(content.getOffsetWidth() + Util.getNativeScrollbarSize() + "px");
    this.width=content.getOffsetWidth() - timebar.getOffsetWidth();
  }
 else {
    this.width=(width == -1) ? width : width - timebar.getOffsetWidth();
    if (isVerticalScrollable() && width != -1) {
      this.width=this.width - Util.getNativeScrollbarSize();
    }
    updateCellWidths();
  }
}
