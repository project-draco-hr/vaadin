{
  for (int i=range.getStart(); i < range.getEnd(); i++) {
    final Object itemId=datasource.getIdByIndex(i);
    final Item item=datasource.getItem(itemId);
    final GridValueChangeListener listener=valueChangeListeners.remove(itemId);
    if (listener != null) {
      for (      final Object propertyId : item.getItemPropertyIds()) {
        final Property<?> property=item.getItemProperty(propertyId);
        ((ValueChangeNotifier)property).removeValueChangeListener(listener);
      }
    }
  }
}
