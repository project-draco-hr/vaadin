{
  File[] l;
  if (filter != null) {
    l=f.listFiles(filter);
  }
 else {
    l=f.listFiles();
  }
  final List<File> ll=Arrays.asList(l);
  Collections.sort(ll);
  for (final Iterator<File> i=ll.iterator(); i.hasNext(); ) {
    final File lf=i.next();
    if (lf.isDirectory()) {
      addItemIds(col,lf);
    }
 else {
      col.add(lf);
    }
  }
}
