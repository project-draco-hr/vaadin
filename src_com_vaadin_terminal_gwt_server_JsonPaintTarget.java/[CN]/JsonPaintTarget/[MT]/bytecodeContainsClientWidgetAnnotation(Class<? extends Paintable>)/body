{
  try {
    String name=class1.getName().replace('.','/') + ".class";
    InputStream stream=class1.getClassLoader().getResourceAsStream(name);
    BufferedReader bufferedReader=new BufferedReader(new InputStreamReader(stream));
    try {
      String line;
      boolean atSourcefile=false;
      while ((line=bufferedReader.readLine()) != null) {
        if (line.startsWith("SourceFile")) {
          atSourcefile=true;
        }
        if (atSourcefile) {
          if (line.contains("ClientWidget")) {
            return true;
          }
        }
      }
    }
 catch (    IOException e1) {
      getLogger().log(Level.SEVERE,"An error occurred while finding widget mapping.",e1);
    }
 finally {
      try {
        bufferedReader.close();
      }
 catch (      IOException e1) {
        getLogger().log(Level.SEVERE,"Could not close reader.",e1);
      }
    }
  }
 catch (  Throwable t) {
    getLogger().log(Level.SEVERE,"An error occurred while finding widget mapping.",t);
  }
  return false;
}
