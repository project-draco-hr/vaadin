{
  addComponent(new Label("window.name: " + request.getParameter("wn")));
  addComponent(new Label("UI id: " + getUIId()));
  addComponent(log);
  log.log("Initial fragment: " + getPage().getUriFragment());
  getPage().addUriFragmentChangedListener(new UriFragmentChangedListener(){
    @Override public void uriFragmentChanged(    UriFragmentChangedEvent event){
      log.log("Fragment changed to " + event.getUriFragment());
    }
  }
);
}
