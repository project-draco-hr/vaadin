{
  FormLayout layout=new FormLayout();
  layout.addStyleName("form");
  Label label=new Label("target");
  label.addStyleName("label");
  layout.addComponent(label);
  layout.addLayoutClickListener(new LayoutClickListener(){
    @Override public void layoutClick(    LayoutClickEvent event){
      log("Child component: " + (event.getChildComponent() == null ? null : event.getChildComponent().getStyleName()));
      log("Clicked component: " + (event.getClickedComponent() == null ? null : event.getClickedComponent().getStyleName()));
      log("Source component: " + event.getComponent().getStyleName());
    }
  }
);
  addComponent(layout);
}
