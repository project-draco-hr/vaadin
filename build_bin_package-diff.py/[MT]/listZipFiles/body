def listZipFiles(zipfile):
    pin = os.popen(('unzip -ql %s' % zipfile), 'r')
    lines = map((lambda x: x[:(-1)]), pin.readlines())
    pin.close()
    namepos = lines[0].find('Name')
    files = []
    for i in xrange(2, (len(lines) - 2)):
        filename = lines[i][namepos:]
        files.append(filename)
    return files
