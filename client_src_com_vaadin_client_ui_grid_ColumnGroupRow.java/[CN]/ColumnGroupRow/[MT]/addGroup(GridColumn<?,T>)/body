{
  for (  GridColumn<?,T> column : columns) {
    if (isColumnGrouped(column)) {
      throw new IllegalArgumentException("Column " + String.valueOf(column.getHeaderCaption()) + " already belongs to another group.");
    }
  }
  validateNewGroupProperties(Arrays.asList(columns));
  ColumnGroup<T> group=new ColumnGroup<T>(grid,Arrays.asList(columns));
  groups.add(group);
  grid.refreshHeader();
  grid.refreshFooter();
  return group;
}
