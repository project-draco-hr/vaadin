{
  Table def=context.getDefaultInstance(this);
  DesignAttributeHandler.writeAttribute("sortable",design.attributes(),isSortEnabled(),def.isSortEnabled(),boolean.class);
  Element table=null;
  boolean hasColumns=getVisibleColumns().length != 0;
  if (hasColumns) {
    table=design.appendElement("table");
    writeColumns(table,def);
    writeHeader(table,def);
  }
  super.writeDesign(design,context);
  if (hasColumns) {
    writeFooter(table);
  }
}
