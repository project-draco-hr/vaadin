{
  if (!changingView) {
    changingView=true;
    buildCalendar(locale != datefield.getCurrentLocale() || resolution != datefield.getCurrentResolution());
    locale=datefield.getCurrentLocale();
    resolution=datefield.getCurrentResolution();
    Timer changeTimer=new Timer(){
      @Override public void run(){
        changingView=false;
      }
    }
;
    changeTimer.schedule(100);
  }
}
