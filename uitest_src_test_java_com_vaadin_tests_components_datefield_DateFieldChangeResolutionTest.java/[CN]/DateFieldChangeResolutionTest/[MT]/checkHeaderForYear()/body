{
  assertTrue("The calendar should have a button for switching to the previous year",isElementPresent(By.cssSelector(".v-datefield-calendarpanel-header .v-datefield-calendarpanel-prevyear .v-button-prevyear")));
  assertTrue("The calendar header should show the selected year",isElementPresent(By.cssSelector(".v-datefield-calendarpanel-header .v-datefield-calendarpanel-month")));
  assertTrue("The calendar should have a button for switching to the next year",isElementPresent(By.cssSelector(".v-datefield-calendarpanel-header .v-datefield-calendarpanel-nextyear .v-button-nextyear")));
}
