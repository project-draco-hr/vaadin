{
  if (param != null) {
    if (param.equals("simple")) {
      TabSheet tabsheet=new TabSheet();
      VerticalLayout myTab=new VerticalLayout();
      myTab.addComponent(new Label("Hello, I am a Tab!"));
      tabsheet.addTab(myTab);
      tabsheet.getTab(myTab).setCaption("My Tab");
    }
 else     if (param.equals("icon")) {
      final TabSheet tabsheet=new TabSheet();
      tabsheet.addTab(new Label("Contents of the first tab"),"First Tab",new ClassResource("images/Mercury_small.png",main.getApplication()));
      tabsheet.addTab(new Label("Contents of the second tab"),"Second Tab",new ClassResource("images/Venus_small.png",this));
      tabsheet.addTab(new Label("Contents of the third tab"),"Third tab",new ClassResource("images/Earth_small.png",this));
      main.addComponent(tabsheet);
    }
 else     if (param.equals("expanding")) {
      VerticalLayout layout=new VerticalLayout();
      main.setLayout(layout);
      final TabSheet tabsheet=new TabSheet();
      tabsheet.addTab(new Label("Contents of the first tab"),"First Tab",null);
      tabsheet.addTab(new Label("Contents of the second tab"),"Second Tab",null);
      tabsheet.addTab(new Label("Contents of the third tab"),"Third tab",null);
      tabsheet.setWidth(100,Sizeable.UNITS_PERCENTAGE);
      tabsheet.setHeight(100,Sizeable.UNITS_PERCENTAGE);
      layout.addComponent(tabsheet);
      layout.setExpandRatio(tabsheet,1);
    }
 else     if (param.equals("ordered")) {
      VerticalLayout layout=new VerticalLayout();
      main.setLayout(layout);
      final TabSheet tabsheet=new TabSheet();
      tabsheet.addTab(new Label("Contents of the first tab"),"First Tab",null);
      tabsheet.addTab(new Label("Contents of the second tab"),"Second Tab",null);
      tabsheet.addTab(new Label("Contents of the third tab"),"Third tab",null);
      tabsheet.setWidth(100,Sizeable.UNITS_PERCENTAGE);
      layout.addComponent(tabsheet);
    }
  }
 else {
    main.addComponent(new TabSheetExample());
  }
}
