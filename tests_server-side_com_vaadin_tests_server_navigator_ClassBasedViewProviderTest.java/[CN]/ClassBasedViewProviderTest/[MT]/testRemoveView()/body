{
  provider.addView("test",TestView.class);
  assertNotNull("Did not get view from a provider",provider.getView("test"));
  provider.removeView("test");
  assertNull("View class found for removed view name",provider.getViewClass("test"));
  assertNull("View name found for removed view",provider.getViewName(TestView.class));
  assertNull("Received view instance from a provider after removing view type",provider.getView("test"));
}
