{
  if (!args.getType().equalsIgnoreCase("editor") || editor.getState() != State.ACTIVE) {
    return null;
  }
  if (args.getIndicesLength() == 0) {
    return editor.editorOverlay;
  }
 else   if (args.getIndicesLength() == 1 && args.getIndex(0) < columns.size()) {
    escalator.scrollToColumn(args.getIndex(0),ScrollDestination.ANY,0);
    return editor.getWidget(columns.get(args.getIndex(0))).getElement();
  }
  return null;
}
