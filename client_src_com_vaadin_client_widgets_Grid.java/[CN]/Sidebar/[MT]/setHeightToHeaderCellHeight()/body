{
  try {
    double height=WidgetUtil.getRequiredHeightBoundingClientRectDouble(grid.escalator.getHeader().getRowElement(0).getFirstChildElement()) - (WidgetUtil.measureVerticalBorder(getElement()) / 2);
    openCloseButton.setHeight(height + "px");
  }
 catch (  NullPointerException npe) {
    getLogger().warning("Got null header first row or first row cell when calculating sidebar button height");
    openCloseButton.setHeight(grid.escalator.getHeader().getDefaultRowHeight() + "px");
  }
}
