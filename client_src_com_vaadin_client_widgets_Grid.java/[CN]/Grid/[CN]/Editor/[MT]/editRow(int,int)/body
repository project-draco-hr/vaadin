{
  if (!enabled) {
    throw new IllegalStateException("Cannot edit row: editor is not enabled");
  }
  if (state != State.INACTIVE) {
    if (isBuffered()) {
      throw new IllegalStateException("Cannot edit row: editor already in edit mode");
    }
  }
  this.columnIndex=columnIndex;
  state=State.ACTIVATING;
  if (grid.getEscalator().getVisibleRowRange().contains(rowIndex)) {
    show(rowIndex);
  }
 else {
    hideOverlay();
    dataAvailableHandler=grid.addDataAvailableHandler(new DataAvailableHandler(){
      @Override public void onDataAvailable(      DataAvailableEvent event){
        if (event.getAvailableRows().contains(rowIndex)) {
          show(rowIndex);
          dataAvailableHandler.removeHandler();
        }
      }
    }
);
    grid.scrollToRow(rowIndex,ScrollDestination.MIDDLE);
  }
}
