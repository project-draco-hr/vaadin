{
  main.removeAllComponents();
  main.addComponent(new Label("Each Layout and their contained components should " + "have icon, caption, description, user error defined. " + "Eeach layout should contain similar components."));
  main.addComponent(eventListenerFeedback);
  main.addComponent(new Label("OrderedLayout"));
  test(main);
  populateLayout(main);
  final Panel panel=new Panel("Panel");
  test(panel);
  populateLayout(panel.getLayout());
  final TabSheet tabsheet=new TabSheet();
  test(tabsheet);
  final OrderedLayout tab1=new OrderedLayout();
  tab1.addComponent(new Label("try tab2"));
  final OrderedLayout tab2=new OrderedLayout();
  test(tab2);
  populateLayout(tab2);
  tabsheet.addTab(tab1,"TabSheet tab1",new ClassResource("m.gif",getApplication()));
  tabsheet.addTab(tab2,"TabSheet tab2",new ClassResource("m.gif",getApplication()));
  final ExpandLayout expandLayout=new ExpandLayout();
  test(expandLayout);
  populateLayout(expandLayout);
  final GridLayout gridLayout=new GridLayout();
  test(gridLayout);
  populateLayout(gridLayout);
  final Window window=new Window("TEST: Window");
  test(window);
  populateLayout(window.getLayout());
}
