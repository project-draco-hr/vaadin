{
  super.paintContent(target);
  String position=pos + UNIT_SYMBOLS[posUnit];
  target.addAttribute("position",position);
  if (getHeight() > -1)   target.addAttribute("height",getHeight() + UNIT_SYMBOLS[getHeightUnits()]);
  if (getWidth() > -1)   target.addAttribute("width",getWidth() + UNIT_SYMBOLS[getWidthUnits()]);
  if (firstComponent != null)   firstComponent.paint(target);
 else   (new OrderedLayout()).paint(target);
  if (secondComponent != null)   secondComponent.paint(target);
 else   (new OrderedLayout()).paint(target);
}
