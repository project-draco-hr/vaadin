{
synchronized (MUTEX) {
    if (javaSource == null) {
      StringBuffer src=new StringBuffer();
      try {
        String resourceName="/" + getExample().getClass().getName().replace('.','/') + ".java";
        InputStream is=getClass().getResourceAsStream(resourceName);
        BufferedReader bis=new BufferedReader(new InputStreamReader(is));
        for (String line=bis.readLine(); null != line; line=bis.readLine()) {
          src.append(line);
          src.append("\n");
        }
        javaSource=src.toString();
      }
 catch (      Exception e) {
        System.err.println(MSG_SOURCE_NOT_AVAILABLE + " (" + getPathName()+ ")");
        javaSource=MSG_SOURCE_NOT_AVAILABLE;
      }
    }
  }
  return javaSource;
}
