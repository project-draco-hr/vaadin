{
  if (BrowserInfo.get().getWebkitVersion() > 0) {
    DeferredCommand.addCommand(new Command(){
      public void execute(){
        elem.getStyle().setProperty("overflow","hidden");
        (new Timer(){
          @Override public void run(){
            elem.getStyle().setProperty("overflow","auto");
          }
        }
).schedule(1);
      }
    }
);
  }
}
