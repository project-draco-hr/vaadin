{
  setSpacing(true);
  TwinColSelect l=new TwinColSelect("Please select some cities");
  for (int i=0; i < cities.length; i++) {
    l.addItem(cities[i]);
  }
  l.setRows(7);
  l.setNullSelectionAllowed(true);
  l.setMultiSelect(true);
  l.setImmediate(true);
  l.addListener(this);
  addComponent(l);
}
