{
  int[] rgb=calculateRgb(hsl);
  StringBuilder builder=new StringBuilder("#");
  for (int i=0; i < 3; i++) {
    String color=Integer.toHexString(rgb[i]);
    if (lengh == 3) {
      if (color.length() == 1) {
        color="0" + color;
      }
    }
    if (lengh == 6) {
      color=color.substring(0,1);
    }
    builder.append(color);
  }
  return LexicalUnitImpl.createIdent(hsl.getLineNumber(),hsl.getColumnNumber(),(LexicalUnitImpl)hsl.getPreviousLexicalUnit(),builder.toString());
}
