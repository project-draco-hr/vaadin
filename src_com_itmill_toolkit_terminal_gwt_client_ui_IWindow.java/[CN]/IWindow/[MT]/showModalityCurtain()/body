{
  if (BrowserInfo.get().isFF2()) {
    DOM.setStyleAttribute(modalityCurtain,"height",DOM.getElementPropertyInt(RootPanel.getBodyElement(),"offsetHeight") + "px");
    DOM.setStyleAttribute(modalityCurtain,"position","absolute");
  }
  DOM.setStyleAttribute(modalityCurtain,"zIndex","" + (windowOrder.indexOf(this) + Z_INDEX_BASE));
  DOM.appendChild(RootPanel.getBodyElement(),modalityCurtain);
}
