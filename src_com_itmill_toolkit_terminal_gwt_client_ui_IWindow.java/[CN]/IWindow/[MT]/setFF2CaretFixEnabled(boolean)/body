{
  if (!Util.isFF2()) {
    return;
  }
  if (enable) {
    DeferredCommand.addCommand(new Command(){
      public void execute(){
        String overflow=DOM.getStyleAttribute(getElement(),"overflow");
        DOM.setStyleAttribute(getElement(),"overflow","auto");
      }
    }
);
  }
 else {
    DOM.setStyleAttribute(getElement(),"overflow","");
  }
}
