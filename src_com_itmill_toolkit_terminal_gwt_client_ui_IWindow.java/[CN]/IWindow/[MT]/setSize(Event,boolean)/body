{
  int w=DOM.eventGetScreenX(event) - startX + origW;
  if (w < MIN_WIDTH) {
    w=MIN_WIDTH;
  }
  int h=DOM.eventGetScreenY(event) - startY + origH;
  if (h < MIN_HEIGHT) {
    h=MIN_HEIGHT;
  }
  setWidth(w + "px");
  setHeight(h + "px");
  if (updateVariables) {
    client.updateVariable(id,"width",w,false);
    client.updateVariable(id,"height",h,false);
  }
  client.runDescendentsLayout(this);
}
