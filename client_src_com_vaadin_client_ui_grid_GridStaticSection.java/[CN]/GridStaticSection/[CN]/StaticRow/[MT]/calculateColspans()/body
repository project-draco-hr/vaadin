{
  for (  CELLTYPE cell : cells) {
    cell.setColspan(1);
  }
  for (  List<CELLTYPE> group : cellGroups) {
    for (int i=0; i < group.size(); i++) {
      CELLTYPE cell=group.get(i);
      if (i == 0) {
        cell.setColspan(group.size());
      }
 else {
        cell.setColspan(0);
      }
    }
  }
}
