{
  if (isRoot(itemId)) {
    roots.remove(itemId);
  }
  final Object p=parent.get(itemId);
  if (p != null) {
    final LinkedList<Object> c=children.get(p);
    if (c != null) {
      c.remove(itemId);
    }
  }
  parent.remove(itemId);
  children.remove(itemId);
  noChildrenAllowed.remove(itemId);
}
