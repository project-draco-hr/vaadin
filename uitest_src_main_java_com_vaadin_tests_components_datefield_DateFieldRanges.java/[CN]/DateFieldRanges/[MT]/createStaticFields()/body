{
  Calendar startCal=createCalendar();
  Calendar endCal=createCalendar();
  endCal.add(Calendar.DATE,30);
  GridLayout gl=new GridLayout(2,2);
  gl.setSpacing(true);
  LegacyDateField df=createDateField(startCal.getTime(),endCal.getTime(),null,Resolution.DAY,false);
  gl.addComponent(df);
  LegacyDateField inline=createDateField(startCal.getTime(),endCal.getTime(),null,Resolution.DAY,true);
  gl.addComponent(inline);
  inline.setId("staticInline");
  VerticalLayout vl=new VerticalLayout();
  return gl;
}
