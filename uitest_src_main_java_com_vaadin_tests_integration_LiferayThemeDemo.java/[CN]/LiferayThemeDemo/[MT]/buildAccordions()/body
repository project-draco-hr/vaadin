{
  final GridLayout l=new GridLayout(2,1);
  l.setCaption("Accordions");
  l.setMargin(true);
  l.setSpacing(true);
  l.setWidth("700px");
  Accordion a=new Accordion();
  a.setWidth("100%");
  a.setHeight("170px");
  l.addComponent(a);
  for (int i=1; i < 5; i++) {
    Tab t=a.addTab(new Label(),"Sheet " + i);
    if (i % 2 == 0) {
      t.setIcon(ICON_GLOBE);
    }
    if (i == 2) {
      t.setEnabled(false);
    }
  }
  return l;
}
