{
  if (selectionModel instanceof SelectionModel.Single) {
    return ((SelectionModel.Single)selectionModel).getSelectedRow();
  }
 else {
    throw new IllegalStateException(Grid.class.getSimpleName() + " does not support the 'getSelectedRow' shortcut method " + "unless the selection model implements "+ SelectionModel.Single.class.getName()+ ". The current one does not ("+ selectionModel.getClass().getName()+ ")");
  }
}
