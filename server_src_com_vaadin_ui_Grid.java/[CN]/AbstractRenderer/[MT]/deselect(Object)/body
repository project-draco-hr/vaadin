{
  if (selectionModel instanceof SelectionModel.Single) {
    if (isSelected(itemId)) {
      return ((SelectionModel.Single)selectionModel).select(null);
    }
    return false;
  }
 else   if (selectionModel instanceof SelectionModel.Multi) {
    return ((SelectionModel.Multi)selectionModel).deselect(itemId);
  }
 else {
    throw new IllegalStateException(Grid.class.getSimpleName() + " does not support the 'deselect' shortcut method " + "unless the selection model implements "+ SelectionModel.Single.class.getName()+ " or "+ SelectionModel.Multi.class.getName()+ ". The current one does not ("+ selectionModel.getClass().getName()+ ").");
  }
}
