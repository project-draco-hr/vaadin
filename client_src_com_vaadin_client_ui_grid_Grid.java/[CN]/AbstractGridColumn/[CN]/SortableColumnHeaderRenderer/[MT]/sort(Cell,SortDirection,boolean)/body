{
  GridColumn<?,?> columnInstance=grid.getColumnFromVisibleIndex(cell.getColumn());
  Sort sorting=Sort.by(columnInstance,direction);
  if (multisort) {
    for (    SortOrder order : grid.getSortOrder()) {
      if (order.getColumn() != columnInstance) {
        sorting=sorting.then(order.getColumn(),order.getDirection());
      }
    }
  }
  grid.sort(sorting);
}
