{
  if (this.grid != null && grid != null) {
    throw new IllegalStateException("Column already is attached to grid. Remove the column first from the grid and then add it.");
  }
  this.grid=grid;
  if (grid != null) {
    setVisible(visible);
    setWidth(width);
    setHeaderCaption(header);
    setFooterCaption(footer);
  }
}
