{
  if (!enabled) {
    throw new IllegalStateException("Cannot save: EditorRow is not enabled");
  }
  if (state != State.ACTIVE) {
    throw new IllegalStateException("Cannot save: EditorRow is not in edit mode");
  }
  state=State.SAVING;
  handler.save(new EditorRowRequest<T>(grid,rowIndex,new RequestCallback<T>(){
    @Override public void onResponse(    EditorRowRequest<T> request){
      if (state == State.SAVING) {
        state=State.ACTIVE;
      }
    }
  }
));
}
