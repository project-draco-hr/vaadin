{
  if (this.visible == visible) {
    return;
  }
  if (grid != null) {
    int index=findIndexOfColumn();
    ColumnConfiguration conf=grid.escalator.getColumnConfiguration();
    if (visible) {
      conf.insertColumns(index,1);
    }
 else {
      conf.removeColumns(index,1);
    }
  }
  this.visible=visible;
}
