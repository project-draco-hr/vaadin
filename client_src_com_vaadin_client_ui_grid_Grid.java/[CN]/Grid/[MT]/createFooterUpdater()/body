{
  return new EscalatorUpdater(){
    @Override public void updateCells(    Row row,    List<Cell> cellsToUpdate){
      if (isFooterVisible()) {
        for (        Cell cell : cellsToUpdate) {
          AbstractGridColumn<T> column=columns.get(cell.getColumn());
          cell.getElement().setInnerText(column.getFooterCaption());
        }
      }
    }
  }
;
}
