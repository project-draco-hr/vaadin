{
  if (editorRow.getState() != EditorRow.State.INACTIVE) {
    if (event.getTypeInt() == Event.ONKEYDOWN && event.getKeyCode() == EditorRow.KEYCODE_HIDE) {
      editorRow.cancel();
    }
    return true;
  }
  if (container == escalator.getBody() && editorRow.isEnabled()) {
    if (event.getTypeInt() == Event.ONDBLCLICK) {
      if (cell != null) {
        editorRow.editRow(cell.getRow());
        return true;
      }
    }
 else     if (event.getTypeInt() == Event.ONKEYDOWN && event.getKeyCode() == EditorRow.KEYCODE_SHOW) {
      editorRow.editRow(cellFocusHandler.rowWithFocus);
      return true;
    }
  }
  return false;
}
