{
  return new EscalatorUpdater(){
    @Override public void update(    Row row,    Iterable<FlyweightCell> cellsToUpdate){
      GridHeader.HeaderRow headerRow=header.getRow(row.getRow());
      int colIndex=-1;
      for (      FlyweightCell cell : cellsToUpdate) {
        if (colIndex == -1) {
          colIndex=cell.getColumn();
        }
        while (!columns.get(colIndex).isVisible()) {
          colIndex++;
        }
        headerRow.getRenderer().render(cell,headerRow.getCell(colIndex).getText());
        colIndex++;
      }
    }
    @Override public void preAttach(    Row row,    Iterable<FlyweightCell> cellsToAttach){
    }
    @Override public void postAttach(    Row row,    Iterable<FlyweightCell> attachedCells){
    }
    @Override public void preDetach(    Row row,    Iterable<FlyweightCell> cellsToDetach){
    }
    @Override public void postDetach(    Row row,    Iterable<FlyweightCell> detachedCells){
    }
  }
;
}
