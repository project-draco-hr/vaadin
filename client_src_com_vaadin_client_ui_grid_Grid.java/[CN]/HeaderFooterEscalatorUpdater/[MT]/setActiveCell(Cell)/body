{
  int oldRow=activeRow;
  int oldColumn=activeColumn;
  activeRow=cell.getRow();
  activeColumn=cell.getColumn();
  if (oldRow != activeRow) {
    escalator.getBody().refreshRows(oldRow,1);
    escalator.getBody().refreshRows(activeRow,1);
  }
  if (oldColumn != activeColumn) {
    if (oldRow == activeRow) {
      escalator.getBody().refreshRows(oldRow,1);
    }
    refreshHeader();
    refreshFooter();
  }
}
