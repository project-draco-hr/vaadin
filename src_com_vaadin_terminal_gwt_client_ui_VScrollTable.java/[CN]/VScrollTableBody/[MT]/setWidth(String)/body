{
  if (this.width.equals(width)) {
    return;
  }
  if (!isVisible()) {
    return;
  }
  this.width=width;
  if (width != null && !"".equals(width)) {
    super.setWidth(width);
    int innerPixels=getOffsetWidth() - getBorderWidth();
    if (innerPixels < 0) {
      innerPixels=0;
    }
    setContentWidth(innerPixels);
    triggerLazyColumnAdjustment(false);
  }
 else {
    super.setWidth("");
    sizeInit();
    triggerLazyColumnAdjustment(false);
  }
  setProperTabIndex();
}
