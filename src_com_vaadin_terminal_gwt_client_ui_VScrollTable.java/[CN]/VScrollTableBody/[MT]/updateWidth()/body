{
  if (!isVisible()) {
    return;
  }
  if (!isDynamicWidth()) {
    int innerPixels=getOffsetWidth() - getBorderWidth();
    if (innerPixels < 0) {
      innerPixels=0;
    }
    setContentWidth(innerPixels);
    triggerLazyColumnAdjustment(false);
  }
 else {
    sizeInit();
    triggerLazyColumnAdjustment(false);
  }
  setProperTabIndex();
}
