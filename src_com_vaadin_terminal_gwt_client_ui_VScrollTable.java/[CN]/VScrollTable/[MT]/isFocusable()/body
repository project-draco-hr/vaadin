{
  if (scrollBody != null) {
    boolean hasVerticalScrollbars=scrollBody.getOffsetHeight() > scrollBodyPanel.getOffsetHeight();
    boolean hasHorizontalScrollbars=scrollBody.getOffsetWidth() > scrollBodyPanel.getOffsetWidth();
    return !(!hasHorizontalScrollbars && !hasVerticalScrollbars && selectMode == SELECT_MODE_NONE);
  }
  return false;
}
