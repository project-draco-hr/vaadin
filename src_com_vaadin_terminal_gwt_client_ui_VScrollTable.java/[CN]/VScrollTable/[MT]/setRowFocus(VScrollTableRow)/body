{
  if (selectMode == SELECT_MODE_NONE) {
    return false;
  }
  if (focusedRow != null && focusedRow != row) {
    focusedRow.removeStyleName(CLASSNAME_SELECTION_FOCUS);
  }
  if (row != null) {
    row.addStyleName(CLASSNAME_SELECTION_FOCUS);
    if (row == focusedRow) {
      return false;
    }
    focusedRow=row;
    row.getElement().scrollIntoView();
    return true;
  }
  return false;
}
