{
  Scheduler.get().scheduleFinally(new ScheduledCommand(){
    public void execute(){
      if (currentlyFocusedRow != null) {
        setRowFocus(currentlyFocusedRow);
      }
 else {
        VConsole.log("no row?");
        focusRowFromBody();
      }
      scrollBody.ensureFocus();
    }
  }
);
}
