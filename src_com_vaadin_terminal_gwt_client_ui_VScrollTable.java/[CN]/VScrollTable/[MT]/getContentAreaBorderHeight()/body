{
  if (contentAreaBorderHeight < 0) {
    if (BrowserInfo.get().isIE7() || BrowserInfo.get().isIE6()) {
      contentAreaBorderHeight=Util.measureVerticalBorder(bodyContainer.getElement());
    }
 else {
      DOM.setStyleAttribute(bodyContainer.getElement(),"overflow","hidden");
      int oh=bodyContainer.getOffsetHeight();
      int ch=bodyContainer.getElement().getPropertyInt("clientHeight");
      contentAreaBorderHeight=oh - ch;
      DOM.setStyleAttribute(bodyContainer.getElement(),"overflow","auto");
    }
  }
  return contentAreaBorderHeight;
}
