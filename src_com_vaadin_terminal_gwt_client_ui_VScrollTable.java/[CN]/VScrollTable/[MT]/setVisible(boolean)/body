{
  if (isVisible() != visible) {
    super.setVisible(visible);
    if (initializedAndAttached) {
      if (visible) {
        Scheduler.get().scheduleDeferred(new Command(){
          public void execute(){
            scrollBodyPanel.setScrollPosition(measureScrollPositionOfRow(firstRowInViewPort));
          }
        }
);
      }
    }
  }
}
