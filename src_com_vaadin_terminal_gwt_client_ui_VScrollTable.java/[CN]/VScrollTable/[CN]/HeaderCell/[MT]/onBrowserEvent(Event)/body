{
  if (enabled && event != null) {
    if (isResizing || event.getEventTarget().cast() == colResizeWidget) {
      onResizeEvent(event);
    }
 else {
      handleCaptionEvent(event);
      if (DOM.eventGetType(event) == Event.ONMOUSEUP) {
        scrollBodyPanel.setFocus(true);
      }
    }
  }
}
