{
  VWindow window=getWidget();
  WindowState state=getState();
  window.setDraggable(state.draggable && state.displayState == DisplayState.NORMAL);
  window.setResizable(state.resizable && state.displayState == DisplayState.NORMAL);
  updateComponentSize();
  updateWindowPosition();
  window.updateMaximizeRestoreClassName(state.resizable,state.displayState);
  window.updateContentsSize();
}
