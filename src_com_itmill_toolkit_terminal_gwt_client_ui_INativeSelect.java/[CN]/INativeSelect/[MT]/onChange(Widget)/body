{
  if (select.isMultipleSelect()) {
    client.updateVariable(id,"selected",getSelectedItems(),isImmediate());
  }
 else {
    client.updateVariable(id,"selected",new String[]{"" + getSelectedItem()},isImmediate());
  }
  if (!isNullSelectionAllowed() && "null".equals(select.getValue(0))) {
    select.removeItem(0);
  }
}
