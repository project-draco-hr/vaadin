{
  this.client=client;
  id=uidl.getId();
  if (uidl.hasVariable("text")) {
    if (BrowserInfo.get().isIE()) {
      rta.getFormatter().toggleBold();
      rta.getFormatter().toggleBold();
    }
    rta.setHTML(uidl.getStringVariable("text"));
  }
  setEnabled(!uidl.getBooleanAttribute("disabled"));
  if (client.updateComponent(this,uidl,true)) {
    return;
  }
  immediate=uidl.getBooleanAttribute("immediate");
  int newMaxLength=uidl.hasAttribute("maxLength") ? uidl.getIntAttribute("maxLength") : -1;
  if (newMaxLength >= 0) {
    if (maxLength == -1) {
      keyPressHandler=rta.addKeyPressHandler(this);
    }
    maxLength=newMaxLength;
  }
 else   if (maxLength != -1) {
    getElement().setAttribute("maxlength","");
    maxLength=-1;
    keyPressHandler.removeHandler();
  }
}
