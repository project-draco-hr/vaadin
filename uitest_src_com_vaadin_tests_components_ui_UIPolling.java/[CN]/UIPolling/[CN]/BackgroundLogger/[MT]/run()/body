{
  int i=0;
  while (true) {
    i++;
    try {
      Thread.sleep(SLEEP_TIME);
    }
 catch (    InterruptedException e) {
    }
    final int iteration=i;
    runSafely(new Runnable(){
      @Override public void run(){
        log.log((iteration * SLEEP_TIME) + "ms has passed");
      }
    }
);
  }
}
