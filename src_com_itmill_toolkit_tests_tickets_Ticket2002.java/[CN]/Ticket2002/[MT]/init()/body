{
  Window w=new Window(getClass().getSimpleName());
  setMainWindow(w);
  GridLayout layout=new GridLayout(2,2);
  layout.setSpacing(true);
  TextField f1=new TextField("Non-immediate/Long text field",new MethodProperty(this,"long1"));
  f1.setImmediate(false);
  f1.setNullSettingAllowed(true);
  TextField f2=new TextField("Immediate/Long text field",new MethodProperty(this,"long2"));
  f2.setImmediate(true);
  f2.setNullSettingAllowed(true);
  layout.addComponent(f1);
  layout.addComponent(f2);
  w.setLayout(layout);
}
