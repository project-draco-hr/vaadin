{
  Label l=new Label();
  l.setId("label" + debugIdCounter++);
  if (caption != null) {
    l.setCaption(caption);
  }
  if (content != null) {
    l.setValue(content);
  }
  if (primaryStyleName != null) {
    l.addStyleName(primaryStyleName);
  }
  if (iconUrl != null) {
    l.setIcon(new ThemeResource(iconUrl));
  }
  addComponent(l);
  return l;
}
