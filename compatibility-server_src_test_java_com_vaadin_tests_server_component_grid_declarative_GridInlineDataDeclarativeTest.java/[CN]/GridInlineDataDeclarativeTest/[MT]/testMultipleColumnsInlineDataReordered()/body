{
  String design="<vaadin-legacy-grid><table>" + "<colgroup>" + "   <col sortable property-id='Col2' />"+ "   <col sortable property-id='Col3' />"+ "   <col sortable property-id='Col1' />"+ "</colgroup>"+ "<thead />"+ "<tbody>"+ "<tr><td>Bar<td>Baz<td>Foo</tr>"+ "<tr><td>Summer<td>Car<td>My</tr>"+ "</tbody>"+ "</table></vaadin-legacy-grid>";
  LegacyGrid grid=new LegacyGrid();
  grid.addColumn("Col1",String.class);
  grid.addColumn("Col2",String.class);
  grid.addColumn("Col3",String.class);
  grid.addRow("Foo","Bar","Baz");
  grid.addRow("My","Summer","Car");
  grid.setColumnOrder("Col2","Col3","Col1");
  grid.removeHeaderRow(grid.getDefaultHeaderRow());
  testWrite(design,grid,true);
  testRead(design,grid,true,true);
}
