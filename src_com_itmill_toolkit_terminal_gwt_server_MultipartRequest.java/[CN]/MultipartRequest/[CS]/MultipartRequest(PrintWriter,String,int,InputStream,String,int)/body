{
  if (strSaveDirectory != null) {
    fileOutPutDirectory=new File(strSaveDirectory);
    if (!fileOutPutDirectory.exists())     throw new IOException("Directory [" + strSaveDirectory + "] is invalid.");
 else     if (!fileOutPutDirectory.canWrite())     throw new IOException("Directory [" + strSaveDirectory + "] is readonly.");
  }
  init(debug,strContentTypeText,intContentLength,in,intMaxReadBytes);
}
