{
  strName=strName + "=";
  int startIndexOf=0;
  while (startIndexOf < strToDecode.length()) {
    int indexOf=strToDecode.indexOf(strName,startIndexOf);
    if (indexOf != -1) {
      if (indexOf == 0 || Character.isWhitespace(strToDecode.charAt(indexOf - 1)) || strToDecode.charAt(indexOf - 1) == ';') {
        int endIndexOf=strToDecode.indexOf(";",indexOf + strName.length());
        if (endIndexOf == -1)         return strToDecode.substring(indexOf + strName.length());
 else         return strToDecode.substring(indexOf + strName.length(),endIndexOf);
      }
 else       startIndexOf=indexOf + strName.length();
    }
 else     return null;
  }
  return null;
}
