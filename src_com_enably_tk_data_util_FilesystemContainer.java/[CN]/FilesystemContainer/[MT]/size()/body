{
  if (recursive) {
    int counts=0;
    for (int i=0; i < roots.length; i++) {
      counts+=getFileCounts(this.roots[i]);
    }
    return counts;
  }
 else {
    File[] f;
    if (roots.length == 1) {
      if (this.filter != null)       f=roots[0].listFiles(this.filter);
 else       f=roots[0].listFiles();
    }
 else {
      f=roots;
    }
    if (f == null)     return 0;
    return f.length;
  }
}
