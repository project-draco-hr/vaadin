{
  this.select.setCaption("All employees default functionality.");
  this.select.setItemCaptionPropertyId("WORKER");
  try {
    QueryContainer qc=new QueryContainer("SELECT ID, UNIT||', '||LASTNAME||' '||FIRSTNAME" + " AS WORKER FROM employee ORDER BY WORKER",this.sampleDatabase.getConnection());
    this.select.setContainerDataSource(qc);
  }
 catch (  SQLException e) {
    e.printStackTrace();
  }
  this.lazySelect.setCaption("All employees with lazy loading " + "(a.k.a Google Suggests) activated.");
  this.lazySelect.setItemCaptionPropertyId("WORKER");
  this.lazySelect.setFilteringMode(Select.FILTERINGMODE_CONTAINS);
  this.lazySelect.setContainerDataSource(this.select.getContainerDataSource());
}
