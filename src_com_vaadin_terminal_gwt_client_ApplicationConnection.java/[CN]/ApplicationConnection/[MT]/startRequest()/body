{
  if (hasActiveRequest) {
    throw new IllegalStateException("Trying to start a new request while another is active");
  }
  hasActiveRequest=true;
  requestStartTime=new Date();
  if (loadTimer == null) {
    loadTimer=new Timer(){
      @Override public void run(){
        if (loadTimer != null) {
          showLoadingIndicator();
        }
      }
    }
;
  }
  loadTimer.schedule(300);
}
