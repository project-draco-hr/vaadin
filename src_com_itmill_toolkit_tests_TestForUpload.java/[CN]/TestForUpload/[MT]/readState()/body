{
  StringBuffer sb=new StringBuffer();
  if (this.up.isUploading()) {
    sb.append("Uploading...");
    sb.append(this.up.getBytesRead());
    sb.append("/");
    sb.append(this.up.getUploadSize());
    sb.append(" ");
    sb.append(Math.round(100 * this.up.getBytesRead() / (double)this.up.getUploadSize()));
    sb.append("%");
  }
 else {
    sb.append("Idle");
  }
  this.l.setValue(sb.toString());
  refreshMemUsage();
}
