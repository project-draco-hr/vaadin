{
  t.setConverter("sex",new Converter<Sex,String>(){
    public Sex convertFromTargetToSource(    String value,    Locale locale) throws com.vaadin.data.util.converter.Converter.ConversionException {
      return null;
    }
    public String convertFromSourceToTarget(    Sex value,    Locale locale) throws com.vaadin.data.util.converter.Converter.ConversionException {
      if (value == null) {
        value=Sex.UNKNOWN;
      }
      return value.getStringRepresentation();
    }
    public Class<Sex> getSourceType(){
      return Sex.class;
    }
    public Class<String> getTargetType(){
      return String.class;
    }
  }
);
  t.setConverter("deceased",new Converter<Boolean,String>(){
    public Boolean convertFromTargetToSource(    String value,    Locale locale){
      return null;
    }
    public String convertFromSourceToTarget(    Boolean value,    Locale locale){
      if (value == null || value) {
        return "YES, DEAD!";
      }
 else {
        return "-";
      }
    }
    public Class<Boolean> getSourceType(){
      return Boolean.class;
    }
    public Class<String> getTargetType(){
      return String.class;
    }
  }
);
  t.setConverter("age",new Converter<Integer,String>(){
    public Integer convertFromTargetToSource(    String value,    Locale locale) throws com.vaadin.data.util.converter.Converter.ConversionException {
      return null;
    }
    public String convertFromSourceToTarget(    Integer value,    Locale locale) throws com.vaadin.data.util.converter.Converter.ConversionException {
      if (value == null) {
        return null;
      }
      if (value < 3) {
        return value + " (baby)";
      }
 else       if (value < 7) {
        return value + " (kid)";
      }
 else       if (value < 18) {
        return value + " (young)";
      }
 else {
        return value + "";
      }
    }
    public Class<Integer> getSourceType(){
      return Integer.class;
    }
    public Class<String> getTargetType(){
      return String.class;
    }
  }
);
  t.setConverter("address",new Converter<Address,String>(){
    public Address convertFromTargetToSource(    String value,    Locale locale) throws ConversionException {
      return null;
    }
    public String convertFromSourceToTarget(    Address value,    Locale locale) throws ConversionException {
      return value.getStreetAddress() + ", " + value.getCity()+ " ("+ value.getCountry()+ ")";
    }
    public Class<Address> getSourceType(){
      return Address.class;
    }
    public Class<String> getTargetType(){
      return String.class;
    }
  }
);
  t.setConverter("rent",new NumberToStringConverter(){
    @Override protected NumberFormat getFormatter(    Locale locale){
      return NumberFormat.getCurrencyInstance(locale);
    }
  }
);
}
