{
  if (x < 0) {
    x=0;
  }
  if (x > Window.getClientWidth() - getOffsetWidth()) {
    x=Window.getClientWidth() - getOffsetWidth();
  }
  if (y > Window.getClientHeight() - getOffsetHeight()) {
    y=Window.getClientHeight() - getOffsetHeight();
  }
  if (y < 0) {
    y=0;
  }
  setPopupPosition(x,y);
}
