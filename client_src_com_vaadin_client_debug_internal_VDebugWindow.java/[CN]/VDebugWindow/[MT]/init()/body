{
  show();
  readStoredState();
  Window.addResizeHandler(new com.google.gwt.event.logical.shared.ResizeHandler(){
    Timer t=new Timer(){
      @Override public void run(){
        applyPositionAndSize();
      }
    }
;
    @Override public void onResize(    ResizeEvent event){
      t.cancel();
      t.schedule(1000);
    }
  }
);
}
