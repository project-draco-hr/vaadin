{
  getPushConfiguration().setFallbackTransport(Transport.WEBSOCKET);
  String pushPath=request.getService().getDeploymentConfiguration().getPushPath();
  String transport=getPushConfiguration().getTransport().name();
  Label pushPathLabel=new Label(String.format("Waiting for push from path '%s' using %s in 3 seconds.",pushPath,transport));
  addComponent(pushPathLabel);
  new PushThread().start();
}
