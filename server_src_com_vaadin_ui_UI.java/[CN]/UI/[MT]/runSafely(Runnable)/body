{
  Map<Class<?>,CurrentInstance> old=null;
  VaadinSession session=getSession();
  if (session == null) {
    throw new UIDetachedException();
  }
  session.lock();
  try {
    if (getSession() == null) {
      throw new UIDetachedException();
    }
    old=CurrentInstance.setThreadLocals(this);
    runnable.run();
  }
  finally {
    session.unlock();
    if (old != null) {
      CurrentInstance.restoreThreadLocals(old);
    }
  }
}
