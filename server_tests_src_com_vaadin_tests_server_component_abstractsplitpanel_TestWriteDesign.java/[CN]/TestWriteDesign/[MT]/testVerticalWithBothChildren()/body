{
  VerticalSplitPanel sp=new VerticalSplitPanel();
  sp.setFirstComponent(new Button("First slot"));
  sp.setSecondComponent(new Label("Second slot"));
  Element e=ctx.createElement(sp);
  assertEquals("Wrong number of child elements.",2,e.children().size());
  Element eb=e.children().get(0);
  assertEquals("Wrong tag name of first child element.","v-button",eb.nodeName());
  assertEquals("Wrong text in the button element.","First slot",eb.html());
  Element el=e.children().get(1);
  assertEquals("Wrong tag name of second child element.","v-label",el.nodeName());
  assertEquals("Wrong text in the label element.","Second slot",el.html());
  assertFalse("There should be no :second attribute when a split panel has both children.",el.hasAttr(":second"));
}
