{
  if ((this.width == null && width.equals("")) || (this.width != null && this.width.equals(width))) {
    return;
  }
  super.setWidth(width);
  if (width.equals("")) {
    width=null;
  }
  this.width=width;
  if (width == null) {
    renderSpace.setWidth(0);
    contentNode.getStyle().setProperty("width","");
  }
 else {
    int contentWidth=getOffsetWidth() - getContentAreaBorderWidth();
    if (contentWidth < 0) {
      contentWidth=0;
    }
    contentNode.getStyle().setProperty("width",contentWidth + "px");
    renderSpace.setWidth(contentWidth);
  }
  if (!rendering) {
    if (isDynamicHeight()) {
      Util.updateRelativeChildrenAndSendSizeUpdateEvent(client,tp,this);
    }
    updateOpenTabSize();
    iLayout();
    client.runDescendentsLayout(this);
  }
}
