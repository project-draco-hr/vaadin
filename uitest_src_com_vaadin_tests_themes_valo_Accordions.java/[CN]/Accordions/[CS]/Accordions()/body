{
  setMargin(true);
  Label h1=new Label("Accordions");
  h1.addStyleName("h1");
  addComponent(h1);
  HorizontalLayout row=new HorizontalLayout();
  row.setSpacing(true);
  row.setWidth("100%");
  addComponent(row);
  row.addComponent(getAccordion("Normal"));
  Accordion ac=getAccordion("Borderless");
  ac.addStyleName("borderless");
  row.addComponent(ac);
}
