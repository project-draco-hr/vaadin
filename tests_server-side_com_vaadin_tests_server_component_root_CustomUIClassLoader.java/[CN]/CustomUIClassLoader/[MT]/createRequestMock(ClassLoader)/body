{
  DeploymentConfiguration configurationMock=EasyMock.createMock(DeploymentConfiguration.class);
  EasyMock.expect(configurationMock.getClassLoader()).andReturn(classloader);
  WrappedRequest requestMock=EasyMock.createMock(WrappedRequest.class);
  EasyMock.expect(requestMock.getDeploymentConfiguration()).andReturn(configurationMock);
  EasyMock.replay(configurationMock,requestMock);
  return requestMock;
}
