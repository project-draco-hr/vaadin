{
  if (columns < 1)   throw new IllegalArgumentException("The number of columns and rows in the grid must be at least 1");
  if (this.cols == columns)   return;
  if (this.cols > columns)   for (Iterator i=areas.iterator(); i.hasNext(); ) {
    Area area=(Area)i.next();
    if (area.column2 >= columns)     throw new OutOfBoundsException(area);
  }
  this.cols=columns;
  requestRepaint();
}
