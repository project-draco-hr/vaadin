{
  if (columns < 1) {
    throw new IllegalArgumentException("The number of columns and rows in the grid must be at least 1");
  }
  if (cols == columns) {
    return;
  }
  if (cols > columns) {
    for (final Iterator i=areas.iterator(); i.hasNext(); ) {
      final Area area=(Area)i.next();
      if (area.column2 >= columns) {
        throw new OutOfBoundsException(area);
      }
    }
  }
  cols=columns;
  requestRepaint();
}
