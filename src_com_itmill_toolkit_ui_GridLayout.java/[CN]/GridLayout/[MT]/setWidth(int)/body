{
  if (width < 1)   throw new IllegalArgumentException("The grid width and height must be at least 1");
  if (this.width == width)   return;
  if (this.width > width)   for (Iterator i=areas.iterator(); i.hasNext(); ) {
    Area area=(Area)i.next();
    if (area.x2 >= width)     throw new OutOfBoundsException(area);
  }
  this.width=width;
  requestRepaint();
}
