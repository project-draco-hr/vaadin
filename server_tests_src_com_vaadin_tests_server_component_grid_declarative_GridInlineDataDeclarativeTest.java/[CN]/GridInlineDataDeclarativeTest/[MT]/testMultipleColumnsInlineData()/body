{
  String design="<v-grid><table>" + "<colgroup>" + "   <col sortable=true property-id='Col1' />"+ "   <col sortable=true property-id='Col2' />"+ "   <col sortable=true property-id='Col3' />"+ "</colgroup>"+ "<thead />"+ "<tbody>"+ "<tr><td>Foo<td>Bar<td>Baz</tr>"+ "<tr><td>My<td>Summer<td>Car</tr>"+ "</table></v-grid>";
  Grid grid=new Grid();
  grid.addColumn("Col1",String.class);
  grid.addColumn("Col2",String.class);
  grid.addColumn("Col3",String.class);
  grid.addRow("Foo","Bar","Baz");
  grid.addRow("My","Summer","Car");
  grid.removeHeaderRow(grid.getDefaultHeaderRow());
  testWrite(design,grid,true);
  testRead(design,grid,true,true);
}
