{
  OrderedLayout l=new OrderedLayout();
  Panel show=new Panel("Label component");
  Label lab=new Label("Label text");
  show.addComponent(lab);
  l.addComponent(show);
  PropertyPanel p=new PropertyPanel(lab);
  Form ap=p.createBeanPropertySet(new String[]{"contentMode","value"});
  ap.replaceWithSelect("contentMode",new Object[]{new Integer(Label.CONTENT_PREFORMATTED),new Integer(Label.CONTENT_TEXT),new Integer(Label.CONTENT_UIDL),new Integer(Label.CONTENT_XHTML),new Integer(Label.CONTENT_XML)},new Object[]{"Preformatted","Text","UIDL (Must be valid)","XHTML Fragment(Must be valid)","XML (Subtree with namespace)"});
  p.addProperties("Label Properties",ap);
  l.addComponent(p);
  return l;
}
