{
  for (  final VariableNode var : variables) {
    for (    final LexicalUnitImpl arg : new ArrayList<LexicalUnitImpl>(arglist)) {
      if (arg.getLexicalUnitType() == LexicalUnitImpl.SCSS_VARIABLE && arg.getStringValue().equals(var.getName())) {
        arg.replaceValue(var.getExpr());
      }
    }
  }
}
