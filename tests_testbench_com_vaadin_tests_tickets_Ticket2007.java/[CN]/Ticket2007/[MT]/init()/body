{
  final LegacyWindow main=new LegacyWindow("Main window for #2007");
  setMainWindow(main);
  main.addComponent(new Button("Open another (non-main) window",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      LegacyWindow c=new LegacyWindow("Non-main browser window " + (++childs));
      addWindow(c);
      main.open(new ExternalResource(c.getURL()),"_new");
    }
  }
));
}
