{
  ProgressIndicator pi=new ProgressIndicator(){
{
      registerRpc(new ProgressIndicatorServerRpc(){
        @Override public void poll(){
          rta.markAsDirty();
        }
      }
);
    }
  }
;
  pi.setHeight("0px");
  addComponent(pi);
  rta=new RichTextArea();
  rta.setId("rta");
  rta.setImmediate(true);
  addComponent(rta);
}
