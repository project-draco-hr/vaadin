{
  if (null != getWidgetCaption()) {
    if (escapeQuotes) {
      return "[caption=\\\"" + widgetCaption + "\\\"]";
    }
 else {
      return "[caption=\"" + widgetCaption + "\"]";
    }
  }
 else   if (widgetIndex >= 0) {
    return "[" + getWidgetIndex() + "]";
  }
 else {
    return "";
  }
}
