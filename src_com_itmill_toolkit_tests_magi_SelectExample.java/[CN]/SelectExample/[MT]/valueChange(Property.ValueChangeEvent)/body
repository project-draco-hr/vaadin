{
  if (true) {
    status.setValue(String.format("Currently selected item ID: %s<br/>" + "Class of the Item ID: %s<br/>" + "Caption: %s",event.getProperty().getValue(),event.getProperty().getValue().getClass().getName(),select.getItemCaption(event.getProperty().getValue())));
    status.setContentMode(Label.CONTENT_XHTML);
  }
}
