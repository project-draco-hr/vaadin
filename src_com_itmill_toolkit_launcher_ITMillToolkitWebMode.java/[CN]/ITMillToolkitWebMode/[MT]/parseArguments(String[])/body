{
  final Map map=new HashMap();
  for (int i=0; i < args.length; i++) {
    final int d=args[i].indexOf("=");
    if (d > 0 && d < args[i].length() && args[i].startsWith("--")) {
      final String name=args[i].substring(2,d);
      final String value=args[i].substring(d + 1);
      map.put(name,value);
    }
  }
  return map;
}
