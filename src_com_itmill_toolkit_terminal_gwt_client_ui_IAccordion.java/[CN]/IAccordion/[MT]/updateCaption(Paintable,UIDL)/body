{
  for (  Widget w : getChildren()) {
    StackItem si=(StackItem)w;
    if (si.getPaintable() == component) {
      boolean visible=si.isVisible();
      si.updateCaption(uidl);
      if (si.isCaptionVisible() != visible) {
        si.setVisible(si.isCaptionVisible());
      }
      return;
    }
  }
}
