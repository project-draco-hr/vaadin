{
  final int si=select.getSelectedIndex();
  if (si == -1 && !isNullSelectionAllowed()) {
    select.setSelectedIndex(lastSelectedIndex);
  }
 else {
    lastSelectedIndex=si;
    if (isMultiselect()) {
      client.updateVariable(id,"selected",getSelectedItems(),isImmediate());
    }
 else {
      client.updateVariable(id,"selected",new String[]{"" + getSelectedItem()},isImmediate());
    }
  }
}
