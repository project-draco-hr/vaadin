{
  if (collection == null || collection.isEmpty()) {
    throw new IllegalArgumentException("The collection passed to BeanItemContainer must not be null or empty");
  }
  type=(Class<? extends BT>)collection.iterator().next().getClass();
  model=BeanItem.getPropertyDescriptors(type);
  int i=0;
  for (  BT bt : collection) {
    addItemAt(i++,bt);
  }
}
