{
  String message="";
  for (  Component c : this) {
    if (!(c instanceof LegacyField)) {
      continue;
    }
    LegacyField<?> f=(LegacyField<?>)c;
    Map<LegacyField<?>,InvalidValueException> exceptions=e.getInvalidFields();
    if (exceptions.containsKey(f)) {
      message+=f.getCaption() + ": " + exceptions.get(f).getLocalizedMessage()+ "<br/>\n";
    }
  }
  errorLabel.setValue(message);
}
