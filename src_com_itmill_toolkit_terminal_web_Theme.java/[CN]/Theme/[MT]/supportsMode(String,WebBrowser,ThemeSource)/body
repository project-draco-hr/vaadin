{
  RequirementCollection rc=(RequirementCollection)supportedModes.get(mode);
  if (rc == null || !rc.isMet(terminal))   return false;
  if (parentTheme != null) {
    Theme parent=themeSource.getThemeByName(parentTheme);
    if (parent == null)     throw new IllegalStateException("Parent theme '" + parentTheme + "' is not found for theme '"+ getName()+ "'. "+ MESSAGE_CONFIGURE_HELP);
    if (!parent.supportsMode(mode,terminal,themeSource))     return false;
  }
  return true;
}
