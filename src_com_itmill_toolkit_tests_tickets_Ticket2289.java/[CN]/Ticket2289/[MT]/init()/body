{
  Window w=new Window();
  setMainWindow(w);
  OrderedLayout ol=new OrderedLayout();
  w.setLayout(ol);
  w.addComponent(new Label("When one tab is removed by clicking 'close a tab', client side get's mixed up."));
  Button b=new Button("close a tab");
  b.addListener(new ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      closeCurrentTab();
    }
  }
);
  ol.addComponent(b);
  ts=new TabSheet();
  ts.addTab(new MyTab("tab one"),"Caption1",null);
  ts.addTab(new MyTab("tab two"),"Caption2",null);
  ts.addTab(new MyTab("tab three"),"Caption3",null);
  ts.addTab(new MyTab("tab four"),"Caption4",null);
  ol.addComponent(ts);
}
