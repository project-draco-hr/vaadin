{
  super.setup(request);
  comboBox.setNewItemsAllowed(true);
  final Label label=new Label(String.valueOf(comboBox.getItemIds().size()));
  label.setCaption("Item count:");
  label.setId("count");
  comboBox.addValueChangeListener(new Property.ValueChangeListener(){
    @Override public void valueChange(    Property.ValueChangeEvent event){
      label.setValue(String.valueOf(comboBox.getItemIds().size()));
    }
  }
);
  addComponent(label);
}
