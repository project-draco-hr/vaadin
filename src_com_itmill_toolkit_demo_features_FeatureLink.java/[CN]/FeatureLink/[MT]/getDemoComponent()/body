{
  OrderedLayout l=new OrderedLayout();
  Panel show=new Panel("Link component");
  Link lnk=new Link("Link caption",new ExternalResource("http://www.itmill.com"));
  show.addComponent(lnk);
  l.addComponent(show);
  propertyPanel=new PropertyPanel(lnk);
  Form ap=propertyPanel.createBeanPropertySet(new String[]{"targetName","targetWidth","targetHeight","targetBorder"});
  ap.replaceWithSelect("targetBorder",new Object[]{new Integer(Link.TARGET_BORDER_DEFAULT),new Integer(Link.TARGET_BORDER_MINIMAL),new Integer(Link.TARGET_BORDER_NONE)},new Object[]{"Default","Minimal","None"});
  propertyPanel.addProperties("Link Properties",ap);
  return l;
}
