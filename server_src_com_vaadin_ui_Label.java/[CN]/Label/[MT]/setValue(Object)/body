{
  if (newStringValue != null && newStringValue.getClass() != String.class) {
    throw new Converter.ConversionException("Value of type " + newStringValue.getClass() + " cannot be assigned to "+ String.class.getName());
  }
  if (getPropertyDataSource() == null) {
    getState().setText((String)newStringValue);
    requestRepaint();
  }
 else {
    throw new IllegalStateException("Label is only a Property.Viewer and cannot update its data source");
  }
}
