{
  Root root=null;
  try {
    int rootId=Integer.parseInt(request.getParameter(ApplicationConstants.ROOT_ID_PARAMETER));
    root=application.getRootById(rootId);
  }
 catch (  NumberFormatException nfe) {
  }
  if (root != null) {
    root.heartbeat();
  }
 else {
    response.sendError(HttpServletResponse.SC_NOT_FOUND,"Root not found");
  }
}
