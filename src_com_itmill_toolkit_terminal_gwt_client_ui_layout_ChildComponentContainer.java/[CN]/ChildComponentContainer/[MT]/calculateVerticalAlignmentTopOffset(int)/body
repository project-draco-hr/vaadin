{
  if (alignment.isTop()) {
    return 0;
  }
  if (caption != null) {
    if (caption.shouldBePlacedAfterComponent()) {
      emptySpace-=Math.max(widgetSize.getHeight(),caption.getHeight());
    }
 else {
      emptySpace-=widgetSize.getHeight();
      emptySpace-=getCaptionHeight();
    }
  }
 else {
    emptySpace-=widgetSize.getHeight();
  }
  int top=0;
  if (alignment.isVerticalCenter()) {
    top=emptySpace / 2;
  }
 else   if (alignment.isBottom()) {
    top=emptySpace;
  }
  if (top < 0) {
    top=0;
  }
  return top;
}
