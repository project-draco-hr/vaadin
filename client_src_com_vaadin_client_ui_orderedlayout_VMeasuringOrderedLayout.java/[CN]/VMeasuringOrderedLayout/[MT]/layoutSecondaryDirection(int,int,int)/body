{
  int maxSize=0;
  for (  Widget child : this) {
    if (child instanceof VCaption) {
      continue;
    }
    VLayoutSlot slot=getSlotForChild(child);
    if (!slot.isRelativeInDirection(!isVertical)) {
      maxSize=Math.max(maxSize,slot.getUsedSizeInDirection(!isVertical));
    }
  }
  if (allocatedSize == -1) {
    allocatedSize=maxSize;
  }
  for (  Widget child : this) {
    if (child instanceof VCaption) {
      continue;
    }
    VLayoutSlot slot=getSlotForChild(child);
    slot.positionInDirection(startPadding,allocatedSize,endPadding,!isVertical);
  }
  return allocatedSize;
}
