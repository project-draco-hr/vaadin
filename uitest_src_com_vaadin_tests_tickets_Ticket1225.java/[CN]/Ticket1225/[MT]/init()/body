{
  final LegacyWindow mainWin=new LegacyWindow("Test app to break layout fuction in IE7");
  setMainWindow(mainWin);
  VerticalSplitPanel sp=new VerticalSplitPanel();
  sp.setFirstComponent(new Label("First"));
  VerticalLayout el=new VerticalLayout();
  sp.setSecondComponent(el);
  el.setMargin(true);
  el.setSizeFull();
  el.addComponent(new Label("Top"));
  Table testTable=TestForTablesInitialColumnWidthLogicRendering.getTestTable(5,50);
  testTable.setSizeFull();
  TabSheet ts=new TabSheet();
  ts.setSizeFull();
  Label red=new Label("<div style='background:red;width:100%;height:100%;'>??</div>",ContentMode.XHTML);
  el.addComponent(ts);
  el.setExpandRatio(ts,1);
  ts.addComponent(red);
  ts.getTab(red).setCaption("REd tab");
  Label l=new Label("<div style='background:blue;'>sdf</div>",ContentMode.XHTML);
  el.addComponent(l);
  el.setComponentAlignment(l,Alignment.MIDDLE_RIGHT);
  mainWin.setContent(sp);
}
