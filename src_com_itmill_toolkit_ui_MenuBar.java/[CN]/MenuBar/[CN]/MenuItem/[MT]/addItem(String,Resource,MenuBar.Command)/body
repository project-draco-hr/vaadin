{
  if (caption == null) {
    throw new IllegalArgumentException("caption cannot be null");
  }
  if (itsChildren == null) {
    itsChildren=new ArrayList();
  }
  MenuItem newItem=new MenuItem(caption,icon,command);
  newItem.setParent(this);
  itsChildren.add(newItem);
  requestRepaint();
  return newItem;
}
