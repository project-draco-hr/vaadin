{
  LayoutManager lm=getLayoutManager();
  VWindow window=getWidget();
  Element contentElement=window.contentPanel.getElement();
  if (!window.layout.isUndefinedWidth() && lm.getOuterWidth(contentElement) < VWindow.MIN_CONTENT_AREA_WIDTH) {
    window.setWidth(VWindow.MIN_CONTENT_AREA_WIDTH + "px");
  }
  if (!window.layout.isUndefinedHeight() && lm.getOuterHeight(contentElement) < VWindow.MIN_CONTENT_AREA_HEIGHT) {
    window.setHeight(VWindow.MIN_CONTENT_AREA_HEIGHT + "px");
  }
}
