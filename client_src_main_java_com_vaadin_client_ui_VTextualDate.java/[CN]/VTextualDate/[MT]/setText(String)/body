{
  if (inputPrompt != null && (text == null || "".equals(text)) && !this.text.getStyleName().contains(VLegacyTextField.CLASSNAME + "-" + VLegacyTextField.CLASSNAME_FOCUS)) {
    text=readonly ? "" : inputPrompt;
    setPrompting(true);
  }
 else {
    setPrompting(false);
  }
  this.text.setText(text);
}
