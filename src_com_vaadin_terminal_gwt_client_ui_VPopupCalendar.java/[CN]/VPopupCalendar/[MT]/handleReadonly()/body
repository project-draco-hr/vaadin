{
  String currentDisplay=calendarToggle.getElement().getStyle().getProperty("display");
  boolean currentReadonly=(currentDisplay != null && currentDisplay.equals("none"));
  if (currentReadonly != readonly) {
    if (readonly) {
      calendarToggle.getElement().getStyle().setProperty("display","none");
    }
 else {
      calendarToggle.getElement().getStyle().setProperty("display","");
    }
    updateWidth();
  }
}
