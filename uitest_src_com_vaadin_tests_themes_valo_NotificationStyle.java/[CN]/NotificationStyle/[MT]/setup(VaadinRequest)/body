{
  Button button=new Button("Show notification",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      Notification notification=new Notification("<p>Caption</p>","<div style='display:inline-block;'><h1>Description</h1></div>");
      notification.setHtmlContentAllowed(true);
      notification.setDelayMsec(50000);
      notification.show(getPage());
    }
  }
);
  addComponent(button);
}
