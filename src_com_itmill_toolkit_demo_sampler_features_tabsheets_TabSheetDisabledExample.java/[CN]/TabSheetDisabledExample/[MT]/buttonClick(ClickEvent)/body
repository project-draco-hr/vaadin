{
  if (toggleEnabled.equals(event.getButton())) {
    l2.setEnabled(!l2.isEnabled());
    toggleEnabled.setCaption((l2.isEnabled() ? "Disable" : "Enable") + " 'Notes' tab");
  }
 else {
    l3.setVisible(!l3.isVisible());
    toggleVisible.setCaption((l3.isVisible() ? "Hide" : "Show") + " 'Issues' tab");
  }
  t.requestRepaint();
}
