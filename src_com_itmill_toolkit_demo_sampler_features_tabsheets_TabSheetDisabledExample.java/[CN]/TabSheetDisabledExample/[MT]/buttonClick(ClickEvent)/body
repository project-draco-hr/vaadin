{
  if (toggleEnabled.equals(event.getButton())) {
    t2.setEnabled(!t2.isEnabled());
    toggleEnabled.setCaption((t2.isEnabled() ? "Disable" : "Enable") + " 'Notes' tab");
  }
 else {
    t3.setVisible(!t3.isVisible());
    toggleVisible.setCaption((t3.isVisible() ? "Hide" : "Show") + " 'Issues' tab");
  }
  t.requestRepaint();
}
