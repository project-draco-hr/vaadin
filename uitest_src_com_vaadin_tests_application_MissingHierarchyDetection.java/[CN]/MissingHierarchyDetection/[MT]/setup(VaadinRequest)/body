{
  addComponent(layout);
  addComponent(new Button("Toggle properly",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      toggle(true);
    }
  }
));
  addComponent(new Button("Toggle improperly",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      toggle(false);
    }
  }
));
}
