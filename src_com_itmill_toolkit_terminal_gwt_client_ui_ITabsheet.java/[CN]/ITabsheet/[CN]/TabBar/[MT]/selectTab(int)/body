{
  Widget newSelected=getWidget(index);
  Widget.setStyleName(DOM.getParent(newSelected.getElement()),CLASSNAME + "-tabitem-selected",true);
  if (oldSelected != null && oldSelected != newSelected) {
    Widget.setStyleName(DOM.getParent(oldSelected.getElement()),CLASSNAME + "-tabitem-selected",false);
  }
  oldSelected=newSelected;
}
