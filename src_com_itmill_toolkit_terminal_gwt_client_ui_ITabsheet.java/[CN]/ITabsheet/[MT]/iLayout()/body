{
  if (height != null && height != "") {
    String originalPositioning=DOM.getStyleAttribute(tp.getElement(),"position");
    DOM.setStyleAttribute(tp.getElement(),"position","absolute");
    DOM.setStyleAttribute(contentNode,"overflow","hidden");
    int targetHeight=0;
    super.setHeight(height);
    targetHeight=getOffsetHeight();
    super.setHeight("");
    int usedHeight=getOffsetHeight();
    int h=targetHeight - usedHeight;
    if (h < 0) {
      h=0;
    }
    tp.setHeight(h + "px");
    DOM.setStyleAttribute(tp.getElement(),"position",originalPositioning);
    DOM.setStyleAttribute(contentNode,"overflow","auto");
  }
 else {
    tp.setHeight("");
  }
  Util.runDescendentsLayout(this);
}
