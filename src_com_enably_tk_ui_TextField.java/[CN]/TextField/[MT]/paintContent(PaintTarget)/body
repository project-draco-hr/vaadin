{
  super.paintContent(target);
  if (this.isSecret())   target.addAttribute("secret",true);
  int c=getColumns();
  int r=getRows();
  if (c != 0)   target.addAttribute("cols",String.valueOf(c));
  if (r != 0) {
    target.addAttribute("rows",String.valueOf(r));
    target.addAttribute("multiline",true);
    if (!wordwrap)     target.addAttribute("wordwrap",false);
  }
  String value=getFormattedValue();
  if (value == null)   value=getNullRepresentation();
  if (value == null)   throw new IllegalStateException("Null values are not allowed if the null-representation is null");
  target.addVariable(this,"text",value);
}
