{
  if (propertyValueChangeListeners != null) {
    Object[] l=propertyValueChangeListeners.toArray();
    Property.ValueChangeEvent event=new IndexedContainer.PropertyValueChangeEvent(source);
    for (int i=0; i < l.length; i++)     ((Property.ValueChangeListener)l[i]).valueChange(event);
  }
  if (singlePropertyValueChangeListeners != null) {
    Hashtable propertySetToListenerListMap=(Hashtable)singlePropertyValueChangeListeners.get(source.propertyId);
    if (propertySetToListenerListMap != null) {
      LinkedList listenerList=(LinkedList)propertySetToListenerListMap.get(source.itemId);
      if (listenerList != null) {
        Property.ValueChangeEvent event=new IndexedContainer.PropertyValueChangeEvent(source);
        for (Iterator i=listenerList.iterator(); i.hasNext(); )         ((Property.ValueChangeListener)i.next()).valueChange(event);
      }
    }
  }
}
