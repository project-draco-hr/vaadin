{
  if (focusedNode != null) {
    focusedNode.setFocused(false);
  }
  if (node != null) {
    node.setFocused(true);
  }
  focusedNode=node;
  if (node != null && scrollIntoView) {
    if (!rendering) {
      node.scrollIntoView();
    }
 else {
      Scheduler.get().scheduleDeferred(new Command(){
        @Override public void execute(){
          focusedNode.scrollIntoView();
        }
      }
);
    }
  }
}
