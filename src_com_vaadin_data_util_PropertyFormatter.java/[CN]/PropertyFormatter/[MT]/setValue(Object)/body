{
  if (dataSource == null) {
    return;
  }
  if (newValue == null) {
    if (dataSource.getValue() != null) {
      dataSource.setValue(null);
      fireValueChange();
    }
  }
 else {
    try {
      dataSource.setValue(parse(newValue.toString()));
      if (!newValue.equals(getStringValue())) {
        fireValueChange();
      }
    }
 catch (    Exception e) {
      throw new IllegalArgumentException("Could not parse value",e);
    }
  }
}
