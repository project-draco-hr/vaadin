{
  TextField field=new TextField("Enter text");
  field.setImmediate(true);
  field.addShortcutListener(new ShortcutListener("SearchAction",ShortcutAction.KeyCode.ENTER,null){
    private static final long serialVersionUID=1L;
    @Override public void handleAction(    Object sender,    Object target){
      Label label=new Label("shortcut addedEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEEE");
      label.addStyleName("shortcut-result");
      addComponent(label);
    }
  }
);
  return field;
}
