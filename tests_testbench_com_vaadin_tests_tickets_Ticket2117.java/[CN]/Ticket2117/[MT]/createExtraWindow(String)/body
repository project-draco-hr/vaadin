{
  final Root w=new Root("Extra window: " + name);
  addWindow(w,name);
  w.addComponent(new Label("This window has been created on fly for name: " + name));
  w.addComponent(new Label("It has also been redirected to " + getWindowUrl(w) + " to support reloading"));
  w.addComponent(new Button("button",new ClickListener(){
    public void buttonClick(    ClickEvent event){
      w.showNotification("Button clicked");
      w.addComponent(new Label("clicked"));
    }
  }
));
  return w;
}
