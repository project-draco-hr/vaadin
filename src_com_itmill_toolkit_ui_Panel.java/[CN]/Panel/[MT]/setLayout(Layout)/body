{
  if (newLayout == null) {
    newLayout=new OrderedLayout();
    newLayout.setMargin(true);
  }
  if (newLayout == layout) {
    return;
  }
  if (layout != null) {
    layout.setParent(null);
    layout.removeListener((ComponentContainer.ComponentAttachListener)this);
    layout.removeListener((ComponentContainer.ComponentDetachListener)this);
  }
  newLayout.setParent(this);
  layout=newLayout;
  newLayout.addListener((ComponentContainer.ComponentAttachListener)this);
  newLayout.addListener((ComponentContainer.ComponentDetachListener)this);
}
