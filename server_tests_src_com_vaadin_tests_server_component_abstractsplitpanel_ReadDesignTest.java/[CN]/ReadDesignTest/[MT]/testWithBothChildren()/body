{
  Element design=createDesign(false,false,true,true);
  VerticalSplitPanel sp=new VerticalSplitPanel();
  sp.readDesign(design,ctx);
  assertEquals("Unexpected child count for the split panel.",2,sp.getComponentCount());
  Object first=sp.getFirstComponent();
  Object second=sp.getSecondComponent();
  assertEquals("Wrong first component in split panel.",Table.class,first.getClass());
  assertEquals("Wrong second component in split panel.",VerticalLayout.class,second.getClass());
}
