{
  openTestURL();
  selectMenuPath("Component","Size","HeightMode Row");
  getGridElement().getCell(5,2).click();
  new Actions(getDriver()).sendKeys(Keys.PAGE_DOWN).perform();
  assertTrue("Row 5 did not remain active",getGridElement().getCell(5,2).isActive());
  assertTrue("Row 20 did not become visible",getGridElement().getCell(20,2).isDisplayed());
  new Actions(getDriver()).sendKeys(Keys.PAGE_DOWN).perform();
  assertTrue("Row 5 did not remain active",getGridElement().getCell(5,2).isActive());
  assertTrue("Row 40 did not become visible",getGridElement().getCell(40,2).isDisplayed());
  getGridElement().getCell(50,2).click();
  new Actions(getDriver()).sendKeys(Keys.PAGE_UP).perform();
  assertTrue("Row 50 did not remain active",getGridElement().getCell(50,2).isActive());
  assertTrue("Row 20 did not become visible",getGridElement().getCell(20,2).isDisplayed());
  new Actions(getDriver()).sendKeys(Keys.PAGE_UP).perform();
  assertTrue("Row 50 did not remain active",getGridElement().getCell(50,2).isActive());
  assertTrue("Row 0 did not become visible",getGridElement().getCell(0,2).isDisplayed());
}
