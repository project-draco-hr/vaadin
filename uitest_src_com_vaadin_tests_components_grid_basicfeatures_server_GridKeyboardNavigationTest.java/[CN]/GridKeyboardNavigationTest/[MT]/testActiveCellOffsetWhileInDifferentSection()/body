{
  openTestURL();
  getGridElement().getCell(0,0).click();
  new Actions(getDriver()).sendKeys(Keys.UP).perform();
  assertTrue("Header 0,0 should've become active",getGridElement().getHeaderCell(0,0).isActive());
  selectMenuPath("Component","Body rows","Add first row");
  assertTrue("Header 0,0 should've remained active",getGridElement().getHeaderCell(0,0).isActive());
}
