{
  if ((value == null) || (name == null))   throw new NullPointerException("Parameters must be non-null strings (" + name + "="+ value+ ")");
  if (this.closed)   throw new PaintException("Attempted to write to a closed PaintTarget.");
  if (!mTagArgumentListOpen)   throw new PaintException("XML argument list not open.");
  tagBuffer.append(" " + name + "=\""+ escapeXML(value)+ "\"");
}
