{
  l.setSizeFull();
  Label lbl=new Label("First (expand ratio 1)");
  lbl.setSizeUndefined();
  l.addComponent(lbl);
  lbl=new Label("Second (margin 10px)");
  lbl.setSizeUndefined();
  lbl.addStyleName("hugemargin");
  l.addComponent(lbl);
  lbl=new Label("Third (margin+xr)");
  lbl.setSizeUndefined();
  lbl.addStyleName("hugemargin");
  l.addComponent(lbl);
  Panel p=new Panel(l.getClass().getSimpleName(),l);
  p.setWidth("600px");
  p.setHeight("200px");
  addComponent(p);
}
