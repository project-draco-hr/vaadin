{
  Window w=new Window("Native subwindow");
  Label desc=new Label("This is a new native window with its own state." + " You'll notice that if you open a new window several" + " times, the URL will be unique for each window, and the"+ " amount of windows in memory will increase by one."+ " When you close this window, the amount of windows in"+ " memory should decrease by one."+ " The window is added to the application and then"+ " opened through its unique URL.");
  w.addComponent(desc);
  w.addListener(this);
  getApplication().addWindow(w);
  getApplication().getMainWindow().open(new ExternalResource(w.getURL()),"_blank");
}
