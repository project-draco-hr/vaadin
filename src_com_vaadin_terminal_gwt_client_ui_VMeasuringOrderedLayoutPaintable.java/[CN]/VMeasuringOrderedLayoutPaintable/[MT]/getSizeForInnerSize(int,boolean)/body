{
  LayoutManager layoutManager=getLayoutManager();
  Element element=getWidgetForPaintable().getElement();
  if (isVertical) {
    return size + layoutManager.getBorderHeight(element) + layoutManager.getPaddingHeight(element);
  }
 else {
    return size + layoutManager.getBorderWidth(element) + layoutManager.getPaddingWidth(element);
  }
}
