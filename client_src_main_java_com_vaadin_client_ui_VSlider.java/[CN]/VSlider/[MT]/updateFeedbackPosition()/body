{
  if (isVertical()) {
    feedbackPopup.setPopupPosition(handle.getAbsoluteLeft() + handle.getOffsetWidth(),handle.getAbsoluteTop() + handle.getOffsetHeight() / 2 - feedbackPopup.getOffsetHeight() / 2);
  }
 else {
    feedbackPopup.setPopupPosition(handle.getAbsoluteLeft() + handle.getOffsetWidth() / 2 - feedbackPopup.getOffsetWidth() / 2,handle.getAbsoluteTop() - feedbackPopup.getOffsetHeight());
  }
}
