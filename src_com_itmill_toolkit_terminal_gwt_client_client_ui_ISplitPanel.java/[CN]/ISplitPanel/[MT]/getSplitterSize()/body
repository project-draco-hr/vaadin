{
  if (splitterSize < 0) {
    if (isAttached()) {
switch (orientation) {
case ORIENTATION_HORIZONTAL:
        splitterSize=DOM.getElementPropertyInt(splitter,"offsetWidth");
      break;
default :
    splitterSize=DOM.getElementPropertyInt(splitter,"offsetHeight");
  break;
}
}
}
return splitterSize;
}
