{
  if (variables.containsKey(ShortCutConstants.ACTION_TARGET_ACTION_VARIABLE) && actionMapper != null) {
    final String key=(String)variables.get(ShortCutConstants.ACTION_TARGET_ACTION_VARIABLE);
    final Action action=actionMapper.get(key);
    final Object target=variables.get(ShortCutConstants.ACTION_TARGET_VARIABLE);
    if (action != null) {
      handleAction(action,sender,target);
    }
  }
}
