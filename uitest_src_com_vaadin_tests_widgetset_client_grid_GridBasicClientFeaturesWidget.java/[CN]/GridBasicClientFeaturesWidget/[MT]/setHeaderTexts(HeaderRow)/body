{
  for (int i=0; i < COLUMNS; ++i) {
    String caption="Header (" + headerCounter + ","+ i+ ")";
    if (i % 3 == 0) {
      row.getCell(i).setText(caption);
    }
 else     if (i % 2 == 0) {
      row.getCell(i).setHtml("<b>" + caption + "</b>");
    }
 else {
      row.getCell(i).setWidget(new HTML(caption));
    }
  }
  headerCounter++;
}
