{
  String[] menupath=new String[]{"Component","Row details"};
  addMenuCommand("Set generator",new ScheduledCommand(){
    @Override public void execute(){
      grid.setDetailsGenerator(new DetailsGenerator(){
        @Override public String getDetails(        int rowIndex){
          return "Row: " + rowIndex + ". Lorem ipsum "+ "dolor sit amet, consectetur adipiscing "+ "elit. Morbi congue massa non augue "+ "pulvinar, nec consectetur justo efficitur. "+ "In nec arcu sit amet lorem hendrerit "+ "mollis.";
        }
      }
);
    }
  }
,menupath);
  addMenuCommand("Toggle details for row 1",new ScheduledCommand(){
    boolean visible=false;
    @Override public void execute(){
      visible=!visible;
      grid.setDetailsVisible(1,visible);
    }
  }
,menupath);
  addMenuCommand("Toggle details for row 100",new ScheduledCommand(){
    boolean visible=false;
    @Override public void execute(){
      visible=!visible;
      grid.setDetailsVisible(100,visible);
    }
  }
,menupath);
}
