{
  if (item != null && propertyId != null) {
    final Field<?> f=createField(item.getItemProperty(propertyId),uiContext);
    if (f instanceof AbstractComponent) {
      String name=DefaultFieldFactory.createCaptionByPropertyId(propertyId);
      f.setCaption(name);
    }
    return f;
  }
 else {
    return null;
  }
}
