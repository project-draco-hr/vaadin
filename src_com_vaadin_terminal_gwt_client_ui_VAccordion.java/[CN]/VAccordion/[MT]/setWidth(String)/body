{
  if (this.width.equals(width)) {
    return;
  }
  Util.setWidthExcludingPaddingAndBorder(this,width,2);
  this.width=width;
  if (!rendering) {
    updateOpenTabSize();
    if (isDynamicHeight()) {
      Util.updateRelativeChildrenAndSendSizeUpdateEvent(client,openTab,this);
      updateOpenTabSize();
    }
    if (isDynamicHeight()) {
      openTab.setHeightFromWidget();
    }
    iLayout();
  }
}
