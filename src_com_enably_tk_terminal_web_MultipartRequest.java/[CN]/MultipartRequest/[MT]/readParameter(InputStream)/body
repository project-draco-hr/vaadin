{
  StringBuffer buf=new StringBuffer();
  int read=-1;
  String line=null;
  while (true) {
    read=readLine(in,blockOfBytes);
    if (read < 0)     throw new IOException("Stream ended prematurely.");
    line=new String(blockOfBytes,0,read,charEncoding);
    if (read < blockOfBytes.length && line.indexOf(this.strBoundary) != -1)     break;
 else     buf.append(line);
  }
  if (buf.length() > 0)   buf.setLength(getLengthMinusEnding(buf));
  return buf.toString();
}
