{
  if (panel == null) {
    panel=new Panel("Panel level " + i);
    panel.setSizeFull();
    panel.getContent().setSizeFull();
  }
  Panel p=new Panel("Panel level " + i--);
  p.getContent().setSizeFull();
  p.setSizeFull();
  panel.addComponent(p);
  if (i > 0) {
    createMultilevelPanel(i,p);
  }
  return panel;
}
