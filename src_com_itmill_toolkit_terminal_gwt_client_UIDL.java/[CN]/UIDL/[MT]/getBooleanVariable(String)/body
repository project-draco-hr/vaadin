{
  JSONObject v=(JSONObject)((JSONObject)json.get(1)).get("v");
  if (v == null)   throw new IllegalArgumentException("No variables defined in tag. (requested: " + name + ")");
  JSONBoolean t=(JSONBoolean)v.get(name);
  if (t == null)   throw new IllegalArgumentException("No such variable: " + name);
  return t.booleanValue();
}
