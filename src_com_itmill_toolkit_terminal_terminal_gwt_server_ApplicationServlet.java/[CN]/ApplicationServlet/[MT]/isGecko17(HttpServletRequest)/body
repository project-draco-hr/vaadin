{
  final WebBrowser browser=WebApplicationContext.getApplicationContext(request.getSession()).getBrowser();
  if (browser != null && browser.getBrowserApplication() != null) {
    if (browser.getBrowserApplication().indexOf("rv:1.7.") > 0 && browser.getBrowserApplication().indexOf("Gecko") > 0) {
      return true;
    }
  }
  return false;
}
