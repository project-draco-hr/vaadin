{
  GridLayout gl=new GridLayout(5,5);
  Button b1=new Button("Button 0,4 -> 4,4");
  b1.setCaptionAsHtml(true);
  gl.addComponent(b1,0,0,0,4);
  gl.setColumnExpandRatio(4,2.0f);
  String design="<v-grid-layout><row>" + "<column rowspan=5>" + writeChild(b1) + "</column>"+ "<column colspan=4 rowspan=5 expand='0,0,0,2' />"+ "</row><row>"+ "</row><row>"+ "</row><row>"+ "</row><row>"+ "</row></v-grid-layout>";
  testWrite(design,gl);
  testRead(design,gl);
}
