{
  String value=(String)buttonValues.get(event.getButton());
  System.out.println("clicked [" + value + "]");
  try {
    current=current * 10 + Double.parseDouble(value);
    display.setValue(Double.toString(current));
    staticDisplay.setValue(eventCounter + ": [" + value+ "] "+ Double.toString(current));
  }
 catch (  java.lang.NumberFormatException e) {
    if (operation.equals("+"))     stored+=current;
    if (operation.equals("-"))     stored-=current;
    if (operation.equals("*"))     stored*=current;
    if (operation.equals("/"))     stored/=current;
    if (operation.equals("C"))     stored=current;
    if (value.equals("C"))     stored=0.0;
    operation=value;
    current=0.0;
    display.setValue(Double.toString(stored));
    staticDisplay.setValue(eventCounter + ": [" + value+ "] "+ Double.toString(stored));
    System.out.println("value [" + stored + "]");
  }
  eventCounter++;
}
