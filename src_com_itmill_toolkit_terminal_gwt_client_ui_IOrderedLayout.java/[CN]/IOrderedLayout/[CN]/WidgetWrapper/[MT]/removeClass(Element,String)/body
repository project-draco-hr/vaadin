{
  String classes=DOM.getElementAttribute(e,"class");
  if (e == null) {
    return;
  }
  int i=classes.indexOf(name);
  if (i < 0) {
    return;
  }
  while (i >= 0) {
    classes=classes.substring(0,i) + classes.substring(i + name.length());
    i=classes.indexOf(name);
  }
  DOM.setElementAttribute(e,"class",classes);
}
