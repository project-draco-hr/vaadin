{
  if (lastForcedPixelWidth == pixelWidth) {
    return;
  }
  if (tableMode) {
    if (pixelWidth >= 0) {
      if (clipperDiv == null) {
        createClipperDiv();
      }
    }
 else     if (clipperDiv != null && lastForcedPixelHeight < 0) {
      removeClipperDiv();
    }
  }
  Element e=clipperDiv != null ? clipperDiv : getElementWrappingAlignmentStructures();
  DOM.setStyleAttribute(e,"overflowX",pixelWidth < 0 ? "" : "hidden");
  DOM.setStyleAttribute(e,"width",pixelWidth < 0 ? "" : pixelWidth + "px");
  lastForcedPixelWidth=pixelWidth;
}
