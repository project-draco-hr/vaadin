{
  recalculateLayout();
  if (!(isDynamicHeight() && isDynamicWidth())) {
    for (    ChildComponentContainer componentContainer : widgetToComponentContainer.values()) {
      client.handleComponentRelativeSize(componentContainer.getWidget());
    }
  }
  if (isDynamicHeight()) {
    updateWidgetSizes();
    recalculateLayout();
  }
  recalculateComponentSizesAndAlignments();
  setRootSize();
}
