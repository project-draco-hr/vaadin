{
  final int[] alignments=uidl.getIntArrayAttribute("alignments");
  int alignmentIndex=0;
  final Iterator it=getPaintables().iterator();
  while (it.hasNext()) {
    final AlignmentInfo ai=new AlignmentInfo(alignments[alignmentIndex++]);
    final Element td=DOM.getParent(((Widget)it.next()).getElement());
    if (Util.isIE()) {
      DOM.setElementAttribute(td,"vAlign",ai.getVerticalAlignment());
    }
 else {
      DOM.setStyleAttribute(td,"verticalAlign",ai.getVerticalAlignment());
    }
    if (Util.isIE()) {
      DOM.setElementAttribute(td,"align",ai.getHorizontalAlignment());
    }
 else {
      DOM.setStyleAttribute(td,"textAlign",ai.getHorizontalAlignment());
    }
  }
}
