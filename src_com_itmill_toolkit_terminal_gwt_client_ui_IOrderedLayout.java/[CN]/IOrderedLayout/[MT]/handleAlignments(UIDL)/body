{
  final int[] alignments=uidl.getIntArrayAttribute("alignments");
  int alignmentIndex=0;
  final Iterator it=childWidgetWrappers.iterator();
  while (it.hasNext()) {
    final AlignmentInfo ai=new AlignmentInfo(alignments[alignmentIndex++]);
    final WidgetWrapper wr=(WidgetWrapper)it.next();
    wr.setAlignment(ai.getVerticalAlignment(),ai.getHorizontalAlignment());
    wr.setSpacingEnabled(alignmentIndex == 1 ? false : hasComponentSpacing);
  }
}
