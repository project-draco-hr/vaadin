{
  final int[] alignments=uidl.getIntArrayAttribute("alignments");
  int alignmentIndex=0;
  final Iterator it=getPaintables().iterator();
  boolean first=true;
  while (it.hasNext()) {
    final AlignmentInfo ai=new AlignmentInfo(alignments[alignmentIndex++]);
    final Element wrapper=DOM.getParent(((Widget)it.next()).getElement());
    if (Util.isIE()) {
      DOM.setElementAttribute(wrapper,"vAlign",ai.getVerticalAlignment());
    }
 else {
      DOM.setStyleAttribute(wrapper,"verticalAlign",ai.getVerticalAlignment());
    }
    if (Util.isIE()) {
      DOM.setElementAttribute(wrapper,"align",ai.getHorizontalAlignment());
    }
 else {
      DOM.setStyleAttribute(wrapper,"textAlign",ai.getHorizontalAlignment());
    }
    if (first) {
      setSpacingEnabled(wrapper,false);
      first=false;
    }
 else {
      setSpacingEnabled(wrapper,hasComponentSpacing);
    }
  }
}
