{
  int w=0;
  int h=0;
  if (isHorizontal()) {
    h=activeLayoutSize.getHeight();
    if (!isDynamicWidth()) {
      w=-1;
    }
  }
 else {
    w=activeLayoutSize.getWidth();
    if (!isDynamicHeight()) {
      h=-1;
    }
  }
  for (  ChildComponentContainer childComponentContainer : widgetToComponentContainer.values()) {
    childComponentContainer.updateAlignments(w,h);
  }
}
