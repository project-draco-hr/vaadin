{
  Size sizeBefore=new Size(activeLayoutSize.getWidth(),activeLayoutSize.getHeight());
  super.setWidth(width);
  if (width != null && !width.equals("")) {
    activeLayoutSize.setWidth(getOffsetWidth() - activeMargins.getHorizontal());
  }
  if (!isRendering) {
    recalculateLayoutAndComponentSizes();
    boolean sameSize=(sizeBefore.equals(activeLayoutSize));
    if (!sameSize) {
      client.runDescendentsLayout(this);
    }
  }
}
