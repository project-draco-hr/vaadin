{
  int remaining=spaceForExpansion;
  for (  ChildComponentContainer childComponentContainer : widgetToComponentContainer.values()) {
    remaining-=childComponentContainer.expand(orientation,spaceForExpansion);
  }
  if (remaining > 0) {
    Iterator<Widget> widgetIterator=iterator();
    while (widgetIterator.hasNext() && remaining-- > 0) {
      ChildComponentContainer childComponentContainer=(ChildComponentContainer)widgetIterator.next();
      childComponentContainer.expandExtra(orientation,1);
    }
  }
}
