{
  addComponent(fragmentLabel);
  updateLabel();
  getPage().addListener(new Page.UriFragmentChangedListener(){
    @Override public void uriFragmentChanged(    UriFragmentChangedEvent event){
      updateLabel();
    }
  }
);
  addComponent(new Button("Navigate to #test",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      getPage().setUriFragment("test");
    }
  }
));
  addComponent(new Button("Navigate to #",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      getPage().setUriFragment("");
    }
  }
));
  addComponent(new Button("setUriFragment(null)",new Button.ClickListener(){
    @Override public void buttonClick(    ClickEvent event){
      getPage().setUriFragment(null);
    }
  }
));
}
