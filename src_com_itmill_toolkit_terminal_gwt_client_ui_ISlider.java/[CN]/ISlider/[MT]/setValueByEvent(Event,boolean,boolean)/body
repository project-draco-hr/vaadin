{
  double v=min;
  int coord=vertical ? DOM.eventGetClientY(event) : DOM.eventGetClientX(event);
  String domProperty=vertical ? "offsetHeight" : "offsetWidth";
  double handleSize=Integer.parseInt(DOM.getElementProperty(handle,domProperty));
  double baseSize=Integer.parseInt(DOM.getElementProperty(base,domProperty));
  double baseOffset=vertical ? DOM.getAbsoluteTop(base) - handleSize / 2 : DOM.getAbsoluteLeft(base) + handleSize / 2;
  if (vertical) {
    v=((baseSize - (coord - baseOffset)) / (baseSize - handleSize)) * (max - min) + min;
  }
 else {
    v=((coord - baseOffset) / (baseSize - handleSize)) * (max - min) + min;
  }
  if (v < min) {
    v=min;
  }
 else   if (v > max) {
    v=max;
  }
  setValue(new Double(v),animate,roundup);
}
