{
  if (needsFixedHeight()) {
    int h=getMaxHeight();
    assert(h >= 0);
    h+=getLayoutManager().getBorderHeight(getWidget().getElement()) + getLayoutManager().getPaddingHeight(getWidget().getElement());
    getWidget().getElement().getStyle().setHeight(h,Unit.PX);
    getLayoutManager().setNeedsMeasure(this);
  }
}
