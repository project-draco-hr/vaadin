{
  String input=null;
  String output=null;
  if (args.length < 1 || args.length > 2) {
    System.out.println("usage: SassCompile <scss file to compile> <css file to write>");
    return;
  }
  File in=new File(args[0]);
  if (!in.canRead()) {
    System.err.println(in.getCanonicalPath() + " could not be read!");
    return;
  }
  input=in.getCanonicalPath();
  if (args.length == 2) {
    output=args[1];
  }
  ScssStylesheet scss=ScssStylesheet.get(input);
  if (scss == null) {
    System.err.println("The scss file " + input + " could not be found.");
    return;
  }
  scss.compile();
  if (output == null) {
    System.out.println(scss.printState());
  }
 else {
    writeFile(output,scss.printState());
  }
}
