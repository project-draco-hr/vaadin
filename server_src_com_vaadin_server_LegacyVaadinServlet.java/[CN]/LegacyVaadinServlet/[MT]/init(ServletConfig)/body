{
  super.init(servletConfig);
  getService().addVaadinSessionInitializationListener(new VaadinSessionInitializationListener(){
    @Override public void vaadinSessionInitialized(    VaadinSessionInitializeEvent event) throws ServiceException {
      try {
        onVaadinSessionStarted(event.getRequest(),event.getSession());
      }
 catch (      ServletException e) {
        throw new ServiceException(e);
      }
    }
  }
);
}
