{
  if (errorMessage != null) {
    if (errorContainer == null) {
      errorContainer=new PopupPanel();
      errorContainer.setWidget(errorMessage);
    }
    errorContainer.setPopupPosition(DOM.getAbsoluteLeft(errorIndicatorElement) + 2 * DOM.getIntAttribute(errorIndicatorElement,"offsetHeight"),DOM.getAbsoluteTop(errorIndicatorElement) + 2 * DOM.getIntAttribute(errorIndicatorElement,"offsetHeight"));
    errorContainer.show();
  }
}
