{
  removeSlotFocus();
  if (index > 0)   DOM.setAttribute(DOM.getFirstChild(DOM.getChild(tr,index - 1)),"className",CLASSNAME + "-resizer " + CLASSNAME+ "-focus-slot-right");
 else   DOM.setAttribute(DOM.getFirstChild(DOM.getChild(tr,index)),"className",CLASSNAME + "-resizer " + CLASSNAME+ "-focus-slot-left");
  focusedSlot=index;
}
