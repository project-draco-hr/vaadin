{
  if (emitClickEvents) {
    boolean dbl=DOM.eventGetType(event) == Event.ONDBLCLICK;
    final Element tdOrTr=DOM.getParent(DOM.eventGetTarget(event));
    client.updateVariable(paintableId,"clickedKey","" + rowKey,false);
    if (getElement() == tdOrTr.getParentElement()) {
      int childIndex=DOM.getChildIndex(getElement(),tdOrTr);
      String colKey=null;
      colKey=tHead.getHeaderCell(childIndex).getColKey();
      client.updateVariable(paintableId,"clickedColKey",colKey,false);
    }
    MouseEventDetails details=new MouseEventDetails(event);
    client.updateVariable(paintableId,"clickEvent",details.toString(),!(!dbl && selectMode > Table.SELECT_MODE_NONE && immediate));
  }
}
