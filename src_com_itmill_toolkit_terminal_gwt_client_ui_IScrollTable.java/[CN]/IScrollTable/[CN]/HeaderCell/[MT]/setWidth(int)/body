{
  if (width == -1) {
    DOM.setStyleAttribute(captionContainer,"overflow","");
  }
  width=w;
  if (w == -1) {
    DOM.setStyleAttribute(captionContainer,"width","");
    setWidth("");
  }
 else {
    DOM.setStyleAttribute(captionContainer,"width",(w - DRAG_WIDGET_WIDTH - 4) + "px");
    setWidth(w + "px");
  }
}
