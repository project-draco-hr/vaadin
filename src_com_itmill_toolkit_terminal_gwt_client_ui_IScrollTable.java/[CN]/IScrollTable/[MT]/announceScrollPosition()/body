{
  client.console.log("" + firstRowInViewPort);
  if (scrollPositionElement == null) {
    scrollPositionElement=DOM.createDiv();
    DOM.setAttribute(scrollPositionElement,"className","i-table-scrollposition");
    DOM.appendChild(getElement(),scrollPositionElement);
  }
  DOM.setStyleAttribute(scrollPositionElement,"left",(DOM.getAbsoluteLeft(getElement()) + DOM.getIntAttribute(getElement(),"offsetWidth") / 2 - 75) + "px");
  DOM.setStyleAttribute(scrollPositionElement,"top",(DOM.getAbsoluteTop(getElement()) + DOM.getIntAttribute(getElement(),"offsetHeight") / 2 - 20) + "px");
  int last=(firstRowInViewPort + pageLength);
  if (last > totalRows)   last=totalRows;
  DOM.setInnerHTML(scrollPositionElement,firstRowInViewPort + " - " + last+ "...");
  DOM.setStyleAttribute(scrollPositionElement,"display","block");
}
