{
  ApplicationConnection.getConsole().log("" + firstRowInViewPort);
  if (scrollPositionElement == null) {
    scrollPositionElement=DOM.createDiv();
    DOM.setElementProperty(scrollPositionElement,"className","i-table-scrollposition");
    DOM.appendChild(RootPanel.get().getElement(),scrollPositionElement);
  }
  DOM.setStyleAttribute(scrollPositionElement,"left",(DOM.getAbsoluteLeft(getElement()) + DOM.getElementPropertyInt(getElement(),"offsetWidth") / 2 - 75) + "px");
  DOM.setStyleAttribute(scrollPositionElement,"top",(DOM.getAbsoluteTop(getElement())) + "px");
  int last=(firstRowInViewPort + pageLength);
  if (last > totalRows)   last=totalRows;
  DOM.setInnerHTML(scrollPositionElement,firstRowInViewPort + " - " + last+ "...");
  DOM.setStyleAttribute(scrollPositionElement,"display","block");
}
