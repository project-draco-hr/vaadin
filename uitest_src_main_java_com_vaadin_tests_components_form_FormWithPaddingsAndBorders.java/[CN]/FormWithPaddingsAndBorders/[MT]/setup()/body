{
  getLayout().setSizeFull();
  TestUtils.injectCSS(getMainWindow(),".v-form{ border: 10px solid red; padding:10px;}");
  final Form f=new Form();
  addComponent(f);
  f.setSizeUndefined();
  f.getLayout().setSizeUndefined();
  f.addField("foo",new LegacyTextField("Foo"));
  f.addField("bar",new LegacyTextField("A bit longer field caption"));
  HorizontalLayout hl=new HorizontalLayout();
  hl.setWidth("100%");
  Button b=new Button("right aligned");
  hl.addComponent(b);
  hl.setComponentAlignment(b,Alignment.TOP_RIGHT);
  f.setFooter(hl);
}
